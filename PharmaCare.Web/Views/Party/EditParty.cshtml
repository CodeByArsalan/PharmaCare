@model PharmaCare.Domain.Entities.Configuration.Party
@{
    ViewData["Title"] = "Edit Party";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-edit"></i>
        Edit Party
    </h4>
    <a asp-action="PartiesIndex" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="EditParty" method="post">
            <input type="hidden" asp-for="PartyID" />
            <input type="hidden" asp-for="Code" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="IsActive" value="true" />
            
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Party Code</label>
                    <input value="@Model.Code" class="form-control" disabled />
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Party Type <span class="text-danger">*</span></label>
                    <select asp-for="PartyType" class="form-select" required>
                        <option value="Customer">Customer</option>
                        <option value="Supplier">Supplier</option>
                    </select>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter party name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Phone</label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Opening Balance</label>
                    <input asp-for="OpeningBalance" type="number" step="0.01" class="form-control" placeholder="0.00" />
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Credit Limit</label>
                    <input asp-for="CreditLimit" type="number" step="0.01" class="form-control" placeholder="0.00" />
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                </div>
            </div>
            
            <div class="text-end mt-4">
                <a asp-action="PartiesIndex" class="btn btn-outline-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update Party
                </button>
            </div>
        </form>
    </div>
</div>
