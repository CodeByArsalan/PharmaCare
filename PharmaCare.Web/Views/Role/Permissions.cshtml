@model List<PharmaCare.Application.DTOs.Security.RolePagePermissionDTO>
@{
    ViewData["Title"] = "Manage Permissions";
    var role = ViewBag.Role as PharmaCare.Domain.Entities.Security.Role;
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-key"></i>
        Permissions for: @role?.Name
    </h4>
    <a asp-action="RolesIndex" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Roles
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <span><i class="fas fa-shield-alt me-2"></i>Page Permissions</span>
            <div>
                <button type="button" class="btn btn-sm btn-outline-success" id="checkAll">
                    <i class="fas fa-check-double me-1"></i>Check All View
                </button>
                <button type="button" class="btn btn-sm btn-outline-danger" id="uncheckAll">
                    <i class="fas fa-times me-1"></i>Uncheck All
                </button>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <form asp-action="SavePermissions" method="post">
            <input type="hidden" name="roleId" value="@role?.RoleID" />
            
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th style="width: 30%;">Page</th>
                        <th style="width: 20%;">Controller/Action</th>
                        <th class="text-center" style="width: 12.5%;">
                            <i class="fas fa-eye me-1"></i>View
                        </th>
                        <th class="text-center" style="width: 12.5%;">
                            <i class="fas fa-plus me-1"></i>Create
                        </th>
                        <th class="text-center" style="width: 12.5%;">
                            <i class="fas fa-edit me-1"></i>Edit
                        </th>
                        <th class="text-center" style="width: 12.5%;">
                            <i class="fas fa-trash me-1"></i>Delete
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        var isParent = !item.ParentId.HasValue;
                        <tr class="@(isParent ? "table-secondary fw-bold" : "")">
                            <td>
                                <input type="hidden" name="permissions[@i].PageId" value="@item.PageId" />
                                @if (!isParent)
                                {
                                    <span class="ms-4">â”” </span>
                                }
                                @item.PageTitle
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Controller))
                                {
                                    <code>@item.Controller/@item.Action</code>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="form-check d-flex justify-content-center">
                                    <input class="form-check-input perm-view" type="checkbox" 
                                           name="permissions[@i].CanView" value="true"
                                           @(item.CanView ? "checked" : "") />
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="form-check d-flex justify-content-center">
                                    <input class="form-check-input perm-create" type="checkbox" 
                                           name="permissions[@i].CanCreate" value="true"
                                           @(item.CanCreate ? "checked" : "") />
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="form-check d-flex justify-content-center">
                                    <input class="form-check-input perm-edit" type="checkbox" 
                                           name="permissions[@i].CanEdit" value="true"
                                           @(item.CanEdit ? "checked" : "") />
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="form-check d-flex justify-content-center">
                                    <input class="form-check-input perm-delete" type="checkbox" 
                                           name="permissions[@i].CanDelete" value="true"
                                           @(item.CanDelete ? "checked" : "") />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            <div class="card-footer text-end">
                <a asp-action="RolesIndex" class="btn btn-outline-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Permissions
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Check All View
        document.getElementById('checkAll').addEventListener('click', function() {
            document.querySelectorAll('.perm-view').forEach(cb => cb.checked = true);
        });
        
        // Uncheck All
        document.getElementById('uncheckAll').addEventListener('click', function() {
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
        });
        
        // When View is unchecked, uncheck all others in the row
        document.querySelectorAll('.perm-view').forEach(function(viewCb) {
            viewCb.addEventListener('change', function() {
                if (!this.checked) {
                    const row = this.closest('tr');
                    row.querySelectorAll('.perm-create, .perm-edit, .perm-delete').forEach(cb => cb.checked = false);
                }
            });
        });
        
        // When Create/Edit/Delete is checked, auto-check View
        document.querySelectorAll('.perm-create, .perm-edit, .perm-delete').forEach(function(cb) {
            cb.addEventListener('change', function() {
                if (this.checked) {
                    const row = this.closest('tr');
                    row.querySelector('.perm-view').checked = true;
                }
            });
        });
    </script>
}
