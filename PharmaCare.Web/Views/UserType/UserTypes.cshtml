@model PharmaCare.Domain.ViewModels.UserTypesViewModel
@using PharmaCare.Web.Utilities

@{
    ViewData["Title"] = "User Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Add/Edit User Type Card -->
<div class="card card-outline rounded-0 card-navy mb-3">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class='bx @(Model.IsEditMode ? "bx-edit" : "bx-plus-circle") me-1'></i>
            @(Model.IsEditMode ? "Edit User Type" : "Add User Type")
        </h5>
    </div>
    <div class="card-body mt-2">
        <form asp-action="@(Model.IsEditMode ? "EditUserType" : "AddUserType")" method="post" id="userTypeForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CurrentUserType.UserTypeID" />
            <input type="hidden" asp-for="IsEditMode" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Label Row -->
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="CurrentUserType.UserType" class="form-label">User Type Name <span class="text-danger">*</span></label>
                </div>
            </div>

            <!-- Input and Button Row -->
            <div class="row">
                <div class="col-md-9 col-lg-9">
                    <input asp-for="CurrentUserType.UserType" class="form-control"
                        placeholder="Enter user type name (e.g., Administrator, Manager)" autofocus />
                </div>
                <div class="col-md-3 col-lg-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn @(Model.IsEditMode ? "btn-info" : "btn-success")">
                            <i class='bx @(Model.IsEditMode ? "bx-check" : "bx-plus") me-1'></i>
                            @(Model.IsEditMode ? "Update" : "Add")
                        </button>
                        @if (Model.IsEditMode)
                        {
                            <a asp-action="UserTypes" class="btn btn-secondary">
                                <i class='bx bx-x me-1'></i> Cancel
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Validation Message Row -->
            <div class="row">
                <div class="col-md-12">
                    <span asp-validation-for="CurrentUserType.UserType" class="text-danger small"></span>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- User Types Index Card -->
<div class="card card-outline rounded-0 card-navy">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class='bx bx-list-ul me-1'></i> User Types List
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.UserTypesList.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered dataTable" id="userTypesTable">
                    <thead class="table-dark">
                        <tr>
                            <th>S.No</th>
                            <th>Type Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var userType in Model.UserTypesList)
                        {
                            <tr class="@(!userType.IsActive ? "table-secondary" : "")">
                                <td>
                                    <span class="badge bg-light text-dark">@index</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="icon-circle icon-circle-purple me-3">
                                            <i class='bx bxs-user-badge'></i>
                                        </div>
                                        <strong>@userType.UserType</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (userType.IsActive)
                                    {
                                        <span class="badge bg-success"><i class='bx bx-check-circle me-1'></i>Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class='bx bx-x-circle me-1'></i>Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="EditUserType"
                                            asp-route-id="@Utility.EncryptURL(userType.UserTypeID.ToString2())"
                                            class="btn btn-sm btn-info text-white" title="Edit">
                                            <i class='bx bx-edit'></i>
                                        </a>
                                        <form asp-action="DeleteUserType"
                                            asp-route-id="@Utility.EncryptURL(userType.UserTypeID.ToString2())" method="post"
                                            class="d-inline">
                                            @Html.AntiForgeryToken()
                                            @if (userType.IsActive)
                                            {
                                                <button type="button" class="btn btn-warning btn-sm toggle-btn" title="Deactivate"
                                                    data-action="deactivate">
                                                    <i class="bx bx-power-off"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-success btn-sm toggle-btn" title="Activate"
                                                    data-action="activate">
                                                    <i class="bx bx-check"></i>
                                                </button>
                                            }
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class='bx bx-folder-open display-1 text-muted'></i>
                <p class="text-muted mt-3">No user types found. Add your first user type using the form above.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Toggle status confirmation with SweetAlert
            $('.toggle-btn').click(function (e) {
                e.preventDefault();
                var form = $(this).closest('form');
                var action = $(this).data('action');
                var isDeactivate = action === 'deactivate';

                Swal.fire({
                    title: "Attention",
                    text: isDeactivate
                        ? "Are you sure you want to deactivate this user type? It will no longer be available for new users."
                        : "Are you sure you want to activate this user type? It will become available for new users.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: isDeactivate ? "#F59E0B" : "#22C55E",
                    cancelButtonColor: "#6B7280",
                    confirmButtonText: isDeactivate ? "Yes, Deactivate!" : "Yes, Activate!"
                }).then(function (result) {
                    if (result.value) {
                        form.submit();
                    }
                });
            });

            // Focus on input if in edit mode
        @if (Model.IsEditMode)
        {
            <text>
                        $('#CurrentUserType_UserType').focus().select();
            </text>
        }
        });
    </script>
}
