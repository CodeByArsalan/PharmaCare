@model PharmaCare.Application.DTOs.Accounting.BalanceSheetDto
@{
    ViewData["Title"] = "Balance Sheet";
}

<div class="row page-titles mb-2 mt-2 d-print-none">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary fw-bold text-uppercase mb-0">Balance Sheet</h3>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <button onclick="window.print()" class="btn btn-info">
            <i class="bx bx-print me-1"></i> Print Report
        </button>
    </div>
</div>

<div class="container-fluid p-0">
    <div class="card border-0 shadow-sm rounded-3 mb-4 d-print-none">
        <div class="card-body p-3">
            <form asp-action="BalanceSheet" method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label small fw-bold text-secondary">As of Date</label>
                    <input type="date" name="asOfDate" value="@Model.AsOfDate.ToString("yyyy-MM-dd")"
                        class="form-control rounded-3 shadow-sm" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bx bx-sync-alt me-1"></i> Regenerate
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Header (Print Only) -->
    <div class="d-none d-print-block text-center mb-5">
        <h1 class="fw-bold mb-1">PharmaCare</h1>
        <h3 class="text-uppercase mb-2">Balance Sheet</h3>
        <p class="text-muted">As of @Model.AsOfDate.ToString("dd MMMM yyyy")</p>
        <hr />
    </div>

    <div class="row">
        <!-- ASSETS -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-header bg-primary text-white p-3">
                    <h5 class="card-title mb-0 fw-bold">ASSETS</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <tbody>
                                @foreach (var asset in Model.Assets)
                                {
                                    <tr>
                                        <td class="ps-4">@asset.AccountName</td>
                                        <td class="text-end pe-4 fw-bold">@asset.Amount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light border-top border-2">
                                <tr class="fw-bold h5">
                                    <td class="ps-4 py-3">Total Assets</td>
                                    <td class="text-end pe-4 py-3 text-primary">@Model.TotalAssets.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <!-- LIABILITIES -->
            <div class="card border-0 shadow-sm rounded-3 mb-4 overflow-hidden">
                <div class="card-header bg-danger text-white p-3">
                    <h5 class="card-title mb-0 fw-bold">LIABILITIES</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <tbody>
                                @foreach (var liab in Model.Liabilities)
                                {
                                    <tr>
                                        <td class="ps-4">@liab.AccountName</td>
                                        <td class="text-end pe-4 fw-bold">@liab.Amount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light border-top border-2">
                                <tr class="fw-bold">
                                    <td class="ps-4 py-2">Total Liabilities</td>
                                    <td class="text-end pe-4 py-2 text-danger">@Model.TotalLiabilities.ToString("N2")
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- EQUITY -->
            <div class="card border-0 shadow-sm rounded-3 mb-4 overflow-hidden">
                <div class="card-header bg-success text-white p-3">
                    <h5 class="card-title mb-0 fw-bold">EQUITY</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <tbody>
                                @foreach (var eq in Model.Equity)
                                {
                                    <tr>
                                        <td class="ps-4">@eq.AccountName</td>
                                        <td class="text-end pe-4 fw-bold">@eq.Amount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light border-top border-2">
                                <tr class="fw-bold">
                                    <td class="ps-4 py-2">Total Equity</td>
                                    <td class="text-end pe-4 py-2 text-success">@Model.TotalEquity.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Total Liabilities + Equity -->
            <div class="card border-0 bg-light-soft shadow-sm rounded-3 overflow-hidden">
                <div class="card-body p-3 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 fw-bold">Total Liabilities & Equity</h4>
                    <h4 class="mb-0 fw-bold text-dark">@((Model.TotalLiabilities + Model.TotalEquity).ToString("N2"))
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>
