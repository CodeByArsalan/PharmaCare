@model IEnumerable<PharmaCare.Application.DTOs.Accounting.ChartOfAccountDto>
@{
    ViewData["Title"] = "Chart of Accounts";
}

<div class="row">
    <div class="col-12">
        <div class="card card-outline rounded-0 card-navy">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Chart of Accounts</h5>
                <a asp-action="AddChartOfAccount" class="btn btn-success btn-sm">
                    <i class="bx bx-plus"></i> Add Account
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped table-bordered dataTable" id="chartTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Head</th>
                                <th>Subhead</th>
                                <th>Account Name</th>
                                <th>Type</th>
                                <th>Account No</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.HeadName</td>
                                    <td>@item.SubheadName</td>
                                    <td>@item.AccountName</td>
                                    <td>
                                        <span class="badge bg-info">@item.AccountType</span>
                                    </td>
                                    <td>@item.AccountNo</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-action="EditChartOfAccount" asp-route-id="@item.AccountID.EncryptId()"
                                               class="btn btn-sm btn-info text-white" title="Edit">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                            <form asp-action="DeleteChartOfAccount"
                                                asp-route-id="@item.AccountID.EncryptId()" method="post"
                                                style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="button" class="btn btn-danger btn-sm" title="Delete"
                                                    onclick="confirmDelete(this)">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#chartTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
        });

        function confirmDelete(btn) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $(btn).closest('form').submit();
                }
            });
        }
    </script>
}
