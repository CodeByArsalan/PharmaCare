@model PharmaCare.Domain.Entities.Configuration.Category
@inject PharmaCare.Infrastructure.Interfaces.IComboboxRepository _combobox
@{
    ViewData["Title"] = "Add New Category";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-plus-circle"></i>
        Add New Category
    </h4>
    <a asp-action="CategoriesIndex" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="AddCategory" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Category Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Sale Account <span class="text-danger">*</span></label>
                    <select asp-for="SaleAccount_ID" asp-items="_combobox.GetAccountsByType(8)" class="form-select" required>
                        <option value="">-- Select Account --</option>
                    </select>
                    <span asp-validation-for="SaleAccount_ID" class="text-danger small"></span>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Stock Account <span class="text-danger">*</span></label>
                    <select asp-for="StockAccount_ID" asp-items="_combobox.GetAccountsByType(6)" class="form-select" required>
                        <option value="">-- Select Account --</option>
                    </select>
                    <span asp-validation-for="StockAccount_ID" class="text-danger small"></span>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Consumption Account <span class="text-danger">*</span></label>
                    <select asp-for="COGSAccount_ID" asp-items="_combobox.GetAccountsByType(7)" class="form-select" required>
                        <option value="">-- Select Account --</option>
                    </select>
                    <span asp-validation-for="COGSAccount_ID" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Damage Account <span class="text-danger">*</span></label>
                    <select asp-for="DamageAccount_ID" asp-items="_combobox.GetAccountsByType(9)" class="form-select" required>
                        <option value="">-- Select Account --</option>
                    </select>
                    <span asp-validation-for="DamageAccount_ID" class="text-danger small"></span>
                </div>
            </div>
            
            <div class="text-end mt-4">
                <a asp-action="CategoriesIndex" class="btn btn-outline-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Category
                </button>
            </div>
        </form>
    </div>
</div>
