@model PharmaCare.Domain.Entities.Configuration.Category
@{
    ViewData["Title"] = "Edit Category";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-edit"></i>
        Edit Category
    </h4>
    <a asp-action="CategoriesIndex" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="EditCategory" method="post">
            <input type="hidden" asp-for="CategoryID" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="IsActive" value="true" />
            
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Category Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Sale Account</label>
                    <select asp-for="SaleAccount_ID" asp-items="_combobox.GetActiveAccounts(Model.SaleAccount_ID)" class="form-select">
                        <option value="">-- Select Account --</option>
                    </select>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Stock Account</label>
                    <select asp-for="StockAccount_ID" asp-items="_combobox.GetActiveAccounts(Model.StockAccount_ID)" class="form-select">
                        <option value="">-- Select Account --</option>
                    </select>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Consumption Account</label>
                    <select asp-for="COGSAccount_ID" asp-items="_combobox.GetActiveAccounts(Model.COGSAccount_ID)" class="form-select">
                        <option value="">-- Select Account --</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Damage Account</label>
                    <select asp-for="DamageAccount_ID" asp-items="_combobox.GetActiveAccounts(Model.DamageAccount_ID)" class="form-select">
                        <option value="">-- Select Account --</option>
                    </select>
                </div>
            </div>
            
            <div class="text-end mt-4">
                <a asp-action="CategoriesIndex" class="btn btn-outline-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update Category
                </button>
            </div>
        </form>
    </div>
</div>
