@model IEnumerable<PharmaCare.Domain.Entities.Configuration.Store>
@{
    ViewData["Title"] = "Stores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="text-light mb-0"><i class="fas fa-store me-2"></i>Store Management</h4>
        <p class="text-secondary mb-0">Manage your business locations</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add Store
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th width="150">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var store in Model)
                    {
                        <tr>
                            <td>@store.Name</td>
                            <td>@store.Address</td>
                            <td>@store.Phone</td>
                            <td>
                                @if (store.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@store.StoreID" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@store.StoreID" method="post" class="d-inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this store?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
