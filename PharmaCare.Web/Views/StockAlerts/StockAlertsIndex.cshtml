@model List<PharmaCare.Domain.Models.Inventory.StockAlert>

@{
    ViewData["Title"] = "Stock Alerts";
    var alertType = ViewBag.AlertType as string;
    var severity = ViewBag.Severity as string;
}

<div class="container-fluid p-0">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-0">
                <span class="text-muted fw-light"></span> Stock Alerts Dashboard
            </h4>
        </div>
        <form asp-action="GenerateAlerts" method="post">
            <button type="submit" class="btn btn-primary">
                <i class="bx bx-refresh me-1"></i> Scan for Issues
            </button>
        </form>
    </div>

    <!-- Summary Metrics -->
    <div class="row mb-4">
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-secondary me-3">
                        <i class="bx bx-bell"></i>
                    </div>
                    <div>
                        <p class="metric-label">Total Active</p>
                        <h4 class="metric-value">@Model.Count</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card border-critical">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-danger me-3">
                        <i class="bx bx-error"></i>
                    </div>
                    <div>
                        <p class="metric-label">Critical</p>
                        <h4 class="metric-value text-danger">@Model.Count(a => a.Severity == "Critical")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-warning me-3">
                        <i class="bx bx-error-alt"></i>
                    </div>
                    <div>
                        <p class="metric-label">High Priority</p>
                        <h4 class="metric-value text-warning">@Model.Count(a => a.Severity == "High")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-info me-3">
                        <i class="bx bx-info-circle"></i>
                    </div>
                    <div>
                        <p class="metric-label">Medium Priority</p>
                        <h4 class="metric-value text-info">@Model.Count(a => a.Severity == "Medium")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Table -->
    <div class="card shadow-sm">
        <div class="card-header border-bottom">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-md-3">
                    <label class="form-label d-none d-md-block">Filter by Type</label>
                    <select name="type" class="form-select" onchange="this.form.submit()">
                        <option value="">All Types</option>
                        <option value="LowStock" selected="@(alertType == "LowStock")">Low Stock</option>
                        <option value="Expiring" selected="@(alertType == "Expiring")">Expiring Assets</option>
                        <option value="OutOfStock" selected="@(alertType == "OutOfStock")">Out of Stock</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label d-none d-md-block">Filter by Severity</label>
                    <select name="severity" class="form-select" onchange="this.form.submit()">
                        <option value="">All Severities</option>
                        <option value="Critical" selected="@(severity == "Critical")">Critical</option>
                        <option value="High" selected="@(severity == "High")">High</option>
                        <option value="Medium" selected="@(severity == "Medium")">Medium</option>
                    </select>
                </div>
                <div class="col-md-6 text-md-end pt-md-4">
                    <div class="input-group input-group-merge input-group">
                        <span class="input-group-text"><i class="bx bx-search"></i></span>
                        <input type="text" id="alertSearch" class="form-control" placeholder="Search product or message..." />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="alertsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Alert Category</th>
                            <th>Product Information</th>
                            <th>Issue Description</th>
                            <th>Severity</th>
                            <th>Detected On</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var alert in Model.OrderByDescending(a => a.CreatedDate))
                            {
                                <tr>
                                    <td>
                                        <span class="badge @(alert.AlertType == "LowStock" ? "bg-label-warning" : 
                                                            alert.AlertType == "OutOfStock" ? "bg-label-danger" : "bg-label-info")">
                                            @alert.AlertType
                                        </span>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@alert.Product?.ProductName</div>
                                        <small class="text-muted">@alert.Product?.Sku</small>
                                    </td>
                                    <td>
                                        <span class="text-wrap">@alert.Message</span>
                                    </td>
                                    <td>
                                        <span class="badge rounded-pill @(alert.Severity == "Critical" ? "bg-danger" : 
                                                                        alert.Severity == "High" ? "bg-warning" : "bg-info")">
                                            @alert.Severity
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>@alert.CreatedDate.ToString("dd MMM yyyy")</span>
                                            <small class="text-muted">@alert.CreatedDate.ToString("HH:mm")</small>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <form asp-action="ResolveAlert" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@alert.StockAlertID" />
                                            <button type="submit" class="btn btn-sm btn-icon btn-label-success" title="Mark as Resolved">
                                                <i class="bx bx-check"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="bx bx-check-double empty-state-icon text-success"></i>
                                        <h5 class="mt-3">All clear!</h5>
                                        <p class="text-muted">No active stock alerts detected. You're all caught up.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#alertSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#alertsTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <style>
        .bg-label-danger { background-color: rgba(239, 68, 68, 0.16) !important; color: #EF4444 !important; }
        .bg-label-warning { background-color: rgba(245, 158, 11, 0.16) !important; color: #F59E0B !important; }
        .bg-label-info { background-color: rgba(139, 92, 246, 0.16) !important; color: #8B5CF6 !important; }
        .bg-label-secondary { background-color: rgba(100, 116, 139, 0.16) !important; color: #64748B !important; }
        .bg-label-success { background-color: rgba(34, 197, 94, 0.16) !important; color: #22C55E !important; }
        .btn-label-success { background-color: rgba(34, 197, 94, 0.1) !important; color: #22C55E !important; border-color: transparent; }
        .btn-label-success:hover { background-color: #22C55E !important; color: #fff !important; }
        .border-critical { border-left: 4px solid #EF4444 !important; }
        .text-wrap { word-break: break-all; }
    </style>
}
