@inject PharmaCare.Infrastructure.Interfaces.IComboBoxRepository _comboBox

@{
    ViewData["Title"] = "New Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    <span class="text-muted fw-light">Sales /</span> New Sale
                </h4>
                <a asp-action="Index" asp-controller="Pos" class="btn btn-secondary">
                    <i class="bx bx-arrow-back me-1"></i> Back to POS
                </a>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center border-bottom">
                    <h5 class="mb-0"><i class="bx bx-cart-add me-2"></i>Sale Details</h5>
                </div>
                <div class="card-body pt-4">
                    <form id="newSaleForm">
                        <!-- Customer Section -->
                        <div class="row mb-4">
                            <div class="col-md-4 mb-3">
                                <label class="form-label fw-bold">Customer Type</label>
                                <div class="btn-group w-100" role="group">
                                    <input type="radio" class="btn-check" name="customerType" id="typeWalkIn" checked
                                        onchange="toggleCustomerType()">
                                    <label class="btn btn-outline-primary" for="typeWalkIn">Walk-in Customer</label>

                                    <input type="radio" class="btn-check" name="customerType" id="typeRegistered"
                                        onchange="toggleCustomerType()">
                                    <label class="btn btn-outline-primary" for="typeRegistered">Registered Customer</label>
                                </div>
                            </div>

                            <div id="registeredCustomerDiv" class="col-md-4 mb-3 d-none">
                                <label class="form-label fw-bold">Select Customer</label>
                                <select class="form-select" id="customerSelect" asp-items="@(await _comboBox.GetCustomersAsync())">
                                    <option value="">-- Select Customer --</option>
                                </select>
                            </div>

                            <div id="walkInDiv" class="col-md-8">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Customer Name <span class="text-muted">(Optional)</span></label>
                                        <input type="text" class="form-control" id="customerName" placeholder="Enter customer name">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Phone <span class="text-muted">(Optional)</span></label>
                                        <input type="text" class="form-control" id="customerPhone" placeholder="Enter phone number">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Items Grid -->
                        <div class="card border mb-4">
                            <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                                <span class="fw-bold"><i class="bx bx-list-ul me-1"></i> Sale Items</span>
                                <button type="button" class="btn btn-primary btn-sm" id="addRowBtn">
                                    <i class="bx bx-plus me-1"></i> Add Row
                                </button>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-bordered align-middle mb-0" id="itemsTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th width="5%">S.No</th>
                                            <th width="30%">Product</th>
                                            <th width="12%">Quantity</th>
                                            <th width="15%">Price</th>
                                            <th width="20%">Discount</th>
                                            <th width="12%">Amount</th>
                                            <th width="6%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Initial Row -->
                                        <tr class="item-row">
                                            <td class="text-center sno">1</td>
                                            <td>
                                                <select name="Items[0].ProductID" class="form-select product-select" asp-items="@(await _comboBox.GetProductsAsync())" required>
                                                    <option value="">-- Select Product --</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input type="number" name="Items[0].Quantity" class="form-control qty-input" min="1" value="1" required>
                                            </td>
                                            <td>
                                                <input type="number" name="Items[0].Price" class="form-control price-input" step="0.01" min="0" placeholder="0.00" required>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="number" name="Items[0].Discount" class="form-control discount-input" step="0.01" min="0" placeholder="0" value="0">
                                                    <select name="Items[0].DiscountType" class="form-select discount-type" style="max-width: 70px;">
                                                        <option value="amount">Rs</option>
                                                        <option value="percent">%</option>
                                                    </select>
                                                </div>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control bg-light row-amount" readonly value="0.00">
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-label-danger remove-row-btn d-none">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot class="table-secondary">
                                        <tr>
                                            <th colspan="2" class="text-end">Totals:</th>
                                            <td><strong id="totalQty">0</strong></td>
                                            <td></td>
                                            <td><strong class="text-danger">Rs. <span id="totalDiscount">0.00</span></strong></td>
                                            <td><strong class="text-primary">Rs. <span id="totalAmount">0.00</span></strong></td>
                                            <td></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>

                        <!-- Summary & Actions -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <h6 class="fw-bold mb-3"><i class="bx bx-calculator me-1"></i> Sale Summary</h6>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Total Quantity:</span>
                                            <strong id="summaryQty">0</strong>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Total Discount:</span>
                                            <strong class="text-danger">Rs. <span id="summaryDiscount">0.00</span></strong>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between">
                                            <span class="h5 mb-0">Total Amount:</span>
                                            <span class="h4 mb-0 text-primary">Rs. <span id="summaryAmount">0.00</span></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 d-flex align-items-end justify-content-end">
                                <div class="d-flex gap-3">
                                    <a asp-action="Index" class="btn btn-label-secondary px-4">
                                        <i class="bx bx-x me-1"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn btn-success px-4">
                                        <i class="bx bx-check-circle me-1"></i> Save Sale
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Template for new rows (hidden) -->
<table class="d-none">
    <tr id="rowTemplate">
        <td class="text-center sno">IDX</td>
        <td>
            <select name="Items[IDX].ProductID" class="form-select product-select" asp-items="@(await _comboBox.GetProductsAsync())" required>
                <option value="">-- Select Product --</option>
            </select>
        </td>
        <td>
            <input type="number" name="Items[IDX].Quantity" class="form-control qty-input" min="1" value="1" required>
        </td>
        <td>
            <input type="number" name="Items[IDX].Price" class="form-control price-input" step="0.01" min="0" placeholder="0.00" required>
        </td>
        <td>
            <div class="input-group">
                <input type="number" name="Items[IDX].Discount" class="form-control discount-input" step="0.01" min="0" placeholder="0" value="0">
                <select name="Items[IDX].DiscountType" class="form-select discount-type" style="max-width: 70px;">
                    <option value="amount">Rs</option>
                    <option value="percent">%</option>
                </select>
            </div>
        </td>
        <td>
            <input type="text" class="form-control bg-light row-amount" readonly value="0.00">
        </td>
        <td>
            <button type="button" class="btn btn-sm btn-label-danger remove-row-btn">
                <i class="bx bx-trash"></i>
            </button>
        </td>
    </tr>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            let rowIdx = 1;

            // Toggle customer type
            window.toggleCustomerType = function () {
                if ($('#typeRegistered').is(':checked')) {
                    $('#registeredCustomerDiv').removeClass('d-none');
                    $('#walkInDiv').addClass('d-none');
                } else {
                    $('#registeredCustomerDiv').addClass('d-none');
                    $('#walkInDiv').removeClass('d-none');
                }
            };

            // Add new row
            $('#addRowBtn').click(function () {
                let template = $('#rowTemplate').html();
                let newRow = template.replaceAll('IDX', rowIdx);
                $('#itemsTable tbody').append('<tr class="item-row">' + newRow + '</tr>');
                rowIdx++;
                updateSerialNumbers();
                updateRemoveButtons();
            });

            // Remove row
            $(document).on('click', '.remove-row-btn', function () {
                $(this).closest('tr').remove();
                reindexRows();
                updateSerialNumbers();
                updateRemoveButtons();
                calculateTotals();
            });

            // Reindex rows after removal
            function reindexRows() {
                rowIdx = 0;
                $('#itemsTable tbody tr.item-row').each(function () {
                    $(this).find('[name^="Items"]').each(function () {
                        let name = $(this).attr('name');
                        $(this).attr('name', name.replace(/\[\d+\]/, '[' + rowIdx + ']'));
                    });
                    rowIdx++;
                });
            }

            // Update serial numbers
            function updateSerialNumbers() {
                let sno = 1;
                $('#itemsTable tbody tr.item-row').each(function () {
                    $(this).find('.sno').text(sno);
                    sno++;
                });
            }

            // Show/hide remove buttons
            function updateRemoveButtons() {
                if ($('#itemsTable tbody tr.item-row').length > 1) {
                    $('.remove-row-btn').removeClass('d-none');
                } else {
                    $('.remove-row-btn').addClass('d-none');
                }
            }

            // Calculate row amount
            function calculateRowAmount($row) {
                let qty = parseFloat($row.find('.qty-input').val()) || 0;
                let price = parseFloat($row.find('.price-input').val()) || 0;
                let discount = parseFloat($row.find('.discount-input').val()) || 0;
                let discountType = $row.find('.discount-type').val();

                let subtotal = qty * price;
                let discountAmount = discountType === 'percent' ? (subtotal * discount / 100) : discount;
                let amount = subtotal - discountAmount;

                $row.find('.row-amount').val(amount.toFixed(2));
                return { qty, discountAmount, amount };
            }

            // Calculate totals
            function calculateTotals() {
                let totalQty = 0;
                let totalDiscount = 0;
                let totalAmount = 0;

                $('#itemsTable tbody tr.item-row').each(function () {
                    let result = calculateRowAmount($(this));
                    totalQty += result.qty;
                    totalDiscount += result.discountAmount;
                    totalAmount += result.amount;
                });

                // Update footer
                $('#totalQty').text(totalQty);
                $('#totalDiscount').text(totalDiscount.toFixed(2));
                $('#totalAmount').text(totalAmount.toFixed(2));

                // Update summary
                $('#summaryQty').text(totalQty);
                $('#summaryDiscount').text(totalDiscount.toFixed(2));
                $('#summaryAmount').text(totalAmount.toFixed(2));
            }

            // Event listeners for calculation
            $(document).on('input', '.qty-input, .price-input, .discount-input', function () {
                calculateTotals();
            });

            $(document).on('change', '.discount-type', function () {
                calculateTotals();
            });

            // Initial setup
            updateRemoveButtons();
            calculateTotals();
        });
    </script>
    <style>
        .bg-label-info { background-color: rgba(139, 92, 246, 0.16) !important; color: #8B5CF6 !important; }
        .bg-label-warning { background-color: rgba(245, 158, 11, 0.16) !important; color: #F59E0B !important; }
        .bg-label-secondary { background-color: rgba(100, 116, 139, 0.16) !important; color: #64748B !important; }
        .btn-label-secondary { background-color: #f1f0f2; color: #64748B; border-color: transparent; }
        .btn-label-secondary:hover { background-color: #e1e0e3; color: #64748B; }
        .btn-label-danger { background-color: rgba(239, 68, 68, 0.1) !important; color: #EF4444 !important; border-color: transparent; }
        .btn-label-danger:hover { background-color: #EF4444 !important; color: #fff !important; }
    </style>
}
