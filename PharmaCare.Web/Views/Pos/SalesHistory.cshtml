@model List<PharmaCare.Application.DTOs.POS.SaleHistoryDto>

@{
    ViewData["Title"] = "Sales History";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int RowNo = 0;
}

<div class="card card-outline rounded-0 card-navy">
    <div class="card-header">
        <h3 class="card-title">Sales History</h3>
    </div>
    <div class="card-body mt-3">
        <!-- Date Filter Form -->
        <form method="get" asp-action="SalesHistory" class="mb-3">
            <div class="row">
                <div class="col-md-5">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-5">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block">Filter</button>
                </div>
            </div>
        </form>

        <!-- Sales Table -->
        <table class="table table-hover table-bordered dataTable-initialized" id="salesHistoryTable">
            <thead class="table-dark">
                <tr>
                    <th>S.No</th>
                    <th>Sale Number</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Payment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var sale in Model)
                    {
                        RowNo++;
                        var statusClass = sale.Status switch
                        {
                            "Completed" => "bg-success",
                            "Voided" => "bg-danger",
                            "Returned" => "bg-warning",
                            _ => "bg-secondary"
                        };
                        var paymentClass = sale.PaymentStatus switch
                        {
                            "Paid" => "bg-success",
                            "Partial" => "bg-warning",
                            "Unpaid" => "bg-danger",
                            _ => "bg-secondary"
                        };
                        <tr>
                            <td>@RowNo</td>
                            <td>@sale.SaleNumber</td>
                            <td>@sale.SaleDate.ToString("dd MMM yyyy hh:mm tt")</td>
                            <td>@sale.CustomerName</td>
                            <td class="text-center">@sale.ItemCount</td>
                            <td class="text-end">@sale.TotalAmount.ToString("C")</td>
                            <td><span class="badge @statusClass">@sale.Status</span></td>
                            <td><span class="badge @paymentClass">@sale.PaymentStatus</span></td>
                            <td>
                                <a asp-controller="Pos" asp-action="Receipt"
                                    asp-route-id="@Utility.EncryptURL(sale.SaleID.ToString())"
                                    class="btn btn-sm btn-info text-white" target="_blank" title="View Receipt">
                                    <i class="bx bx-show"></i>
                                </a>
                                @if (sale.Status == "Completed")
                                {
                                    <button type="button" class="btn btn-sm btn-danger" title="Void Sale"
                                        onclick="voidSale(@sale.SaleID, '@sale.SaleNumber')">
                                        <i class="bx bx-x-circle"></i>
                                    </button>
                                    <a asp-controller="SalesReturn" asp-action="AddSalesReturn"
                                        asp-route-saleId="@Utility.EncryptURL(sale.SaleID.ToString())"
                                        class="btn btn-sm btn-warning" title="Return">
                                        <i class="bx bx-undo"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        @if (Model != null && Model.Any())
        {
            <div class="mt-3">
                <strong>Total Sales:</strong> @Model.Count |
                <strong>Total Amount:</strong> @Model.Sum(s => s.TotalAmount).ToString("C")
            </div>
        }
    </div>
</div>

<!-- Void Modal -->
<div class="modal fade" id="voidModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bx bx-x-circle me-2"></i>Void Sale</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="voidForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>You are about to void sale: <strong id="voidSaleNumber"></strong></p>
                    <input type="hidden" id="voidSaleId" name="saleId" />
                    <div class="mb-3">
                        <label class="form-label">Reason for Voiding *</label>
                        <textarea class="form-control" id="voidReason" name="reason" rows="3" required
                            placeholder="Enter reason for voiding this sale..."></textarea>
                    </div>
                    <div class="alert alert-warning">
                        <i class="bx bx-error me-1"></i>
                        This action will reverse the sale and restore inventory.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bx bx-x-circle me-1"></i> Void Sale
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#salesHistoryTable').DataTable({
                order: [[2, 'desc']],
                pageLength: 25
            });
        });

        function voidSale(saleId, saleNumber) {
            $('#voidSaleId').val(saleId);
            $('#voidSaleNumber').text(saleNumber);
            $('#voidReason').val('');
            new bootstrap.Modal(document.getElementById('voidModal')).show();
        }

        $('#voidForm').submit(function (e) {
            e.preventDefault();
            var saleId = $('#voidSaleId').val();
            var reason = $('#voidReason').val();

            if (!reason) {
                alert('Please enter a reason for voiding.');
                return;
            }

            $.ajax({
                url: '/Pos/VoidSale',
                type: 'POST',
                data: {
                    saleId: saleId,
                    reason: reason,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        bootstrap.Modal.getInstance(document.getElementById('voidModal')).hide();
                        alert('Sale voided successfully.');
                        location.reload();
                    } else {
                        alert(response.message || 'Failed to void sale.');
                    }
                },
                error: function () {
                    alert('An error occurred while voiding the sale.');
                }
            });
        });
    </script>
}
