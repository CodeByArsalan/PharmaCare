@model IEnumerable<PharmaCare.Domain.Entities.Finance.Payment>
@{
    ViewData["Title"] = "Customer Refunds";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <h4 class="page-title">
        <i class="fas fa-undo-alt"></i>
        Customer Refunds
    </h4>
    <div>
        <a asp-action="Reconciliation" class="btn btn-outline-primary me-2">
            <i class="fas fa-balance-scale me-1"></i>Reconciliation
        </a>
        <a asp-action="ReceiptsIndex" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i>Receipts
        </a>
        <a asp-action="Refund" class="btn btn-danger">
            <i class="fas fa-plus me-2"></i>New Refund
        </a>
    </div>
</div>

<!-- Refunds Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="refundsTable">
                <thead>
                    <tr>
                        <th style="width: 50px;">S.No</th>
                        <th>Reference</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Account</th>
                        <th class="text-end">Amount</th>
                        <th>Remarks</th>
                        <th class="text-end" style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{int sNo = 1;}
                    @foreach (var refund in Model)
                    {
                        <tr>
                            <td>@(sNo++)</td>
                            <td><strong>@refund.Reference</strong></td>
                            <td>@refund.PaymentDate.ToString("dd/MM/yyyy")</td>
                            <td>@refund.Party?.Name</td>
                            <td>
                                <span class="badge bg-@(refund.PaymentMethod == "Cash" ? "success" : "primary")">
                                    @refund.PaymentMethod
                                </span>
                            </td>
                            <td>
                                @if (refund.IsVoided)
                                {
                                    <span class="badge bg-danger">Voided</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td>@refund.Account?.Name</td>
                            <td class="text-end"><strong>@refund.Amount.ToString("N2")</strong></td>
                            <td>@refund.Remarks</td>
                            <td class="text-end">
                                @if (!refund.IsVoided)
                                {
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger void-refund-btn"
                                            data-id="@PharmaCare.Web.Utilities.Utility.EncryptId(refund.PaymentID)"
                                            data-ref="@refund.Reference">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="voidRefundModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="VoidRefund" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Void Refund</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="voidRefundId" />
                    <p>Are you sure you want to void refund <strong id="voidRefundRef"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Reason <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="voidReason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Void Refund</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            if (!$.fn.DataTable.isDataTable('#refundsTable')) {
                $('#refundsTable').DataTable({
                    order: [[2, 'desc']],
                    pageLength: 25
                });
            }

            document.querySelectorAll('.void-refund-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('voidRefundId').value = this.dataset.id;
                    document.getElementById('voidRefundRef').textContent = this.dataset.ref;
                    new bootstrap.Modal(document.getElementById('voidRefundModal')).show();
                });
            });
        });
    </script>
}
