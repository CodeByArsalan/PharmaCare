@using PharmaCare.Web.Utilities
@model IEnumerable<PharmaCare.Domain.Entities.Finance.Payment>
@{
    ViewData["Title"] = "Customer Receipts";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-hand-holding-usd"></i>
        Customer Receipts
    </h4>
    <div class="ms-auto">
        <a asp-action="Reconciliation" class="btn btn-outline-primary me-2">
            <i class="fas fa-balance-scale"></i> Reconciliation
        </a>
        <a asp-action="CreditNotesIndex" class="btn btn-outline-info me-2">
            <i class="fas fa-file-invoice"></i> Credit Notes
        </a>
        <a asp-action="RefundsIndex" class="btn btn-outline-danger me-2">
            <i class="fas fa-undo"></i> Customer Refunds
        </a>
        <a asp-action="PendingSales" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Receipt
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="receiptsTable">
                <thead>
                    <tr>
                        <th style="width: 50px;">S.No</th>
                        <th>Reference</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Sale Ref</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th class="text-end">Amount</th>
                        <th class="text-end" style="width: 140px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{int sNo = 1;}
                    @foreach (var receipt in Model)
                    {
                        <tr>
                            <td>@(sNo++)</td>
                            <td><strong>@receipt.Reference</strong></td>
                            <td>@receipt.PaymentDate.ToString("dd/MM/yyyy")</td>
                            <td>@(receipt.Party?.Name ?? "Walking Customer")</td>
                            <td>
                                @if (receipt.StockMain != null)
                                {
                                    <span>@receipt.StockMain.TransactionNo</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-@(receipt.PaymentMethod == "Cash" ? "success" : receipt.PaymentMethod == "Bank" ? "primary" : "warning")">
                                    @receipt.PaymentMethod
                                </span>
                            </td>
                            <td>
                                @if (receipt.IsVoided)
                                {
                                    <span class="badge bg-danger">Voided</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td class="text-end"><strong>@receipt.Amount.ToString("N2")</strong></td>
                            <td class="text-end">
                                <a asp-action="ViewReceipt" asp-route-id="@receipt.PaymentID.EncryptId()" class="btn btn-sm btn-outline-primary" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (!receipt.IsVoided)
                                {
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger void-receipt-btn"
                                            data-id="@receipt.PaymentID.EncryptId()"
                                            data-ref="@receipt.Reference"
                                            title="Void">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="voidReceiptModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="VoidReceipt" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Void Receipt</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="voidReceiptId" />
                    <p>Are you sure you want to void receipt <strong id="voidReceiptRef"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Reason <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="voidReason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Void Receipt</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if (!$.fn.DataTable.isDataTable('#receiptsTable')) {
                $('#receiptsTable').DataTable({
                    order: [[2, 'desc']],
                    pageLength: 25
                });
            }

            document.querySelectorAll('.void-receipt-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('voidReceiptId').value = this.dataset.id;
                    document.getElementById('voidReceiptRef').textContent = this.dataset.ref;
                    new bootstrap.Modal(document.getElementById('voidReceiptModal')).show();
                });
            });
        });
    </script>
}
