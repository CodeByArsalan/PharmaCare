@model PharmaCare.Application.DTOs.Finance.CreateCustomerPaymentDto
@{
    ViewData["Title"] = "Receive Customer Payment";
    var totalOutstanding = ViewBag.TotalOutstanding as decimal? ?? 0;
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h4 class="card-header">Receive Customer Payment</h4>
            <div class="card-body">
                <form asp-action="AddCustomerPayment" method="post">
                    @Html.AntiForgeryToken()
                        
                    <div class="row mt-2 mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Customer <span class="text-danger">*</span></label>
                            <select asp-for="CustomerID" class="form-select" id="customerSelect" required>
                                <option value="">-- Select Customer --</option>
                                @foreach (var customer in ViewBag.Customers as SelectList)
                                {
                                    <option value="@customer.Value" 
                                            selected="@(customer.Value == Model.CustomerID?.ToString())">
                                        @customer.Text
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Outstanding Balance</label>
                            <div class="input-group">
                                <span class="input-group-text">PKR</span>
                                <input type="text" id="outstandingBalance" class="form-control text-end fw-bold text-danger" 
                                        value="@totalOutstanding.ToString("N2")" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Apply to Specific Sale (Optional)</label>
                            <select asp-for="SaleID" class="form-select" id="saleSelect">
                                <option value="">-- General Payment --</option>
                            </select>
                            <small class="text-muted">Leave empty to record as general payment</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Sale Balance</label>
                            <div class="input-group">
                                <span class="input-group-text">PKR</span>
                                <input type="text" id="saleBalance" class="form-control text-end" value="0.00" readonly>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label">Amount <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">PKR</span>
                                <input asp-for="Amount" type="number" step="0.01" min="0.01" 
                                        class="form-control text-end" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Payment Method</label>
                            <select asp-for="PaymentMethod" class="form-select">
                                <option value="Cash">Cash</option>
                                <option value="Bank">Bank Transfer</option>
                                <option value="Card">Card</option>
                                <option value="Cheque">Cheque</option>
                                <option value="Mobile">Mobile Payment</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Reference Number</label>
                            <input asp-for="ReferenceNumber" class="form-control" 
                                    placeholder="Cheque/Transaction #">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="2" 
                                    placeholder="Optional notes about this payment"></textarea>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(true)
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("CustomerPaymentIndex")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check me-1"></i> Record Payment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var selectedCustomerId = '@ViewBag.SelectedCustomerId';
            var selectedSaleId = '@ViewBag.SelectedSaleId';

            if (selectedCustomerId) {
                loadOutstandingSales(selectedCustomerId, selectedSaleId);
            }

            $('#customerSelect').change(function () {
                var customerId = $(this).val();
                if (customerId) {
                    loadOutstandingSales(customerId);
                    loadCustomerOutstanding(customerId);
                } else {
                    $('#saleSelect').html('<option value="">-- General Payment --</option>');
                    $('#outstandingBalance').val('0.00');
                }
            });

            $('#saleSelect').change(function () {
                var selected = $(this).find('option:selected');
                var balance = selected.data('balance') || 0;
                $('#saleBalance').val(balance.toFixed(2));
                
                // Auto-fill amount with balance if empty
                if (!$('#Amount').val() || parseFloat($('#Amount').val()) === 0) {
                    $('#Amount').val(balance.toFixed(2));
                }
            });
        });

        function loadOutstandingSales(customerId, selectedSaleId) {
            $.get('@Url.Action("GetOutstandingSales")', { customerId: customerId }, function (data) {
                var html = '<option value="">-- General Payment --</option>';
                data.forEach(function (s) {
                    var selected = selectedSaleId && s.saleID == selectedSaleId ? 'selected' : '';
                    html += '<option value="' + s.saleID + '" data-balance="' + s.balanceAmount + '" ' + selected + '>' +
                        s.saleNumber + ' - Balance: PKR ' + s.balanceAmount.toFixed(2) +
                    '</option>';
                });
                $('#saleSelect').html(html);
                
                // Trigger change to update sale balance
                if (selectedSaleId) {
                    $('#saleSelect').trigger('change');
                }
            });
        }

        function loadCustomerOutstanding(customerId) {
            $.get('@Url.Action("GetOutstandingSales")', { customerId: customerId }, function (data) {
                var total = data.reduce(function (sum, s) { return sum + s.balanceAmount; }, 0);
                $('#outstandingBalance').val(total.toFixed(2));
            });
        }
    </script>
}
