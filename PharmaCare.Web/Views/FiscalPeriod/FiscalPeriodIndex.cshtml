@model List<PharmaCare.Domain.Models.AccountManagement.FiscalYear>
@{
    ViewData["Title"] = "Fiscal Period Management";
}

<div class="container-fluid p-0">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1"><i class="fas fa-calendar-alt me-2 text-primary"></i>Fiscal Period Management</h4>
            <p class="text-muted mb-0">Manage fiscal years and accounting periods</p>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createYearModal">
            <i class="fas fa-plus me-2"></i>Create Fiscal Year
        </button>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bx bx-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                <h4>No Fiscal Years Found</h4>
                <p class="text-muted">Create a fiscal year to start managing accounting periods.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createYearModal">
                    <i class="fas fa-plus me-2"></i>Create First Fiscal Year
                </button>
            </div>
        </div>
    }
    else
    {
        @foreach (var fiscalYear in Model.OrderByDescending(y => y.StartDate))
        {
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">
                                <i class="fas fa-calendar me-2 text-primary"></i>
                        @fiscalYear.YearName
                                <span class="badge @(fiscalYear.Status == "Open" ? "bg-success" : fiscalYear.Status == "Closed" ? "bg-warning" : "bg-secondary") ms-2">
                            @fiscalYear.Status
                                </span>
                            </h5>
                            <small class="text-muted">
                        @fiscalYear.StartDate.ToString("MMM dd, yyyy") - @fiscalYear.EndDate.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                        <div>
                    @if (fiscalYear.Status == "Open")
                    {
                                    <form asp-action="CloseFiscalYear" method="post" class="d-inline" 
                                            onsubmit="return confirm('Are you sure you want to close the entire fiscal year? This will close all periods.');">
                                        <input type="hidden" name="fiscalYearId" value="@fiscalYear.FiscalYearID" />
                                        <button type="submit" class="btn btn-warning btn-sm">
                                            <i class="fas fa-lock me-1"></i>Close Year
                                        </button>
                                    </form>
                    }
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0 ps-4">Period</th>
                                    <th class="border-0">Date Range</th>
                                    <th class="border-0 text-center">Status</th>
                                    <th class="border-0 text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                        @if (fiscalYear.FiscalPeriods != null && fiscalYear.FiscalPeriods.Any())
                        {
                            @foreach (var period in fiscalYear.FiscalPeriods.OrderBy(p => p.PeriodNumber))
                            {
                                                <tr>
                                                    <td class="ps-4">
                                                        <i class="fas fa-calendar-day me-2 text-muted"></i>
                                        @period.PeriodName
                                                    </td>
                                                    <td>@period.StartDate.ToString("MMM dd") - @period.EndDate.ToString("MMM dd, yyyy")</td>
                                                    <td class="text-center">
                                        @if (period.Status == "Open")
                                        {
                                                                <span class="badge bg-success"><i class="fas fa-unlock me-1"></i>Open</span>
                                        }
                                        else if (period.Status == "Closed")
                                        {
                                                                <span class="badge bg-warning text-dark"><i class="fas fa-lock me-1"></i>Closed</span>
                                        }
                                        else
                                        {
                                                                <span class="badge bg-secondary"><i class="fas fa-ban me-1"></i>Locked</span>
                                        }
                                                    </td>
                                                    <td class="text-end pe-4">
                                        @if (period.Status == "Open")
                                        {
                                                                <form asp-action="ClosePeriod" method="post" class="d-inline">
                                                                    <input type="hidden" name="periodId" value="@period.FiscalPeriodID" />
                                                                    <button type="submit" class="btn btn-outline-warning btn-sm">
                                                                        <i class="fas fa-lock"></i> Close
                                                                    </button>
                                                                </form>
                                        }
                                        else if (period.Status == "Closed")
                                        {
                                                                <button type="button" class="btn btn-outline-success btn-sm" 
                                                                        data-bs-toggle="modal" 
                                                                        data-bs-target="#reopenModal"
                                                                        data-period-id="@period.FiscalPeriodID"
                                                                        data-period-name="@period.PeriodName">
                                                                    <i class="fas fa-unlock"></i> Reopen
                                                                </button>
                                                                <form asp-action="LockPeriod" method="post" class="d-inline"
                                                                        onsubmit="return confirm('WARNING: Locking a period is PERMANENT. No changes can ever be made. Continue?');">
                                                                    <input type="hidden" name="periodId" value="@period.FiscalPeriodID" />
                                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                                        <i class="fas fa-ban"></i> Lock
                                                                    </button>
                                                                </form>
                                        }
                                        else
                                        {
                                                                <span class="text-muted small">Permanently locked</span>
                                        }
                                                    </td>
                                                </tr>
                            }
                        }
                        else
                        {
                                        <tr>
                                            <td colspan="4" class="text-center py-4 text-muted">
                                                No periods found for this fiscal year.
                                            </td>
                                        </tr>
                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Create Fiscal Year Modal -->
<div class="modal fade" id="createYearModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-plus-circle me-2"></i>Create Fiscal Year</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreateFiscalYear" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Year</label>
                        <select name="year" class="form-select" required>
                            @for (int y = DateTime.Now.Year - 1; y <= DateTime.Now.Year + 2; y++)
                            {
                                if (y == DateTime.Now.Year)
                                {
                                    <option value="@y" selected>@y</option>
                                }
                                else
                                {
                                    <option value="@y">@y</option>
                                }
                            }
                        </select>

                        <div class="form-text">This will create 12 monthly periods (January - December).</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary"><i class="fas fa-check me-1"></i>Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reopen Period Modal -->
<div class="modal fade" id="reopenModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-unlock me-2"></i>Reopen Period</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ReopenPeriod" method="post">
                <input type="hidden" name="periodId" id="reopenPeriodId" />
                <div class="modal-body">
                    <p>You are about to reopen: <strong id="reopenPeriodName"></strong></p>
                    <div class="mb-3">
                        <label class="form-label">Reason for Reopening <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="3" required placeholder="Enter reason for reopening this period..."></textarea>
                        <div class="form-text">This will be logged for audit purposes.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success"><i class="fas fa-unlock me-1"></i>Reopen Period</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            // Handle reopen modal data
            document.getElementById('reopenModal').addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var periodId = button.getAttribute('data-period-id');
                var periodName = button.getAttribute('data-period-name');

                document.getElementById('reopenPeriodId').value = periodId;
                document.getElementById('reopenPeriodName').textContent = periodName;
            });
        </script>
}
