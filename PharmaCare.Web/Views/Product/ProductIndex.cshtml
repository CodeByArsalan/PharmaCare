@using PharmaCare.Domain.Models.Products
@using PharmaCare.Web.Utilities
@model List<Product>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int RowNo = 0;
}

<div class="card card-outline rounded-0 card-navy">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">List of Products</h4>
        <a asp-action="AddProduct" class="btn btn-flat btn-primary">
            <span class="bx bx-plus me-1"></span> Add Product
        </a>
    </div>
    @* <div class="card-body"> *@
    <div class="table-responsive-md">
        <div id="list_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-hover table-striped table-bordered dataTable">
                        <thead class="table-dark">
                            <tr>
                                <th>S.No</th>
                                <th>Product Code</th>
                                <th>SKU</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>SubCategory</th>
                                <th>Status</th>
                                <th style="width:100px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (Product item in Model)
                                {
                                    RowNo += 1;
                                    <tr>
                                        <td>@RowNo</td>
                                        <td>@item.ProductCode</td>
                                        <td>@item.Sku</td>
                                        <td>@item.ProductName</td>
                                        <td>
                                            @if (item.SubCategory?.Category != null)
                                            {
                                                <span class="badge bg-primary">@item.SubCategory.Category.CategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.SubCategory != null)
                                            {
                                                <span class="badge bg-secondary">@item.SubCategory.SubCategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <h6><span class="badge rounded-pill bg-success">Active</span></h6>
                                            }
                                            else
                                            {
                                                <h6><span class="badge rounded-pill bg-danger">Inactive</span></h6>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a class="btn btn-primary btn-sm fa fa-edit" title="Edit"
                                                    asp-action="EditProduct"
                                                    asp-route-id="@Utility.EncryptURL(item.ProductID.ToString2())">
                                                    <i class="bx bx-edit"></i>
                                                </a>

                                                <form asp-action="DeleteProduct"
                                                    asp-route-id="@Utility.EncryptURL(item.ProductID.ToString2())" method="post"
                                                    style="display:inline" class="delete-form">
                                                    <button type="button" class="btn btn-danger btn-sm bx bx-trash delete-btn"
                                                        title="Delete"><i class="bx bx-trash"></i></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @* </div> *@
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            $('.delete-btn').click(function (e) {
                e.preventDefault();
                var form = $(this).closest('form');

                Swal.fire({
                    title: "Attention",
                    text: "Are you sure you want to deactivate this product?",
                    type: "warning",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: "#34c38f",
                    cancelButtonColor: "#f46a6a",
                    confirmButtonText: "Yes, Deactivate!"
                }).then(function (result) {
                    if (result.value) {
                        form.submit();
                    }
                });
            });
        })
    </script>
}
