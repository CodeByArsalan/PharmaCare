@model IEnumerable<PharmaCare.Domain.Entities.Security.User>
@{
    ViewData["Title"] = "User Management";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-users-cog"></i>
        User Management
    </h4>
    <a asp-action="AddUser" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add User
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Store</th>
                    <th>Roles</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.FullName</strong></td>
                            <td>@item.Email</td>
                            <td>@(item.PhoneNumber ?? "-")</td>
                            <td>@(item.Store?.Name ?? "-")</td>
                            <td>
                                @if (item.UserRoles.Any())
                                {
                                    @foreach (var ur in item.UserRoles)
                                    {
                                        <span class="badge bg-info me-1">@ur.Role?.Name</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">No roles</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-warning btn-toggle" 
                                        data-id="@item.Id" data-name="@item.FullName" data-status="@(item.IsActive ? "deactivate" : "activate")">
                                    <i class="fas fa-power-off"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <div class="empty-state">
                                <i class="fas fa-users-cog"></i>
                                <p class="mb-0">No users found. Click "Add User" to create one.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Hidden form for toggle status -->
<form id="toggleForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        document.querySelectorAll('.btn-toggle').forEach(function(btn) {
            btn.addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                const name = this.getAttribute('data-name');
                const status = this.getAttribute('data-status');
                
                Swal.fire({
                    title: status.charAt(0).toUpperCase() + status.slice(1) + ' User?',
                    text: `Are you sure you want to ${status} "${name}"?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: status === 'deactivate' ? '#dc2626' : '#10b981',
                    cancelButtonColor: '#64748b',
                    confirmButtonText: 'Yes, ' + status + ' it!',
                    cancelButtonText: 'Cancel',
                    background: '#1e293b',
                    color: '#f1f5f9'
                }).then((result) => {
                    if (result.isConfirmed) {
                        const form = document.getElementById('toggleForm');
                        form.action = '/User/ToggleStatus/' + id;
                        form.submit();
                    }
                });
            });
        });
    </script>
}
