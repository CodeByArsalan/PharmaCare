@model PharmaCare.Domain.Models.PurchaseManagement.PurchaseOrder

@{
    ViewData["Title"] = "Purchase Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <!-- Header & Breadcrumbs -->
    <div class="d-flex justify-content-between align-items-center mb-4 text-start">
        <div>
            <h4 class="fw-bold mb-0"> @Model.PurchaseOrderNumber</h4>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="PurchaseOrderIndex" class="btn btn-secondary">
                <i class="bx bx-arrow-back me-1"></i> Back to list
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-label-info p-2 rounded me-3">
                            <i class="bx bx-user fs-4"></i>
                        </div>
                        <h5 class="mb-0">Supplier Info</h5>
                    </div>
                    <p class="mb-1 fw-bold text-primary">@Model.Party?.PartyName</p>
                    <p class="mb-0 small text-muted"><i class="bx bx-phone me-1"></i>@Model.Party?.ContactNumber</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-label-warning p-2 rounded me-3">
                            <i class="bx bx-calendar fs-4"></i>
                        </div>
                        <h5 class="mb-0">Timeline</h5>
                    </div>
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Order Date:</span>
                            <span class="fw-bold">@Model.OrderDate.ToString("dd MMM yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Expected:</span>
                            <span class="fw-bold">@(Model.ExpectedDeliveryDate?.ToString("dd MMM yyyy") ?? "N/A")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="badge bg-white text-primary p-2 rounded me-3">
                            <i class="bx bx-dollar fs-4"></i>
                        </div>
                        <h5 class="mb-0 text-white">Order Summary</h5>
                    </div>
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-white-50 small">Current Status:</span>
                            <span class="badge bg-white text-primary">@Model.Status</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-white-50 small">Grand Total:</span>
                            <h4 class="mb-0 text-white fw-bold">@Model.TotalAmount.ToString("C")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header border-bottom bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0 text-start">Order Items</h5>
            <span class="badge bg-label-secondary text-primary">@Model.PurchaseOrderItems?.Count items</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Product Information</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end pe-4">Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.PurchaseOrderItems != null && Model.PurchaseOrderItems.Any())
                        {
                            foreach (var item in Model.PurchaseOrderItems)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">@item.Product?.ProductName</span>
                                        </div>
                                    </td>
                                    <td class="text-center fw-bold">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end pe-4 fw-bold text-primary">@((item.Quantity *
                                item.UnitPrice).ToString("N2"))</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">No items found in this order.</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold py-3">Grand Total</td>
                            <td class="text-end pe-4 fw-bold py-3 fs-5 text-primary">@Model.TotalAmount.ToString("C")
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-label-info {
        background-color: #d7f5fc !important;
        color: #03c3ec !important;
    }

    .bg-label-warning {
        background-color: #fff2d6 !important;
        color: #ffab00 !important;
    }

    .bg-label-secondary {
        background-color: #ebedef !important;
        color: #64748B !important;
    }

    .text-white-50 {
        color: rgba(255, 255, 255, 0.7) !important;
    }

    .breadcrumb-style1 .breadcrumb-item a {
        color: #0EA5E9;
        text-decoration: none;
    }

    .breadcrumb-style1 .breadcrumb-item.active {
        color: #a1acb8;
    }

    .card-header .card-title {
        color: #0C4A6E;
        font-weight: 600;
    }
</style>
