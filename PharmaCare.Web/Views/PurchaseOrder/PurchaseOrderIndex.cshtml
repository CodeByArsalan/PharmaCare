@model List<PharmaCare.Domain.Models.PurchaseManagement.PurchaseOrder>

@{
    ViewData["Title"] = "Purchase Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int RowNo = 0;
}

<div class="card card-outline rounded-0 card-navy">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title mb-0">Purchase Orders</h4>
        <a asp-action="AddPurchaseOrder" class="btn btn-flat btn-primary">
            <i class="bx bx-plus me-1"></i> Create PO
        </a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover table-striped table-bordered dataTable">
            <thead class="table-dark">
                <tr>
                    <th>S.No</th>
                    <th>PO Number</th>
                    <th>Date</th>
                    <th>Supplier</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        RowNo++;
                        <tr>
                            <td>@RowNo</td>
                            <td>@item.PurchaseOrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>@item.Party?.PartyName</td>
                            <td>
                                @if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else if (item.Status == "Received")
                                {
                                    <span class="badge bg-success">Received</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                            <td>@item.TotalAmount.ToString("C")</td>
                            <td>
                                <a asp-action="PurchaseOrderDetails"
                                    asp-route-id="@Utility.EncryptURL(item.PurchaseOrderID.ToString2())"
                                    class="btn btn-sm btn-info text-white me-1"><i class="bx bx-show"></i></a>
                                @if (item.Status == "Pending")
                                {
                                    <a asp-action="EditPurchaseOrder"
                                        asp-route-id="@Utility.EncryptURL(item.PurchaseOrderID.ToString2())"
                                        class="btn btn-sm btn-warning text-white me-1"><i class="bx bx-edit"></i></a>
                                    <a asp-action="AddGrn" asp-controller="Grn"
                                        asp-route-poId="@Utility.EncryptURL(item.PurchaseOrderID.ToString2())"
                                        class="btn btn-sm btn-success">Receive (GRN)</a>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
