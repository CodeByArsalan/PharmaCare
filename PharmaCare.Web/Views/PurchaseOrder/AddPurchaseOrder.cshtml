@model PharmaCare.Domain.Models.PurchaseManagement.PurchaseOrder
@inject PharmaCare.Infrastructure.Interfaces.IComboBoxRepository _comboBox

@{
    ViewData["Title"] = "Create Purchase Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Get products directly from repo for JS loop
    var products = _comboBox.GetProducts().Items as IEnumerable<dynamic>;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddPurchaseOrder" id="poForm">
            <div class="row">
                <div class="col-sm-6">
                    <h4>Create Purchase Order</h4>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body mt-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PurchaseOrderNumber" class="form-label"></label>
                            <input asp-for="PurchaseOrderNumber" class="form-control" readonly />
                            <span asp-validation-for="PurchaseOrderNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="OrderDate" class="form-label"></label>
                            <input asp-for="OrderDate" type="date" class="form-control"
                                value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="OrderDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Party_ID" class="form-label">Supplier</label>
                            <select asp-for="Party_ID" class="form-select" asp-items="@_comboBox.GetSuppliers()">
                                <option value="">-- Select Supplier --</option>
                            </select>
                            <span asp-validation-for="Party_ID" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExpectedDeliveryDate" class="form-label"></label>
                            <input asp-for="ExpectedDeliveryDate" type="date" class="form-control" />
                            <span asp-validation-for="ExpectedDeliveryDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Order Items</h5>
                    <button type="button" class="btn btn-sm btn-primary" id="addItemBtn"><i class="bx bx-plus"></i>Add Item</button>
                </div>
                <div class="card-body">
                    <table class="table table-bordered" id="itemsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th style="width: 150px;">Quantity</th>
                                <th style="width: 150px;">Unit Price</th>
                                <th style="width: 150px;">Total</th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Items will be added here -->
                        </tbody>
                        <tfoot class="table-secondary">
                            <tr>
                                <td class="text-end fw-bold">Totals:</td>
                                <td><span id="grandTotalQty" class="fw-bold">0</span></td>
                                <td></td>
                                <td><span id="grandTotalAmount" class="fw-bold">0.00</span></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-end gap-2">
                <a asp-action="PurchaseOrderIndex" class="btn btn-secondary"><i class="bx bx-arrow-back me-1"></i> Back to List</a>
                <button type="submit" class="btn btn-success">Create Order</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
            $(document).ready(function () {
                var productOptions = '<option value="">Select Product</option>';
        @if (products != null)
        {
            foreach (var p in products)
            {
                // Access dynamic properties (SelectListItem has Value/Text)
                // BUT wait, GetProducts returns SelectList of Products, so Items is List<Product>
                // Use reflection safe access or assumption
                // The GetProductsAsync in Repo returns SelectList(products, "ProductID", "BrandName")
                // So the Items are the raw Product objects!
                // To be safe, let's cast properly in the razor block above.
                // Actually, SelectList.Items holds the collection we passed.
                // Let's refetch in a cleaner way? No, sync access is fine.
                // Let's use the SelectList items directly.
                @:productOptions += '<option value="@p.ProductID">@p.ProductName</option>';
            }
        }

                    var rowIndex = 0;

                function addNewRow() {
                    var newRow = `
                        <tr>
                            <td>
                                <select name="PurchaseOrderItems[${rowIndex}].Product_ID" class="form-select" required>
                                    ${productOptions}
                                </select>
                            </td>
                            <td>
                                <input type="number" name="PurchaseOrderItems[${rowIndex}].Quantity" class="form-control qty-input" min="1" required />
                            </td>
                            <td>
                                <input type="number" name="PurchaseOrderItems[${rowIndex}].UnitPrice" class="form-control price-input" step="0.01" min="0" required />
                            </td>
                            <td>
                                <input type="text" class="form-control total-input" readonly />
                            </td>
                            <td>
                                <button type="button" class="btn btn-danger btn-sm remove-btn">X</button>
                            </td>
                        </tr>
                    `;
                    $('#itemsTable tbody').append(newRow);
                    rowIndex++;
                }

                // Pre-populate first row
                addNewRow();

                $('#addItemBtn').click(function () {
                    addNewRow();
                });

                $(document).on('input', '.qty-input, .price-input', function () {
                    var row = $(this).closest('tr');
                    var qty = parseFloat(row.find('.qty-input').val()) || 0;
                    var price = parseFloat(row.find('.price-input').val()) || 0;
                    row.find('.total-input').val((qty * price).toFixed(2));
                    updateGrandTotals();
                });

                $(document).on('click', '.remove-btn', function () {
                    $(this).closest('tr').remove();
                    updateGrandTotals();
                });

                function updateGrandTotals() {
                    var totalQty = 0;
                    var totalAmount = 0;
                    $('#itemsTable tbody tr').each(function() {
                        var qty = parseFloat($(this).find('.qty-input').val()) || 0;
                        var amount = parseFloat($(this).find('.total-input').val()) || 0;
                        totalQty += qty;
                        totalAmount += amount;
                    });
                    $('#grandTotalQty').text(totalQty);
                    $('#grandTotalAmount').text(totalAmount.toFixed(2));
                }
            });
        </script>
}
