@model List<PharmaCare.Domain.Models.PurchaseManagement.PurchaseReturn>

@{
    ViewData["Title"] = "Purchase Returns";
}

<div class="card rounded-0">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Purchase Returns</h4>
        <a asp-action="AddPurchaseReturn" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> New Return
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive ">
            <table class="table table-hover table-striped table-bordered dataTable" id="returnsTable">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Supplier</th>
                        <th>Store</th>
                        <th>Status</th>
                        <th>Refund Status</th>
                        <th>Total Amount</th>
                        <th>Items</th>
                        <th style="width: 120px">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReturnDate.ToShortDateString()</td>
                            <td>@item.Party?.PartyName</td>
                            <td>@item.Store?.Name</td>
                            <td>
                                <span
                                    class="badge @(item.Status == "Approved" ? "bg-success" : (item.Status == "Pending" ? "bg-warning" : "bg-secondary"))">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.RefundStatus))
                                {
                                    <span class="badge @(item.RefundStatus == "Received" ? "bg-success" : 
                                        item.RefundStatus == "Pending" ? "bg-warning" : "bg-secondary")">
                                        @item.RefundStatus
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-muted">N/A</span>
                                }
                            </td>
                            <td>@item.TotalAmount.ToString("C")</td>
                            <td>@item.PurchaseReturnItems?.Count</td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a asp-action="PurchaseReturnDetails"
                                        asp-route-id="@Utility.EncryptURL(item.PurchaseReturnID.ToString2())"
                                        class="btn btn-sm btn-info text-white" title="View Details">
                                        <i class="bx bx-show"></i>
                                    </a>
                                    @if (item.Status == "Pending")
                                    {
                                        <button type="button" class="btn btn-sm btn-success"
                                            onclick="confirmApprove('@Utility.EncryptURL(item.PurchaseReturnID.ToString2())')"
                                            title="Approve">
                                            <i class="bx bx-check"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#returnsTable').DataTable();
        });

        function confirmApprove(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You want to approve this purchase return? This will deduct stock from the selected store.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Approve it!',
                customClass: {
                    confirmButton: 'btn btn-primary me-3',
                    cancelButton: 'btn btn-label-secondary'
                },
                buttonsStyling: false
            }).then((result) => {
                if (result.isConfirmed) {
                    var form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/PurchaseReturn/Approve';
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'id';
                    input.value = id;
                    form.appendChild(input);
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
}
