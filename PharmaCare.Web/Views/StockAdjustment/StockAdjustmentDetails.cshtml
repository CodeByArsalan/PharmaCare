@model PharmaCare.Domain.Models.Inventory.StockAdjustment

@{
    ViewData["Title"] = "Stock Adjustment Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Inventory /</span> Stock Adjustment Details</h4>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Adjustment #@Model.StockAdjustmentID</h5>
            <a asp-action="StockAdjustmentIndex" class="btn btn-secondary">Back to List</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.AdjustmentDate.ToString("g")</dd>

                        <dt class="col-sm-4">Store</dt>
                        <dd class="col-sm-8">@Model.Store?.Name</dd>

                        <dt class="col-sm-4">Reason</dt>
                        <dd class="col-sm-8">@Model.Reason</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Product</dt>
                        <dd class="col-sm-8">@Model.ProductBatch?.Product?.ProductName</dd>

                        <dt class="col-sm-4">Batch No</dt>
                        <dd class="col-sm-8">@Model.ProductBatch?.BatchNumber</dd>

                        <dt class="col-sm-4">Qty Adjusted</dt>
                        <dd class="col-sm-8">
                            @if (Model.QuantityAdjusted > 0)
                            {
                                <span class="text-success">+@Model.QuantityAdjusted</span>
                            }
                            else
                            {
                                <span class="text-danger">@Model.QuantityAdjusted</span>
                            }
                        </dd>
                        <dt class="col-sm-4">Financial Impact</dt>
                        <dd class="col-sm-8">@Model.FinancialImpact.ToString("C")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
