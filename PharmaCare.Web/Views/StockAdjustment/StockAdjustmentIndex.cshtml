@model IEnumerable<PharmaCare.Domain.Models.Inventory.StockAdjustment>

@{
    ViewData["Title"] = "Stock Adjustments";
}


<div class="card rounded-0">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Adjustment History</h4>
        <a asp-action="AddStockAdjustment" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> New Adjustment
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered dataTable" id="adjustmentsTable">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Store</th>
                        <th>Batch ID</th>
                        <th>Qty</th>
                        <th>Reason</th>
                        <th>Impact</th>
                        <th>By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AdjustmentDate.ToShortDateString()</td>
                            <td>@item.Store?.Name</td>
                            <td>@item.ProductBatch?.BatchNumber</td>
                            <td>
                                <span class="badge bg-label-@(item.QuantityAdjusted > 0 ? "success" : "danger")">
                                    @item.QuantityAdjusted
                                </span>
                            </td>
                            <td>@item.Reason</td>
                            <td>@item.FinancialImpact.ToString("C")</td>
                            <td>@item.AdjustedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
