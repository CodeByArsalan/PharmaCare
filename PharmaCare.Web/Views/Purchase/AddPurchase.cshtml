@model PharmaCare.Web.Models.Inventory.AddPurchaseViewModel
@inject PharmaCare.Infrastructure.Interfaces.IComboBoxRepository _comboBox

@{
    ViewData["Title"] = "Create Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var po = Model.PurchaseOrder;
    bool isDirectPurchase = po == null;
}

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold mb-0">
                    <span class="text-muted fw-light"></span> Create Purchase
                </h4>
                <a asp-action="PurchaseIndex" asp-controller="Purchase" class="btn btn-secondary">
                    <i class="bx bx-arrow-back me-1"></i> Back to List
                </a>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center border-bottom">
                    <h5 class="mb-0">Purchase Details</h5>
                    @if (po != null)
                    {
                        <span class="badge bg-label-info">PO Reference: @po.PurchaseOrderNumber</span>
                    }
                    else
                    {
                        <span class="badge bg-label-warning">Direct Stock Entry</span>
                    }
                </div>
                <div class="card-body pt-4">
                    <form asp-action="AddPurchase" id="purchaseForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-3 mb-3">
                                <label class="form-label fw-bold">Purchase Order (Optional)</label>
                                @if (po != null)
                                {
                                    <input type="hidden" asp-for="PurchaseOrderId" value="@po.PurchaseOrderID" />
                                    <input type="text" class="form-control bg-light" value="@po.PurchaseOrderNumber" readonly />
                                }
                                else
                                {
                                    <select asp-for="PurchaseOrderId" class="form-select"
                                        asp-items="@_comboBox.GetPendingPurchaseOrders(Model.PurchaseOrderId)"
                                        onchange="location.href='@Url.Action("AddPurchase")?poId=' + this.value">
                                        <option value="">-- Manual Entry --</option>
                                    </select>
                                }
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="form-label fw-bold">Supplier</label>
                                @if (po != null)
                                {
                                    <input type="hidden" asp-for="PartyId" value="@po.Party_ID" />
                                    <input type="text" class="form-control bg-light" value="@po.Party?.PartyName" readonly />
                                }
                                else
                                {
                                    <select asp-for="PartyId" class="form-select" asp-items="@_comboBox.GetSuppliers(Model.PartyId)" required>
                                        <option value="">-- Select Supplier --</option>
                                    </select>
                                }
                                <span asp-validation-for="PartyId" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="form-label fw-bold">Receiving Store</label>
                                <select asp-for="StoreId" class="form-select" asp-items="@_comboBox.GetStoresByLoginUserID((int)ViewBag.LoginUserID, Model.StoreId)" required>
                                    <option value="">-- Select Store --</option>
                                </select>
                                <span asp-validation-for="StoreId" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="SupplierInvoiceNo" class="form-label fw-bold">Supplier Invoice #</label>
                                <input asp-for="SupplierInvoiceNo" class="form-control" placeholder="Invoice #" />                                
                                <span asp-validation-for="SupplierInvoiceNo" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Items Table -->
                        <div class="card border mb-4">
                            <div class="card-header bg-light py-2 d-flex justify-content-between align-items-center">
                                <span class="fw-bold"><i class="bx bx-list-ul me-1"></i> Items to Receive</span>
                                @if (isDirectPurchase)
                                {
                                    <button type="button" class="btn btn-primary btn-sm" id="addRowBtn">
                                        <i class="bx bx-plus me-1"></i> Add Product
                                    </button>
                                }
                            </div>
                            <div class="table-responsive">
                                <table class="table table-bordered align-middle mb-0" id="itemsTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th width="20%">Product</th>
                                            <th width="10%">Qty</th>
                                            <th width="15%">Batch #</th>
                                            <th width="15%">Expiry</th>
                                            <th width="10%">Cost</th>
                                            <th width="10%">Selling</th>
                                            @if (isDirectPurchase)
                                            {
                                                <th width="5%"></th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (po != null)
                                        {
                                            @for (int i = 0; i < po.PurchaseOrderItems.Count; i++)
                                            {
                                                var item = po.PurchaseOrderItems.ElementAt(i);
                                                <tr>
                                                    <td>
                                                        <div class="fw-semibold text-primary">@item.Product.ProductName</div>
                                                        <small class="text-muted">@item.Product.Sku</small>
                                                        <input type="hidden" name="Items[@i].ProductId" value="@item.Product_ID" />
                                                    </td>
                                                    <td>
                                                        <input type="number" name="Items[@i].Quantity"
                                                            class="form-control" value="@item.Quantity" min="1" max="@item.Quantity"
                                                            required />
                                                    </td>
                                                    <td>
                                                        <input type="text" name="Items[@i].BatchNumber"
                                                            class="form-control batch-input" required placeholder="Batch#" />
                                                    </td>
                                                    <td>
                                                        <input type="date" name="Items[@i].ExpiryDate" class="form-control" required title="Expiry Date is required" />
                                                    </td>
                                                    <td>
                                                        <input type="number" name="Items[@i].CostPrice"
                                                            class="form-control bg-light" value="@item.UnitPrice" step="0.01" readonly />
                                                    </td>
                                                    <td>
                                                        <input type="number" name="Items[@i].SellingPrice" class="form-control"
                                                            step="0.01" min="0" required placeholder="0.00" />
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <!-- Initial Row for Direct Purchase -->
                                            <tr class="item-row">
                                                <td>
                                                    <select name="Items[0].ProductId" class="form-select form-select product-select" asp-items="@_comboBox.GetProducts()" required>
                                                        <option value="">-- Select Product --</option>
                                                    </select>
                                                </td>
                                                <td>
                                                    <input type="number" name="Items[0].Quantity" class="form-control" min="1" required />
                                                </td>
                                                <td>
                                                    <input type="text" name="Items[0].BatchNumber" class="form-control batch-input" required placeholder="Batch#" />
                                                </td>
                                                <td>
                                                    <input type="date" name="Items[0].ExpiryDate" class="form-control" required />
                                                </td>
                                                <td>
                                                    <input type="number" name="Items[0].CostPrice" class="form-control" step="0.01" min="0" required />
                                                </td>
                                                <td>
                                                    <input type="number" name="Items[0].SellingPrice" class="form-control" step="0.01" min="0" required />
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-sm btn-label-danger remove-row-btn d-none">
                                                        <i class="bx bx-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="table-secondary">
                                        <tr>
                                            <th class="text-end">Grand Total:</th>
                                            <td><strong id="grandTotalQty">0</strong></td>
                                            <td></td>
                                            <td></td>
                                            <td><strong id="grandTotalCost">0.00</strong></td>
                                            <td><strong id="grandTotalSelling">0.00</strong></td>
                                            @if (isDirectPurchase)
                                            {
                                                <td></td>
                                            }
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <a asp-action="PurchaseIndex" class="btn btn-label-secondary px-4">
                                <i class="bx bx-x me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bx bx-check-circle me-1"></i> Process Stock Entry
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Template for new rows (hidden) -->
@if (isDirectPurchase)
{
    <table class="d-none">
        <tr id="rowTemplate">
            <td>
                <select name="Items[IDX].ProductId" class="form-select form-select-sm product-select" asp-items="@_comboBox.GetProducts()" required>
                    <option value="">-- Select Product --</option>
                </select>
            </td>
            <td>
                <input type="number" name="Items[IDX].Quantity" class="form-control form-control-sm" min="1" required />
            </td>
            <td>
                <input type="text" name="Items[IDX].BatchNumber" class="form-control form-control-sm batch-input" required placeholder="Batch#" />
            </td>
            <td>
                <input type="date" name="Items[IDX].ExpiryDate" class="form-control form-control-sm" required title="Expiry Date is required" />
            </td>
            <td>
                <input type="number" name="Items[IDX].CostPrice" class="form-control form-control-sm" step="0.01" min="0" required />
            </td>
            <td>
                <input type="number" name="Items[IDX].SellingPrice" class="form-control form-control-sm" step="0.01" min="0" required />
            </td>
            <td>
                <button type="button" class="btn btn-sm btn-label-danger remove-row-btn">
                    <i class="bx bx-trash"></i>
                </button>
            </td>
        </tr>
    </table>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            let rowIdx = @(po?.PurchaseOrderItems.Count ?? 1);

            $('#addRowBtn').click(function() {
                let template = $('#rowTemplate').html();
                let newRow = template.replaceAll('IDX', rowIdx);
                $('#itemsTable tbody').append('<tr class="item-row">' + newRow + '</tr>');
                rowIdx++;
                updateRemoveButtons();
            });

            $(document).on('click', '.remove-row-btn', function() {
                $(this).closest('tr').remove();
                reindexRows();
                updateRemoveButtons();
                updateGrandTotals();
            });

            function reindexRows() {
                rowIdx = 0;
                $('#itemsTable tbody tr').each(function() {
                    $(this).find('[name^="Items"]').each(function() {
                        let name = $(this).attr('name');
                        $(this).attr('name', name.replace(/\[\d+\]/, '[' + rowIdx + ']'));
                    });
                    rowIdx++;
                });
            }

            function updateRemoveButtons() {
                if ($('#itemsTable tbody tr').length > 1) {
                    $('.remove-row-btn').removeClass('d-none');
                } else {
                    $('.remove-row-btn').addClass('d-none');
                }
            }

            $('#purchaseForm').submit(function (e) {
                var batches = [];
                var isValid = true;
                $('.batch-input').each(function () {
                    var val = $(this).val();
                    if (val && batches.includes(val)) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Duplicate Batch',
                            text: 'Batch Number ' + val + ' is duplicated in this form. Please ensure each item has a unique batch number.'
                        });
                        $(this).focus();
                        isValid = false;
                        return false;
                    }
                    if (val) batches.push(val);
                });
                if (!isValid) e.preventDefault();
            });

            function updateGrandTotals() {
                var totalQty = 0;
                var totalCost = 0;
                var totalSelling = 0;
                $('#itemsTable tbody tr').each(function () {
                    var qty = parseFloat($(this).find('[name$=".Quantity"]').val()) || 0;
                    var cost = parseFloat($(this).find('[name$=".CostPrice"]').val()) || 0;
                    var selling = parseFloat($(this).find('[name$=".SellingPrice"]').val()) || 0;
                    totalQty += qty;
                    totalCost += qty * cost;
                    totalSelling += qty * selling;
                });
                $('#grandTotalQty').text(totalQty);
                $('#grandTotalCost').text(totalCost.toFixed(2));
                $('#grandTotalSelling').text(totalSelling.toFixed(2));
            }

            $(document).on('input', '[name$=".Quantity"], [name$=".CostPrice"], [name$=".SellingPrice"]', function () {
                updateGrandTotals();
            });

            updateRemoveButtons();
            updateGrandTotals();
        });
    </script>
    <style>
        .bg-label-info { background-color: rgba(139, 92, 246, 0.16) !important; color: #8B5CF6 !important; }
        .bg-label-warning { background-color: rgba(245, 158, 11, 0.16) !important; color: #F59E0B !important; }
        .bg-label-secondary { background-color: rgba(100, 116, 139, 0.16) !important; color: #64748B !important; }
        .btn-label-secondary { background-color: #f1f0f2; color: #64748B; border-color: transparent; }
        .btn-label-secondary:hover { background-color: #e1e0e3; color: #64748B; }
        .btn-label-danger { background-color: rgba(239, 68, 68, 0.1) !important; color: #EF4444 !important; border-color: transparent; }
        .btn-label-danger:hover { background-color: #EF4444 !important; color: #fff !important; }
    </style>
}
