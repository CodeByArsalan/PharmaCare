@model PharmaCare.Domain.Models.Inventory.StockMain

@{
    ViewData["Title"] = "Purchase Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <!-- Header & Breadcrumbs -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-0">@Model.InvoiceNo</h4>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="PurchaseIndex" class="btn btn-secondary">
                <i class="bx bx-arrow-back me-1"></i> Back to list
            </a>
            <button class="btn btn-primary" onclick="window.print()">
                <i class="bx bx-printer me-1"></i> Print
            </button>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Main Details Card -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4 h-100">
                <div class="card-header border-bottom bg-transparent">
                    <h5 class="card-title mb-0">Receipt Information</h5>
                </div>
                <div class="card-body pt-4">
                    <div class="row g-4">
                        <div class="col-sm-6">
                            <div class="d-flex align-items-start">
                                <span class="badge bg-label-primary p-2 rounded me-3">
                                    <i class="bx bx-store fs-4"></i>
                                </span>
                                <div>
                                    <h6 class="mb-1">Destination Store</h6>
                                    <p class="mb-0 fw-bold">@(Model.Store?.Name ?? "N/A")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-start">
                                <span class="badge bg-label-info p-2 rounded me-3">
                                    <i class="bx bx-link fs-4"></i>
                                </span>
                                <div>
                                    <h6 class="mb-1">Supplier Invoice</h6>
                                    <p class="mb-0 fw-bold">@(Model.SupplierInvoiceNo ?? "Direct Receipt")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-start">
                                <span class="badge bg-label-success p-2 rounded me-3">
                                    <i class="bx bx-user fs-4"></i>
                                </span>
                                <div>
                                    <h6 class="mb-1">Supplier</h6>
                                    <p class="mb-0 fw-bold">@(Model.Party?.PartyName ?? "N/A")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-start">
                                <span class="badge bg-label-warning p-2 rounded me-3">
                                    <i class="bx bx-money fs-4"></i>
                                </span>
                                <div>
                                    <h6 class="mb-1">Total Amount</h6>
                                    <p class="mb-0 fw-bold">Rs. @Model.TotalAmount.ToString("N2")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Info Card -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header border-bottom bg-transparent">
                    <h5 class="card-title mb-0">Timeline & Status</h5>
                </div>
                <div class="card-body pt-4">
                    <div class="mb-4">
                        <label class="text-muted small d-block mb-1">Received Date</label>
                        <h6 class="fw-bold"><i class="bx bx-calendar me-2 text-primary"></i>@Model.InvoiceDate.ToString("dd MMM yyyy")</h6>
                    </div>
                    <div class="mb-4">
                        <label class="text-muted small d-block mb-1">Payment Status</label>
                        <h6 class="fw-bold">
                            <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : Model.PaymentStatus == "Partial" ? "bg-warning" : "bg-danger")">
                                @Model.PaymentStatus
                            </span>
                        </h6>
                    </div>
                    <div>
                        <span class="badge bg-label-success w-100 py-2">
                            <i class="bx bx-check-circle me-1"></i> @Model.Status
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header border-bottom bg-transparent">
            <h5 class="card-title mb-0">Received Items</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Product</th>
                            <th>Batch No</th>
                            <th class="text-center">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Cost</th>
                            <th class="text-end pe-4">Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.StockDetails != null && Model.StockDetails.Any())
                        {
                            foreach (var item in Model.StockDetails)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="fw-bold">@(item.Product?.ProductName ?? "N/A")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-label-secondary">
                                            <i class="bx bx-barcode me-1"></i>@(item.ProductBatch?.BatchNumber ?? "N/A")
                                        </span>
                                    </td>
                                    <td class="text-center fw-bold">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end">@item.PurchasePrice.ToString("N2")</td>
                                    <td class="text-end pe-4 fw-bold text-success">@item.LineTotal.ToString("N2")</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <th colspan="5" class="text-end">Total:</th>
                            <th class="text-end pe-4 fw-bold text-primary">Rs. @Model.TotalAmount.ToString("N2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-label-primary { background-color: #e7e7ff !important; color: #0EA5E9 !important; }
    .bg-label-info { background-color: #d7f5fc !important; color: #03c3ec !important; }
    .bg-label-success { background-color: #e8fadf !important; color: #71dd37 !important; }
    .bg-label-warning { background-color: #fff3e3 !important; color: #ffab00 !important; }
    .bg-label-secondary { background-color: #ebedef !important; color: #64748B !important; }
</style>
