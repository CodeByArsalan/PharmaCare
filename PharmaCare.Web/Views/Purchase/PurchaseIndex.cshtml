@model PharmaCare.Web.Models.Inventory.PurchaseIndexViewModel

@{
    ViewData["Title"] = "Purchases";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int RowNo = 0;
}

<div class="container-fluid flex-grow-1 container-p-y p-0">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-0">
                <span class="text-muted fw-light"></span> Purchases (Stock In)
            </h4>
        </div>
        <a asp-action="AddPurchase" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> Create Purchase
        </a>
    </div>

    <!-- Summary Metrics -->
    <div class="row mb-4">
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-primary me-3">
                        <i class="bx bx-receipt"></i>
                    </div>
                    <div>
                        <p class="metric-label">Today's Purchases</p>
                        <h4 class="metric-value">@Model.Summary.TotalPurchasesToday</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-info me-3">
                        <i class="bx bx-stats"></i>
                    </div>
                    <div>
                        <p class="metric-label">This Month</p>
                        <h4 class="metric-value">@Model.Summary.TotalPurchasesThisMonth</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-success me-3">
                        <i class="bx bx-trending-up"></i>
                    </div>
                    <div>
                        <p class="metric-label">Value (Month)</p>
                        <h4 class="metric-value text-success">@Model.Summary.TotalValueThisMonth.ToString("C0")</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3 mb-4">
            <div class="card metric-card">
                <div class="d-flex align-items-center">
                    <div class="metric-icon bg-label-warning me-3">
                        <i class="bx bx-time-five"></i>
                    </div>
                    <div>
                        <p class="metric-label">Pending POs</p>
                        <h4 class="metric-value text-warning">@Model.Summary.PendingPOs</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Purchase Table -->
    <div class="card shadow-sm">
        <div class="card-header border-bottom">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="card-title mb-0">Purchase History</h5>
                </div>
                <div class="col-md-6">
                    <input type="text" id="tableSearch" class="form-control form-select-sm"
                        placeholder="Search by Purchase#, Supplier or PO#..." />
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="purchaseTable">
                    <thead class="table-light text-nowrap">
                        <tr>
                            <th width="50">#</th>
                            <th>Purchase Info</th>
                            <th>Date</th>
                            <th>Source PO</th>
                            <th>Supplier</th>
                            <th>Store</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Purchases.Any())
                        {
                            @foreach (var item in Model.Purchases)
                            {
                                RowNo++;
                                <tr>
                                    <td>@RowNo</td>
                                    <td>
                                        <span class="fw-semibold text-primary">@item.InvoiceNo</span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>@item.CreatedDate.ToString("dd MMM yyyy")</span>
                                            <small class="text-muted">@item.CreatedDate.ToString("hh:mm tt")</small>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.SupplierInvoiceNo))
                                        {
                                            <span class="badge bg-label-info">@item.SupplierInvoiceNo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-secondary">Direct</span>
                                        }
                                    </td>
                                    <td>@(item.Party?.PartyName ?? "N/A")
                                    </td>
                                    <td>
                                        <span class="badge bg-label-primary">@(item.Store?.Name ?? "N/A")</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="PurchaseDetails" asp-route-id="@Utility.EncryptURL(item.StockMainID.ToString())"
                                            class="btn btn-sm btn-icon btn-label-info" title="View Details">
                                            <i class="bx bx-show"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="bx bx-receipt empty-state-icon"></i>
                                        <h5 class="mt-3">No Purchases found</h5>
                                        <p class="text-muted">Create your first Purchase to start tracking stock in.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#tableSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#purchaseTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <style>
        .bg-label-primary {
            background-color: rgba(14, 165, 233, 0.16) !important;
            color: #0EA5E9 !important;
        }

        .bg-label-info {
            background-color: rgba(139, 92, 246, 0.16) !important;
            color: #03c3ec !important;
        }

        .bg-label-success {
            background-color: rgba(34, 197, 94, 0.16) !important;
            color: #71dd37 !important;
        }

        .bg-label-warning {
            background-color: rgba(245, 158, 11, 0.16) !important;
            color: #ffab00 !important;
        }

        .bg-label-secondary {
            background-color: rgba(100, 116, 139, 0.16) !important;
            color: #8592a3 !important;
        }

        .btn-label-info {
            background-color: rgba(139, 92, 246, 0.1) !important;
            color: #03c3ec !important;
            border-color: transparent;
        }

        .btn-label-info:hover {
            background-color: #03c3ec !important;
            color: #fff !important;
        }
    </style>
}
