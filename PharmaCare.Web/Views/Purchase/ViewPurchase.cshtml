@model PharmaCare.Domain.Entities.Transactions.StockMain
@{
    ViewData["Title"] = "View Purchase";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-eye"></i>
        Purchase Details - @Model.TransactionNo
    </h4>
    <a asp-action="PurchasesIndex" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Transaction Information</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <label class="form-label text-muted small">GRN Number</label>
                <p class="mb-0"><strong>@Model.TransactionNo</strong></p>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">Date</label>
                <p class="mb-0">@Model.TransactionDate.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">Supplier</label>
                <p class="mb-0">@Model.Party?.Name</p>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted small">Status</label>
                <p class="mb-0">
                    @if (Model.Status == "Approved")
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else if (Model.Status == "Void")
                    {
                        <span class="badge bg-danger">Void</span>
                    }
                </p>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.Remarks))
        {
            <div class="row mt-3">
                <div class="col-12">
                    <label class="form-label text-muted small">Remarks</label>
                    <p class="mb-0">@Model.Remarks</p>
                </div>
            </div>
        }
        @if (Model.ReferenceStockMain != null)
        {
            <div class="row mt-3">
                <div class="col-12">
                    <label class="form-label text-muted small">Reference PO</label>
                    <p class="mb-0">@Model.ReferenceStockMain.TransactionNo</p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Line Items -->
<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0"><i class="fas fa-list me-2"></i>Line Items</h6>
    </div>
    <div class="card-body p-0">
        <table class="table table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 50px;">#</th>
                    <th>Product</th>
                    <th class="text-end" style="width: 120px;">Quantity</th>
                    <th class="text-end" style="width: 140px;">Cost Price</th>
                    <th class="text-end" style="width: 140px;">Line Total</th>
                </tr>
            </thead>
            <tbody>
                @{ var lineNo = 1; }
                @foreach (var detail in Model.StockDetails)
                {
                    <tr>
                        <td>@(lineNo++)</td>
                        <td>@detail.Product?.Name</td>
                        <td class="text-end">@detail.Quantity.ToString("N4")</td>
                        <td class="text-end">@detail.CostPrice.ToString("N2")</td>
                        <td class="text-end">@detail.LineTotal.ToString("N2")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-light">
                    <td colspan="4" class="text-end"><strong>Sub Total:</strong></td>
                    <td class="text-end"><strong>@Model.SubTotal.ToString("N2")</strong></td>
                </tr>
                @if (Model.DiscountAmount > 0)
                {
                    <tr class="table-light">
                        <td colspan="4" class="text-end">Discount (@Model.DiscountPercent%):</td>
                        <td class="text-end text-danger">-@Model.DiscountAmount.ToString("N2")</td>
                    </tr>
                }
                <tr class="table-primary">
                    <td colspan="4" class="text-end"><strong>Total Amount:</strong></td>
                    <td class="text-end"><strong>@Model.TotalAmount.ToString("N2")</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<!-- Void Information -->
@if (Model.Status == "Void")
{
    <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white">
            <h6 class="mb-0"><i class="fas fa-ban me-2"></i>Void Information</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label text-muted small">Voided At</label>
                    <p class="mb-0">@Model.VoidedAt?.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-8">
                    <label class="form-label text-muted small">Reason</label>
                    <p class="mb-0">@Model.VoidReason</p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Payment Section -->
@if (Model.Status == "Approved")
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Payment Information</h6>
            @if (Model.BalanceAmount > 0)
            {
                <a asp-controller="SupplierPayment" asp-action="MakePayment" asp-route-stockMainId="@Model.StockMainID" 
                   class="btn btn-sm btn-success">
                    <i class="fas fa-plus me-1"></i>Make Payment
                </a>
            }
        </div>
        <div class="card-body">
            <div class="row text-center mb-4">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body py-3">
                            <h6 class="text-muted mb-1">Total Amount</h6>
                            <h4 class="mb-0">@Model.TotalAmount.ToString("N2")</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body py-3">
                            <h6 class="mb-1">Paid Amount</h6>
                            <h4 class="mb-0">@Model.PaidAmount.ToString("N2")</h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card @(Model.BalanceAmount > 0 ? "bg-danger text-white" : "bg-secondary text-white")">
                        <div class="card-body py-3">
                            <h6 class="mb-1">Balance</h6>
                            <h4 class="mb-0">@Model.BalanceAmount.ToString("N2")</h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex align-items-center mb-3">
                <span class="me-2">Payment Status:</span>
                @if (Model.PaymentStatus == "Paid")
                {
                    <span class="badge bg-success">Fully Paid</span>
                }
                else if (Model.PaymentStatus == "Partial")
                {
                    <span class="badge bg-warning text-dark">Partially Paid</span>
                }
                else
                {
                    <span class="badge bg-danger">Unpaid</span>
                }
            </div>

            <!-- Payment History -->
            <h6 class="mb-3"><i class="fas fa-history me-2"></i>Payment History</h6>
            <div id="paymentHistoryContainer">
                <div class="text-center text-muted py-3">
                    <i class="fas fa-spinner fa-spin me-2"></i>Loading payment history...
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadPaymentHistory();
        });

        async function loadPaymentHistory() {
            try {
                const response = await fetch('@Url.Action("GetPaymentHistory", "SupplierPayment", new { stockMainId = Model.StockMainID })');
                const payments = await response.json();
                
                const container = document.getElementById('paymentHistoryContainer');
                
                if (payments.length === 0) {
                    container.innerHTML = '<p class="text-muted mb-0">No payments recorded yet.</p>';
                    return;
                }

                let html = `
                    <table class="table table-sm table-bordered mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Reference</th>
                                <th>Date</th>
                                <th>Method</th>
                                <th>Account</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                `;
                
                payments.forEach(p => {
                    html += `
                        <tr>
                            <td>${p.reference}</td>
                            <td>${p.date}</td>
                            <td><span class="badge bg-${p.method === 'Cash' ? 'success' : p.method === 'Bank' ? 'primary' : 'warning'}">${p.method}</span></td>
                            <td>${p.account || '-'}</td>
                            <td class="text-end"><strong>${parseFloat(p.amount).toFixed(2)}</strong></td>
                        </tr>
                    `;
                });
                
                html += '</tbody></table>';
                container.innerHTML = html;
            } catch (error) {
                document.getElementById('paymentHistoryContainer').innerHTML = 
                    '<p class="text-danger mb-0">Error loading payment history.</p>';
            }
        }
    </script>
}

