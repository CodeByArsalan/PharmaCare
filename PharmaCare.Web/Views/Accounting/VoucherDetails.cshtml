@model PharmaCare.Domain.Models.Inventory.AccountVoucher

@{
    ViewData["Title"] = $"Voucher {Model.VoucherCode}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row page-titles mb-3 mt-2 d-print-none">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary fw-bold text-uppercase mb-0">Voucher Details</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="VoucherIndex">Accounting</a></li>
            <li class="breadcrumb-item active">@Model.VoucherCode</li>
        </ol>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <button onclick="window.print()" class="btn btn-outline-secondary">
            <i class="bx bx-printer me-1"></i> Print
        </button>
        <a asp-action="VoucherIndex" class="btn btn-light">Back to List</a>
    </div>
</div>

<div class="card mb-4 shadow-sm" id="printableArea">
    <div class="card-body p-4">
        <!-- Voucher Header -->
        <div class="row mb-4">
            <div class="col-6">
                <h2 class="text-primary">@Model.VoucherType?.Name</h2>
                <h5 class="text-muted">@Model.VoucherCode</h5>
            </div>
            <div class="col-6 text-end">
                <h4 class="mb-1">@Model.VoucherDate.ToString("dd-MMM-yyyy")</h4>
                <span class="badge @(Model.Status == "Posted" ? "bg-success" : "bg-warning") fs-6">@Model.Status</span>
                @if(Model.IsReversed)
                {
                    <span class="badge bg-danger fs-6 ms-1">Reversed</span>
                }
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <strong>Narration:</strong>
                <p class="text-secondary">@Model.Narration</p>
            </div>
            <div class="col-md-6 text-end">
                @if (!string.IsNullOrEmpty(Model.SourceTable))
                {
                    <p class="mb-0"><strong>Source:</strong> @Model.SourceTable #@Model.SourceID</p>
                }
            </div>
        </div>

        <!-- Voucher Lines -->
        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 5%">#</th>
                        <th style="width: 35%">Account</th>
                        <th style="width: 30%">Particulars</th>
                        <th style="width: 15%" class="text-end">Debit</th>
                        <th style="width: 15%" class="text-end">Credit</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1; }
                    @foreach (var detail in Model.VoucherDetails)
                    {
                        <tr>
                            <td class="text-center">@i</td>
                            <td>
                                <strong>@detail.Account?.AccountName</strong>
                                <br/>
                                <small class="text-muted">@detail.Account?.AccountNo</small>
                            </td>
                            <td>@detail.Particulars</td>
                            <td class="text-end">
                                @if(detail.Dr > 0) { <span>@detail.Dr.ToString("N2")</span> }
                            </td>
                            <td class="text-end">
                                @if(detail.Cr > 0) { <span>@detail.Cr.ToString("N2")</span> }
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
                <tfoot class="table-light fw-bold">
                    <tr>
                        <td colspan="3" class="text-end">Totals:</td>
                        <td class="text-end">@Model.TotalDebit.ToString("N2")</td>
                        <td class="text-end">@Model.TotalCredit.ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="row mt-5 d-print-block d-none">
            <div class="col-4 text-center">
                <div class="border-top pt-2 w-75 mx-auto">Prepared By</div>
            </div>
            <div class="col-4 text-center">
                <div class="border-top pt-2 w-75 mx-auto">Checked By</div>
            </div>
            <div class="col-4 text-center">
                <div class="border-top pt-2 w-75 mx-auto">Approved By</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        @@media print {
            body * {
                visibility: hidden;
            }
            #printableArea, #printableArea * {
                visibility: visible;
            }
            #printableArea {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
            }
            .d-print-none {
                display: none !important;
            }
            .d-print-block {
                display: block !important;
            }
        }
    </style>
}
