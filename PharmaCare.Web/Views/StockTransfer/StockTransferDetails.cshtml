@model PharmaCare.Domain.Models.Inventory.StockTransfer

@{
    ViewData["Title"] = "Transfer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <!-- Header & Breadcrumbs -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-0"> #@Model.TransferNumber</h4>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="StockTransferIndex" class="btn btn-outline-secondary">
                <i class="bx bx-arrow-back me-1"></i> Back
            </a>
            @if (Model.Status == "Pending")
            {
                <form asp-action="ApproveTransfer" asp-route-id="@Model.StockTransferID" method="post" class="d-inline"
                    id="approveForm">
                    <button type="button" class="btn btn-success" id="btnApprove">
                        <i class="bx bx-check-double me-1"></i> Approve & Receive
                    </button>
                </form>
            }
        </div>
    </div>

    <!-- Transfer Flow Visualization -->
    <div class="card shadow-sm border-0 mb-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="row g-0 align-items-center bg-label-primary p-4">
                <div class="col text-center">
                    <div class="bg-white p-3 rounded shadow-sm d-inline-block mb-2">
                        <i class="bx bx-store-alt fs-2 text-primary"></i>
                    </div>
                    <h6 class="mb-1">Source Store</h6>
                    <p class="mb-0 fw-bold">@Model.SourceStore?.Name</p>
                </div>
                <div class="col-auto text-center px-4">
                    <div class="d-flex flex-column align-items-center">
                        <span class="badge bg-primary rounded-pill px-3 mb-2">@Model.Status</span>
                        <i class="bx bx-right-arrow-alt fs-1 text-primary animate-arrow"></i>
                    </div>
                </div>
                <div class="col text-center">
                    <div class="bg-white p-3 rounded shadow-sm d-inline-block mb-2">
                        <i class="bx bxs-store-alt fs-2 text-success"></i>
                    </div>
                    <h6 class="mb-1">Destination Store</h6>
                    <p class="mb-0 fw-bold">@Model.DestinationStore?.Name</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Metadata Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header border-bottom bg-transparent">
                    <h5 class="card-title mb-0">Transfer Info</h5>
                </div>
                <div class="card-body pt-4">
                    <div class="mb-4">
                        <label class="text-muted small d-block mb-1">Transfer Date</label>
                        <h6 class="fw-bold"><i
                                class="bx bx-calendar me-2 text-primary"></i>@Model.TransferDate.ToString("dd MMM yyyy")
                        </h6>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="mb-4">
                            <label class="text-muted small d-block mb-1">Remarks</label>
                            <p class="small bg-light p-2 rounded border-start border-primary border-3">@Model.Remarks</p>
                        </div>
                    }
                    <div>
                        <label class="text-muted small d-block mb-1">Status Tracking</label>
                        @if (Model.Status == "Completed")
                        {
                            <div class="alert alert-success d-flex align-items-center p-2 mb-0" role="alert">
                                <i class="bx bx-check-double me-2"></i>
                                <div class="small">Successfully received and inventory updated.</div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning d-flex align-items-center p-2 mb-0" role="alert">
                                <i class="bx bx-time me-2"></i>
                                <div class="small">Waiting for destination store approval.</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Items Table -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header border-bottom bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Transfer Items</h5>
                    <span class="badge bg-label-secondary text-primary">@Model.StockTransferItems?.Count items</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Product</th>
                                    <th>Batch Details</th>
                                    <th class="text-center pe-4">Transfer Qty</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.StockTransferItems)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <span
                                                class="fw-bold text-heading">@item.ProductBatch?.Product?.ProductName</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-label-info"><i
                                                    class="bx bx-barcode me-1"></i>@item.ProductBatch?.BatchNumber</span>
                                        </td>
                                        <td class="text-center pe-4">
                                            <h6 class="mb-0 fw-bold">@item.Quantity</h6>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-label-primary {
        background-color: #E0F2FE !important;
        color: #0EA5E9 !important;
    }

    .bg-label-secondary {
        background-color: #F1F5F9 !important;
        color: #64748B !important;
    }

    .text-heading {
        color: #0C4A6E;
    }

    .breadcrumb-style1 .breadcrumb-item a {
        color: #0EA5E9;
        text-decoration: none;
    }

    .breadcrumb-style1 .breadcrumb-item.active {
        color: #94A3B8;
    }

    .animate-arrow {
        animation: slideRight 1.5s infinite;
    }

    @@keyframes slideRight {
        0% {
            transform: translateX(0);
            opacity: 0.5;
        }

        50% {
            transform: translateX(10px);
            opacity: 1;
        }

        100% {
            transform: translateX(0);
            opacity: 0.5;
        }
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnApprove').on('click', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Approve Transfer?',
                    text: "This will update inventory in the destination store. This action cannot be undone!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#22C55E',
                    cancelButtonColor: '#64748B',
                    confirmButtonText: 'Yes, Approve & Receive!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $('#approveForm').submit();
                    }
                });
            });
        });
    </script>
}
