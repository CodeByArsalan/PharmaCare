@model IEnumerable<PharmaCare.Domain.Models.Inventory.StockTransfer>

@{
    ViewData["Title"] = "Stock Transfers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card rounded-0">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Stock Transfers</h4>
        <a asp-action="CreateStockTransfer" class="btn btn-primary">
            <span class="tf-icons bx bx-plus me-1"></span> New Transfer
        </a>
    </div>
    <div class="card-body p-0">
    <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered dataTable">
            <thead class="table-dark">
                <tr>
                    <th>Transfer #</th>
                    <th>Date</th>
                    <th>Source Store</th>
                    <th>Destination Store</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                        <tr>
                            <td><strong>@item.TransferNumber</strong></td>
                            <td>@item.TransferDate.ToString("dd MMM yyyy")</td>
                            <td>@item.SourceStore?.Name</td>
                            <td>@item.DestinationStore?.Name</td>
                            <td>
                            @if (item.Status == "Completed")
                            {
                                    <span class="badge bg-label-success">@item.Status</span>
                            }
                            else if (item.Status == "Pending")
                            {
                                    <span class="badge bg-label-warning">@item.Status</span>
                            }
                            else
                            {
                                    <span class="badge bg-label-secondary">@item.Status</span>
                            }
                            </td>
                            <td>
                                <a asp-action="StockTransferDetails" asp-route-id="@Utility.EncryptURL(item.StockTransferID.ToString2())" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bx bx-show-alt"></i>
                                </a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
</div>
