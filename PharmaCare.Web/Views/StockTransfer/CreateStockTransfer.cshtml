@model PharmaCare.Domain.Models.Inventory.StockTransfer
@inject PharmaCare.Infrastructure.Interfaces.IComboBoxRepository _comboBox

@{
    ViewData["Title"] = "New Stock Transfer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">New Stock Transfer</h5>
            </div>
            <div class="card-body">
                <form id="transferForm" asp-action="CreateStockTransfer" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mt-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="TransferNumber" class="form-label">Transfer Number</label>
                            <input asp-for="TransferNumber" class="form-control" readonly />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TransferDate" class="form-label">Transfer Date</label>
                            <input asp-for="TransferDate" type="date" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="SourceStore_ID" class="form-label">Source Store (From)</label>
                            <select asp-for="SourceStore_ID" class="form-select" asp-items="@_comboBox.GetStores()"
                                id="SourceStoreId">
                                <option value="">Select Store</option>
                            </select>
                            <span asp-validation-for="SourceStore_ID" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DestinationStore_ID" class="form-label">Destination Store (To)</label>
                            <select asp-for="DestinationStore_ID" class="form-select"
                                asp-items="@_comboBox.GetStores()">
                                <option value="">Select Store</option>
                            </select>
                            <span asp-validation-for="DestinationStore_ID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Remarks" class="form-label">Remarks</label>
                        <textarea asp-for="Remarks" class="form-control" rows="2"></textarea>
                    </div>

                    <hr class="my-4" />

                    <h6>Transfer Items</h6>

                    <div class="table-responsive text-nowrap mb-3">
                        <table class="table table-bordered" id="itemsTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Item / Batch</th>
                                    <th width="150">Current Stock</th>
                                    <th width="150">Quantity</th>
                                    <th width="80"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Items will be added here dynamically -->
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4">
                                        <button type="button" class="btn btn-outline-primary" id="addItemBtn">
                                            <i class="bx bx-plus me-1"></i> Add Item
                                        </button>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="mt-3 d-flex justify-content-end gap-2">
                        <a asp-action="StockTransferIndex" class="btn btn-secondary"><i
                                class="bx bx-arrow-back me-1"></i>Back to list</a>
                        <button type="submit" class="btn btn-success">Create Transfer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            let itemIndex = 0;

            // Load batches when source store changes
            // Note: In a real scenario, we'd fetch batches via AJAX. 
            // For now, we'll assume we have an endpoint Inventory/GetReturnableItems or similar adapted for Transfers.
            // Since we don't have a specific "GetStockForStore" endpoint that returns simple batch list with qty,
            // we might need to rely on the user inputting batch IDs or filtering. 
            // Better Approach: Use the existing "GetReturnableItems" but ignoring supplier_ID = 0 if possible, or add a proper endpoint.
            // I'll assume we add a "GetStoreStock(storeId)" endpoint eventually. 
            // For THIS iteration, I'll simulate or use a stub. 
            // Actually, I can use `PurchaseReturnController.GetBatchesForSupplier` logic but for store.
            // But wait, the `PurchaseReturnController` endpoint filters by Supplier ID.

            // To make this functional without adding more endpoints immediately, I will render a hidden list of ALL stock or fetch via a new endpoint.
            // Given the complexity, I'll add the endpoint to `StockTransferController` if needed, but for now I'll use a placeholder logic 
            // where user selects ProductBatch from a dropdown (populated via AJAX).

            // Let's use `InventoryService.GetReturnableItems` logic but simplified.
            // I will add `GetBatchesForStore` action to `StockTransferController` quickly after this file creation.

            $('#addItemBtn').click(function () {
                var storeId = $('#SourceStoreId').val();
                if (!storeId) {
                    alert('Please select Source Store first.');
                    return;
                }

                // AJAX call to get batches would happen here. For now, adding a row structure.
                // We'll populate the select via a separate function.

                var row = `
                        <tr>
                            <td>
                                <select name="StockTransferItems[${itemIndex}].ProductBatch_ID" class="form-select batch-select" required>
                                    <option value="">Select Batch...</option>
                                </select>
                            </td>
                            <td>
                                <input type="text" class="form-control stock-qty" readonly />
                            </td>
                            <td>
                                <input type="number" name="StockTransferItems[${itemIndex}].Quantity" class="form-control transfer-qty" min="1" required />
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-icon btn-outline-danger remove-row">
                                    <i class="bx bx-trash"></i>
                                </button>
                            </td>
                        </tr>
                    `;

                $('#itemsTable tbody').append(row);
                loadBatchesForStore(storeId, itemIndex);
                itemIndex++;
            });

            $(document).on('click', '.remove-row', function () {
                $(this).closest('tr').remove();
            });

            $('#SourceStoreId').change(function () {
                // Clear existing lines when store changes as batches depend on store
                $('#itemsTable tbody').empty();
                itemIndex = 0;
            });

            function loadBatchesForStore(storeId, index) {
                // We need this endpoint. I'll create it in the controller next.
                $.get('/StockTransfer/GetBatchesForStore?storeId=' + storeId, function (data) {
                    var select = $(`select[name="StockTransferItems[${index}].ProductBatch_ID"]`);
                    select.empty();
                    select.append('<option value="">Select Batch...</option>');
                    $.each(data, function (i, item) {
                        select.append(`<option value="${item.productBatchID}" data-stock="${item.quantityOnHand}">
                                ${item.productName} - ${item.batchNumber} (Exp: ${new Date(item.expiryDate).toLocaleDateString()})
                            </option>`);
                    });
                });
            }

            $(document).on('change', '.batch-select', function () {
                var stock = $('option:selected', this).data('stock');
                $(this).closest('tr').find('.stock-qty').val(stock);
                $(this).closest('tr').find('.transfer-qty').attr('max', stock);
            });
        });
    </script>
}
