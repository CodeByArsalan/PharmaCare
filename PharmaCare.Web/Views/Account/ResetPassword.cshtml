@model PharmaCare.Web.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LoginLayout";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            margin: 0;
        }

        .login-wrapper {
            width: 100%;
            max-width: 450px;
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.1);
            padding: 3rem 2.5rem;
        }

        .brand-name {
            font-size: 1.875rem;
            font-weight: 700;
            color: white;
            margin-bottom: 2.5rem;
            text-align: center;
        }

        .welcome-text {
            text-align: center;
            margin-bottom: 2rem;
        }

        .welcome-text h4 {
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .input-group-custom {
            display: flex;
            align-items: center;
            border: 2px solid #e2e8f0;
            border-radius: 0.75rem;
            background: white;
            transition: all 0.3s ease;
            height: 58px;
        }

        .input-group-custom:focus-within {
            border-color: #0EA5E9;
            box-shadow: 0 0 0 4px rgba(14, 165, 233, 0.15);
        }

        .form-floating input {
            border: none;
            background: transparent;
            box-shadow: none !important;
        }

        .input-icon {
            width: 45px;
            text-align: center;
            color: #94a3b8;
            font-size: 1.25rem;
        }

        .btn-reset {
            background: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
            border: none;
            height: 54px;
            border-radius: 0.75rem;
            font-weight: 600;
            color: white;
            box-shadow: 0 4px 6px -1px rgba(14, 165, 233, 0.4);
            transition: all 0.3s ease;
        }

        .password-toggle {
            width: 45px;
            text-align: center;
            color: #94a3b8;
            cursor: pointer;
            font-size: 1.25rem;
        }
    </style>
}

<div class="login-wrapper">
    <h2 class="brand-name">PharmaCare</h2>

    <div class="login-card">
        <div class="welcome-text">
            <h4>Reset Password üõ°Ô∏è</h4>
            <p>Please enter your new password below</p>
        </div>

        <form asp-action="ResetPassword" method="post">
            <input asp-for="Code" type="hidden" />
            <input asp-for="Email" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <div class="input-group-custom">
                    <i class='bx bx-lock-open-alt input-icon'></i>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword"
                            placeholder="New Password" autofocus />
                        <label for="floatingPassword">New Password</label>
                    </div>
                    <i class='bx bx-hide password-toggle' data-target="floatingPassword"></i>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <div class="input-group-custom">
                    <i class='bx bx-lock-alt input-icon'></i>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="ConfirmPassword" type="password" class="form-control"
                            id="floatingConfirmPassword" placeholder="Confirm Password" />
                        <label for="floatingConfirmPassword">Confirm Password</label>
                    </div>
                    <i class='bx bx-hide password-toggle' data-target="floatingConfirmPassword"></i>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-reset">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.password-toggle').forEach(toggle => {
            toggle.addEventListener('click', function () {
                const targetId = this.getAttribute('data-target');
                const input = document.getElementById(targetId);
                const type = input.type === 'password' ? 'text' : 'password';
                input.type = type;
                this.classList.toggle('bx-hide');
                this.classList.toggle('bx-show');
            });
        });
    </script>
}
