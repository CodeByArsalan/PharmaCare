@model PharmaCare.Web.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LoginLayout";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            margin: 0;
        }

        .login-wrapper {
            width: 100%;
            max-width: 450px;
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.1);
            padding: 3rem 2.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .logo-wrapper {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
            border-radius: 1.25rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: white;
            margin-bottom: 1rem;
            box-shadow: 0 10px 25px -5px rgba(14, 165, 233, 0.5);
        }

        .brand-name {
            font-size: 1.875rem;
            font-weight: 700;
            color: white;
            margin-bottom: 0.25rem;
        }

        .welcome-text {
            text-align: center;
            margin-bottom: 2rem;
        }

        .welcome-text h4 {
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
            font-size: 1.5rem;
        }

        .welcome-text p {
            color: #64748b;
            font-size: 0.9375rem;
        }

        .input-group-custom {
            display: flex;
            align-items: center;
            border: 2px solid #e2e8f0;
            border-radius: 0.75rem;
            background: white;
            transition: all 0.3s ease;
            height: 58px;
        }

        .input-group-custom:focus-within {
            border-color: #0EA5E9;
            box-shadow: 0 0 0 4px rgba(14, 165, 233, 0.15);
        }

        .form-floating input {
            border: none;
            background: transparent;
            box-shadow: none !important;
        }

        .input-icon {
            width: 45px;
            text-align: center;
            color: #94a3b8;
            font-size: 1.25rem;
        }

        .btn-reset {
            background: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
            border: none;
            height: 54px;
            border-radius: 0.75rem;
            font-weight: 600;
            color: white;
            box-shadow: 0 4px 6px -1px rgba(14, 165, 233, 0.4);
            transition: all 0.3s ease;
        }

        .btn-reset:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px -5px rgba(14, 165, 233, 0.6);
        }

        .back-to-login {
            text-align: center;
            margin-top: 1.5rem;
        }

        .back-to-login a {
            color: #0EA5E9;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .back-to-login a:hover {
            text-decoration: underline;
        }
    </style>
}

<div class="login-wrapper">
    <div class="logo-wrapper">
        <div class="logo-icon">
            <i class='bx bxs-first-aid'></i>
        </div>
        <h2 class="brand-name">PharmaCare</h2>
    </div>

    <div class="login-card">
        <div class="welcome-text">
            <h4>Forgot Password? ðŸ”’</h4>
            <p>Enter your email and we'll send you instructions to reset your password</p>
        </div>

        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-4">
                <div class="input-group-custom">
                    <i class='bx bx-envelope input-icon'></i>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="name@example.com"
                            autofocus />
                        <label for="floatingEmail">Email Address</label>
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-reset">
                    Send Reset Link
                </button>
            </div>
        </form>

        <div class="back-to-login">
            <a asp-action="Login">
                <i class='bx bx-chevron-left'></i> Back to Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
