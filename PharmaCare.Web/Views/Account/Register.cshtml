@model PharmaCare.Web.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register - PharmaCare</title>
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .floating-shape {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: shape-float 15s infinite ease-in-out;
        }
        
        .floating-shape:nth-child(1) { width: 80px; height: 80px; top: 20%; left: 10%; animation-delay: 0s; }
        .floating-shape:nth-child(2) { width: 120px; height: 120px; top: 60%; left: 70%; animation-delay: 2s; }
        .floating-shape:nth-child(3) { width: 60px; height: 60px; top: 80%; left: 30%; animation-delay: 4s; }
        .floating-shape:nth-child(4) { width: 100px; height: 100px; top: 10%; left: 80%; animation-delay: 1s; }
        
        @@keyframes shape-float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-30px) rotate(180deg); }
        }
        
        .brand-content {
            position: relative;
            z-index: 1;
            text-align: center;
            color: white;
        }
        
        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: var(--radius-lg);
            backdrop-filter: blur(5px);
        }
        
        .feature-item i {
            width: 24px;
            margin-right: 12px;
            color: var(--accent-400);
        }
    </style>
</head>
<body>
    <div class="auth-page">
        <!-- Left Panel - Branding -->
        <div class="auth-brand-panel">
            <div class="floating-shapes">
                <div class="floating-shape"></div>
                <div class="floating-shape"></div>
                <div class="floating-shape"></div>
                <div class="floating-shape"></div>
            </div>
            <div class="brand-content">
                <div class="auth-brand-icon">
                    <i class="fas fa-pills"></i>
                </div>
                <h1 class="display-5 fw-bold mb-3">PharmaCare</h1>
                <p class="lead opacity-75" style="max-width: 400px;">
                    Complete pharmacy management system for modern healthcare businesses
                </p>
                
                <div class="mt-5 text-start" style="max-width: 350px;">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Inventory & Stock Management</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Point of Sale (POS) System</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Financial Accounting & Reports</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Multi-Store Support</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Panel - Form -->
        <div class="auth-form-panel">
            <div class="auth-form-container">
                <div class="text-center mb-4">
                    <h2 class="mb-2">Create Account</h2>
                    <p class="text-secondary">Get started with PharmaCare</p>
                </div>
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }
                
                <form asp-action="Register" method="post">
                    <div class="mb-4">
                        <label class="form-label">Full Name</label>
                        <div class="input-icon-wrapper">
                            <input asp-for="FullName" type="text" class="form-control" placeholder="Enter your full name" required />
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">Email Address</label>
                        <div class="input-icon-wrapper">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
                            <i class="fas fa-envelope"></i>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">Password</label>
                        <div class="input-icon-wrapper">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" required />
                            <i class="fas fa-lock"></i>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">Confirm Password</label>
                        <div class="input-icon-wrapper">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" required />
                            <i class="fas fa-lock"></i>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100 py-3">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </button>
                </form>
                
                <div class="text-center mt-4 pt-4" style="border-top: 1px solid var(--glass-border);">
                    <p class="text-secondary mb-0">
                        Already have an account? <a href="/Account/Login" class="text-primary fw-semibold">Sign in</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.js"></script>
</body>
</html>
