@{
    ViewData["Title"] = "Password Reset Confirmed";
    Layout = "_LoginLayout";
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
            margin: 0;
        }

        .login-wrapper {
            width: 100%;
            max-width: 450px;
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-card {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 1.5rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.1);
            padding: 3rem 2.5rem;
            text-align: center;
        }

        .success-icon {
            font-size: 5rem;
            color: #28a745;
            margin-bottom: 1.5rem;
            animation: bounceIn 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        @@keyframes bounceIn {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            60% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        .brand-name {
            font-size: 1.875rem;
            font-weight: 700;
            color: white;
            margin-bottom: 2.5rem;
            text-align: center;
        }

        .welcome-text h4 {
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 1rem;
        }

        .welcome-text p {
            color: #64748b;
            margin-bottom: 1.5rem;
        }

        .btn-login {
            background: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
            border: none;
            height: 54px;
            border-radius: 0.75rem;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
        }
    </style>
}

<div class="login-wrapper">
    <h2 class="brand-name">PharmaCare</h2>

    <div class="login-card">
        <div class="success-icon">
            <i class='bx bx-check-double'></i>
        </div>
        <div class="welcome-text">
            <h4>Password Reset! ðŸŽ‰</h4>
            <p>Your password has been reset successfully. You can now log in with your new password.</p>
        </div>

        <a asp-action="Login" class="btn btn-primary d-flex align-items-center justify-content-center btn-login">
            Login Now
        </a>
    </div>
</div>
