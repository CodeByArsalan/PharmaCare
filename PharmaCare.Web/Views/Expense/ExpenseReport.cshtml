@model PharmaCare.Application.DTOs.Finance.ExpenseSummaryDto

@{
    ViewData["Title"] = "Expense Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title">Expense Summary</h3>
                <div class="card-tools">
                    <form asp-action="ExpenseReport" method="get" class="d-flex">
                        <input type="date" name="fromDate" value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")"
                            class="form-control form-control-sm me-2" />
                        <input type="date" name="toDate" value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")"
                            class="form-control form-control-sm me-2" />
                        <button type="submit" class="btn btn-sm btn-primary">Generate Report</button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12 col-12 p-2">
                        <div class="small-box bg-danger">
                            <div class="inner">
                                <h3>@Model.TotalExpenses.ToString("C")</h3>
                                <p>Total Expenses</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h5 class="card-title">Category Breakdown</h5>
                            </div>
                            <div class="card-body p-0">
                                <table class="table table-hover table-striped table-bordered dataTable">
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.ByCategory)
                                        {
                                            <tr>
                                                <td>@item.CategoryName</td>
                                                <td class="text-end">@item.Amount.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h5 class="card-title">Payment Account Breakdown</h5>
                            </div>
                            <div class="card-body p-0">
                                <table class="table table-hover table-striped table-bordered dataTable">
                                    <thead>
                                        <tr>
                                            <th>Account</th>
                                            <th class="text-end">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.BySourceAccount)
                                        {
                                            <tr>
                                                <td>@item.AccountName</td>
                                                <td class="text-end">@item.Amount.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
