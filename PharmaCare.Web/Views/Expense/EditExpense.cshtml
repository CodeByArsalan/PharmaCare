@model PharmaCare.Domain.Models.Finance.Expense
@inject PharmaCare.Infrastructure.Interfaces.IComboBoxRepository _comboBox

@{
    ViewData["Title"] = "Edit Expense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header">Edit Expense</h5>
            <div class="card-body">
                <form asp-action="EditExpense">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ExpenseID" />
                    <input type="hidden" asp-for="Voucher_ID" />
                    <div class="row mt-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExpenseCategory_ID" class="form-label">Category</label>
                            <select asp-for="ExpenseCategory_ID" class="form-select"
                                asp-items="@_comboBox.GetExpenseCategories(Model.ExpenseCategory_ID)">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="ExpenseCategory_ID" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExpenseDate" class="form-label">Date</label>
                            <input asp-for="ExpenseDate" type="date" class="form-control" />
                            <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Amount" class="form-label">Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">PKR</span>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="SourceAccount_ID" class="form-label">Payment Account (Credit)</label>
                            <select asp-for="SourceAccount_ID" class="form-select"
                                asp-items="@_comboBox.GetPaymentAccounts(Model.SourceAccount_ID)">
                                <option value="">-- Select Payment Account --</option>
                            </select>
                            <span asp-validation-for="SourceAccount_ID" class="text-danger"></span>
                            <small class="text-muted">Cash/Bank account money goes from</small>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ExpenseAccount_ID" class="form-label">Expense Account (Debit)</label>
                            <select asp-for="ExpenseAccount_ID" class="form-select"
                                asp-items="@_comboBox.GetExpenseAccounts(Model.ExpenseAccount_ID)">
                                <option value="">-- Select Expense Account --</option>
                            </select>
                            <span asp-validation-for="ExpenseAccount_ID" class="text-danger"></span>
                            <small class="text-muted">Expense account to record type of spending</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="VendorName" class="form-label">Vendor Name (optional)</label>
                            <input asp-for="VendorName" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ReceiptNumber" class="form-label">Receipt Number (optional)</label>
                            <input asp-for="ReceiptNumber" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Reference" class="form-label">Reference (optional)</label>
                            <input asp-for="Reference" class="form-control" />
                        </div>
                    </div>
                    <div class="mt-3 d-flex justify-content-end gap-2">
                        <a asp-action="Expenses" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-success">Update Expense</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
