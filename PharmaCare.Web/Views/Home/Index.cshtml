                        </div>
                        <span class="badge bg-label-success rounded-pill">+5 <i class='bx bx-user-plus'></i></span>
                    </div>
                    <h5 class="fw-bold mb-1">@ViewBag.TotalCustomers</h5>
                    <p class="text-muted mb-0 small">Total Customers</p>
                </div>
            </div>
        </div> *@

        <!-- Low Stock -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="avatar avatar-md bg-light-danger rounded">
                            <i class='bx bx-error-circle fs-3 text-danger'></i>
                        </div>
                        <span class="badge bg-label-danger rounded-pill">Action Needed</span>
                    </div>
                    <h5 class="fw-bold mb-1">@ViewBag.LowStockItems</h5>
                    <p class="text-muted mb-0 small">Low Stock Items</p>
                </div>
            </div>
        </div>
    </div>
}


