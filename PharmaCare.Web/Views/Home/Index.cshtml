                        <div class="avatar avatar-md bg-light-info rounded">
                            <i class='bx bx-receipt fs-3 text-info'></i>
                        </div>
                        <span class="badge bg-label-secondary rounded-pill">Daily</span>
                    </div>
                    <h5 class="fw-bold mb-1">@ViewBag.TransactionsToday</h5>
                    <p class="text-muted mb-0 small">Transactions Today</p>
                </div>
            </div>
        </div>

        @* <!-- Customers -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
