@{
    ViewData["Title"] = "Dashboard";
    int userType = ViewBag.LoginUserRole;
}

<div class="row mb-4">
    <div class="col-md-8">
        <div class="card bg-transparent shadow-none border-0">
            <div class="card-body p-0">
                <h3 class="fw-bold mb-1">Passionate About Healthcare</h3>
                <p class="text-muted mb-1">Here's what's happening in <strong>@ViewBag.SelectedStoreName</strong> today.
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <form method="get" action="@Url.Action("Index")" id="storeSelectorForm">
            <div class="input-group shadow-sm">
                <span class="input-group-text bg-white border-end-0"><i class='bx bx-store-alt'></i></span>
                <select name="storeId" class="form-select border-start-0 ps-0"
                    onchange="document.getElementById('storeSelectorForm').submit()">
                    <option value="">All Stores</option>
                    @if (ViewBag.Stores != null)
                    {
                        foreach (var store in (IEnumerable<SelectListItem>)ViewBag.Stores)
                        {
                            if (ViewBag.SelectedStoreId != null && ViewBag.SelectedStoreId.ToString() == store.Value)
                            {
                                <option value="@store.Value" selected>@store.Text</option>
                            }
                            else
                            {
                                <option value="@store.Value">@store.Text</option>
                            }
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<!-- Stats Cards -->
@if (userType == 1)
{
    <div class="row g-4 mb-4">
        <!-- Total Sales -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="avatar avatar-md bg-light-primary rounded">
                            <i class='bx bx-dollar fs-3 text-primary'></i>
                        </div>
                        <span class="badge bg-label-success rounded-pill">+12% <i class='bx bx-up-arrow-alt'></i></span>
                    </div>
                    <h5 class="fw-bold mb-1">@ViewBag.TotalSalesToday.ToString("C")</h5>
                    <p class="text-muted mb-0 small">Total Sales Today</p>
                </div>
            </div>
        </div>

        <!-- Transactions -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
