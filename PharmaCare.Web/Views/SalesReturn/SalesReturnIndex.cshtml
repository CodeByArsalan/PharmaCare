@model List<PharmaCare.Domain.Models.SaleManagement.SalesReturn>

@{
    ViewData["Title"] = "Sales Returns";
}

<div class="card rounded-0">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4><i class="fas fa-undo-alt me-2"></i>Sales Returns</h4>
        <a asp-action="SelectSale" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i> New Return
        </a>
    </div>

    <!-- Filters -->
    <div class="card-body border-bottom">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-secondary w-100">
                    <i class="fas fa-filter me-1"></i> Filter
                </button>
            </div>
        </form>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered dataTable" id="returnsTable">
                <thead class="table-dark">
                    <tr>
                        <th>Return #</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Store</th>
                        <th>Status</th>
                        <th>Reason</th>
                        <th>Total Amount</th>
                        <th>Items</th>
                        <th style="width: 120px">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ReturnNumber</td>
                            <td>@item.ReturnDate.ToString("dd-MMM-yyyy")</td>
                            <td>@(item.Party?.PartyName ?? "Walk-in")</td>
                            <td>@item.Store?.Name</td>
                            <td>
                                <span
                                    class="badge @(item.Status == "Completed" ? "bg-success" : item.Status == "Cancelled" ? "bg-danger" : "bg-warning")">
                                    @item.Status
                                </span>
                            </td>
                            <td>@item.ReturnReason</td>
                            <td class="text-end">@item.TotalAmount.ToString("N2")</td>
                            <td class="text-center">@item.ReturnLines?.Count</td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a asp-action="SalesReturnDetails"
                                        asp-route-id="@Utility.EncryptURL(item.SalesReturnID.ToString())"
                                        class="btn btn-sm btn-info text-white" title="View Details">
                                        <i class="bx bx-show"></i>
                                    </a>
                                    @if (item.Status == "Completed")
                                    {
                                        <button type="button" class="btn btn-sm btn-danger"
                                            onclick="confirmCancel('@Utility.EncryptURL(item.SalesReturnID.ToString())')"
                                            title="Cancel Return">
                                            <i class="bx bx-x"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#returnsTable').DataTable({
                order: [[1, 'desc']],
                pageLength: 25
            });
        });

        function confirmCancel(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You want to cancel this sales return? This will reverse the refund and inventory changes.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, Cancel it!',
                customClass: {
                    confirmButton: 'btn btn-danger me-3',
                    cancelButton: 'btn btn-label-secondary'
                },
                buttonsStyling: false
            }).then((result) => {
                if (result.isConfirmed) {
                    var form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/SalesReturn/CancelSalesReturn?id=' + encodeURIComponent(id);

                    // Add anti-forgery token
                    var token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        var tokenInput = document.createElement('input');
                        tokenInput.type = 'hidden';
                        tokenInput.name = '__RequestVerificationToken';
                        tokenInput.value = token.value;
                        form.appendChild(tokenInput);
                    }

                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }
    </script>
}
