@model PharmaCare.Domain.Models.SaleManagement.SalesReturn
@{
    ViewData["Title"] = "Sales Return Details";
}

<div class="container-fluid p-0">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4><i class="bx bx-file-invoice me-2"></i>Return Details: @Model.ReturnNumber</h4>
        <a href="@Url.Action("SalesReturnIndex")" class="btn btn-secondary">
            <i class="bx bx-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="row">
        <!-- Return Info Card -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Return Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="fw-bold">Return Number:</td>
                            <td>@Model.ReturnNumber</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Return Date:</td>
                            <td>@Model.ReturnDate.ToString("dd-MMM-yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Status:</td>
                            <td>
                                <span
                                    class="badge @(Model.Status == "Completed" ? "bg-success" : Model.Status == "Cancelled" ? "bg-danger" : "bg-warning") fs-6">
                                    @Model.Status
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Return Reason:</td>
                            <td>@Model.ReturnReason</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Refund Method:</td>
                            <td>@Model.RefundMethod</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Original Sale Info -->
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Original Sale</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="fw-bold">Sale Number:</td>
                            <td>@Model.Sale?.SaleNumber</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Sale Date:</td>
                            <td>@Model.Sale?.SaleDate.ToString("dd-MMM-yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Customer:</td>
                            <td>@(Model.Party?.PartyName ?? "Walk-in Customer")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Store:</td>
                            <td>@Model.Store?.Name</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Return Items -->
    <div class="card mb-3">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bx bx-list me-2"></i>Returned Items</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Product</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Unit Price</th>
                        <th class="text-end">Amount</th>
                        <th class="text-center">Restocked</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model.ReturnLines)
                    {
                        <tr>
                            <td>@line.Product?.ProductName</td>
                            <td class="text-center">@line.Quantity</td>
                            <td class="text-end">@line.UnitPrice.ToString("N2")</td>
                            <td class="text-end">@line.Amount.ToString("N2")</td>
                            <td class="text-center">
                                <i
                                    class="fas @(line.RestockInventory ? "fa-check text-success" : "fa-times text-danger")"></i>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-secondary">
                    <tr>
                        <td colspan="3" class="text-end fw-bold">Total Refund:</td>
                        <td class="text-end fw-bold text-danger fs-5">@Model.TotalAmount.ToString("N2")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- Actions -->
    @if (Model.Status == "Completed")
    {
        <div class="card">
            <div class="card-body">
                <form asp-action="CancelSalesReturn" asp-route-id="@Utility.EncryptURL(Model.SalesReturnID.ToString())"
                    method="post"
                    onsubmit="return confirm('Are you sure you want to cancel this return? This will reverse the refund.');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bx bx-times-circle me-1"></i> Cancel Return
                    </button>
                </form>
            </div>
        </div>
    }
</div>
