@model IEnumerable<PharmaCare.Domain.Entities.Transactions.Voucher>
@{
    ViewData["Title"] = "Journal Vouchers";
}

<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-book"></i> Journal Vouchers
    </h4>
    <a asp-action="AddJournalVoucher" class="btn btn-primary">
        <i class="fas fa-plus"></i> New Voucher
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="vouchersTable">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Voucher No</th>
                        <th>Narration</th>
                        <th class="text-end">Amount</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Created By</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.Status == "Reversed" ? "text-muted text-decoration-line-through" : "")">
                            <td>@item.VoucherDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.VoucherNo</td>
                            <td>@item.Narration</td>
                            <td class="text-end">@item.TotalDebit.ToString("N2")</td>
                            <td class="text-center">
                                @if(item.Status == "Reversed")
                                {
                                    <span class="badge bg-danger">Voided</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Posted</span>
                                }
                            </td>
                            <td class="text-center">User @item.CreatedBy</td>
                            <td class="text-center">
                                @if (item.Status == "Posted")
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            onclick="openVoidModal(@item.VoucherID, '@item.VoucherNo')">
                                        <i class="fas fa-ban"></i> Void
                                    </button>
                                }
                                else if (item.IsReversed)
                                {
                                    <span class="text-muted small">Reversed by @item.ReversedByVoucher_ID</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Void Modal -->
<div class="modal fade" id="voidModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Void" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Void Voucher</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to void voucher <strong id="voidVoucherNo"></strong>?</p>
                    <input type="hidden" name="id" id="voidVoucherId" />
                    <div class="mb-3">
                        <label class="form-label">Reason for Voiding <span class="text-danger">*</span></label>
                        <textarea name="voidReason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Void</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#vouchersTable').DataTable({
                "order": [[ 0, "desc" ]]
            });
        });

        function openVoidModal(id, no) {
            $('#voidVoucherId').val(id);
            $('#voidVoucherNo').text(no);
            var modal = new bootstrap.Modal(document.getElementById('voidModal'));
            modal.show();
        }
    </script>
}
