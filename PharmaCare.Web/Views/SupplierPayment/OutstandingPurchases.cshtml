@model List<PharmaCare.Application.DTOs.Finance.GrnOutstandingDto>
@{
    ViewData["Title"] = "Outstanding Purchases";
}

<div class="container-fluid p-0">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4><i class="fas fa-exclamation-triangle text-warning me-2"></i>Outstanding Purchases</h4>
        <a href="@Url.Action("SupplierPaymentIndex")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Payments
        </a>
    </div>

    <!-- Summary -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h6>Total Outstanding</h6>
                    <h3>Rs. @Model.Sum(g => g.BalanceAmount).ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6>Unpaid Purchases</h6>
                    <h3>@Model.Count(g => g.PaymentStatus == "Unpaid")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6>Partially Paid</h6>
                    <h3>@Model.Count(g => g.PaymentStatus == "Partial")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">Filter by Supplier</label>
                    @Html.DropDownList("supplierId", ViewBag.Suppliers as SelectList, "All Suppliers", new { @class =
                    "form-select" })
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="fas fa-filter me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Outstanding Purchases Table -->
    <div class="card">
        <div class="card-body p-0">
            <table id="outstandingTable" class="table table-hover table-striped table-bordered dataTable">
                <thead class="table-dark">
                    <tr>
                        <th>Purchase #</th>
                        <th>Received Date</th>
                        <th>Supplier</th>
                        <th class="text-end">Total Amount</th>
                        <th class="text-end">Amount Paid</th>
                        <th class="text-end">Returned</th>
                        <th class="text-end">Balance</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var purchase in Model)
                    {
                        <tr>
                            <td>@purchase.GrnNumber</td>
                            <td>@purchase.CreatedDate.ToString("dd-MMM-yyyy")</td>
                            <td>@purchase.SupplierName</td>
                            <td class="text-end">@purchase.TotalAmount.ToString("N2")</td>
                            <td class="text-end text-success">@purchase.AmountPaid.ToString("N2")</td>
                            <td class="text-end text-warning">@purchase.ReturnedAmount.ToString("N2")</td>
                            <td class="text-end fw-bold text-danger">@purchase.BalanceAmount.ToString("N2")</td>
                            <td>
                                <span class="badge @(purchase.PaymentStatus == "Unpaid" ? "bg-danger" : "bg-warning")">
                                    @purchase.PaymentStatus
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("AddSupplierPayment", new { grnId = Utility.EncryptURL(purchase.StockMainID.ToString()) })"
                                    class="btn btn-sm btn-success" title="Make Payment">
                                    <i class="bx bx-money-bill-wave me-1"></i> Pay
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-secondary fw-bold">
                        <td colspan="3">Total</td>
                        <td class="text-end">@Model.Sum(g => g.TotalAmount).ToString("N2")</td>
                        <td class="text-end text-success">@Model.Sum(g => g.AmountPaid).ToString("N2")</td>
                        <td class="text-end text-warning">@Model.Sum(g => g.ReturnedAmount).ToString("N2")</td>
                        <td class="text-end text-danger">@Model.Sum(g => g.BalanceAmount).ToString("N2")</td>
                        <td colspan="2"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#outstandingTable').DataTable({
                order: [[1, 'desc']],
                pageLength: 25
            });
        });
    </script>
}
