@model IEnumerable<PharmaCare.Domain.Entities.Finance.Payment>
@{
    ViewData["Title"] = "Advance Payments";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <h4 class="page-title">
        <i class="fas fa-hand-holding-usd"></i>
        Advance Payments
    </h4>
    <div>
        <a asp-action="PaymentsIndex" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i>Back
        </a>
        <a asp-action="AdvancePayment" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>New Advance Payment
        </a>
    </div>
</div>

<!-- Advance Payments Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="advancePaymentsTable">
                <thead>
                    <tr>
                        <th style="width: 50px;">S.No</th>
                        <th>Reference</th>
                        <th>Date</th>
                        <th>Supplier</th>
                        <th>Method</th>
                        <th>Account</th>
                        <th class="text-end">Amount</th>
                        <th>Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    @{int sNo = 1;}
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td>@(sNo++)</td>
                            <td><strong>@payment.Reference</strong></td>
                            <td>@payment.PaymentDate.ToString("dd/MM/yyyy")</td>
                            <td>@payment.Party?.Name</td>
                            <td>
                                <span class="badge bg-@(payment.PaymentMethod == "Cash" ? "success" : "primary")">
                                    @payment.PaymentMethod
                                </span>
                            </td>
                            <td>@payment.Account?.Name</td>
                            <td class="text-end"><strong>@payment.Amount.ToString("N2")</strong></td>
                            <td>@payment.Remarks</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if (!$.fn.DataTable.isDataTable('#advancePaymentsTable')) {
                $('#advancePaymentsTable').DataTable({
                    order: [[2, 'desc']],
                    pageLength: 25
                });
            }
        });
    </script>
}
