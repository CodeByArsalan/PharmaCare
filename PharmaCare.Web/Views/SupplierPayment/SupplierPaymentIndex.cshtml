@model List<PharmaCare.Domain.Models.Finance.SupplierPayment>
@using PharmaCare.Application.DTOs.Finance
@{
    ViewData["Title"] = "Supplier Payments";
    var summary = ViewBag.Summary as SupplierPaymentSummaryDto;
}

<div class="container-fluid p-0">
    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h6 class="card-title">Total Outstanding</h6>
                    <h3>@(summary?.TotalOutstanding.ToString("N2") ?? "0.00")</h3>
                    <small>@(summary?.UnpaidGrnCount ?? 0) unpaid GRNs</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Paid Today</h6>
                    <h3>@(summary?.TotalPaidToday.ToString("N2") ?? "0.00")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title">Paid This Month</h6>
                    <h3>@(summary?.TotalPaidThisMonth.ToString("N2") ?? "0.00")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-title">Partially Paid</h6>
                    <h3>@(summary?.PartiallyPaidGrnCount ?? 0)</h3>
                    <small>GRNs with pending balance</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4><i class="fas fa-money-check-alt me-2"></i>Supplier Payments</h4>
        <div>
            <a href="@Url.Action("OutstandingGrns")" class="btn btn-warning">
                <i class="fas fa-exclamation-triangle me-1"></i> Outstanding GRNs
            </a>
            <a href="@Url.Action("AddSupplierPayment")" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> New Payment
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Supplier</label>
                    @Html.DropDownList("supplierId", ViewBag.Suppliers as SelectList, "All Suppliers", new { @class =
                    "form-select" })
                </div>
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All</option>
                        <option value="Paid" selected="@(ViewBag.SelectedStatus == "Paid")">Paid</option>
                        <option value="Cancelled" selected="@(ViewBag.SelectedStatus == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="fas fa-filter me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Payments Table -->
    <div class="card">
        <div class="card-body p-0">
            <table id="paymentsTable" class="table table-hover table-striped table-bordered dataTable">
                <thead class="table-dark">
                    <tr>
                        <th>Payment #</th>
                        <th>Date</th>
                        <th>Supplier</th>
                        <th>GRN #</th>
                        <th>GRN Amount</th>
                        <th>Amount Paid</th>
                        <th>Balance After</th>
                        <th>Type</th>
                        <th>Method</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td>@payment.PaymentNumber</td>
                            <td>@payment.PaymentDate.ToString("dd-MMM-yyyy")</td>
                            <td>@payment.Party?.PartyName</td>
                            <td>@payment.StockMain?.InvoiceNo</td>
                            <td class="text-end">@payment.GrnAmount.ToString("N2")</td>
                            <td class="text-end fw-bold text-success">@payment.AmountPaid.ToString("N2")</td>
                            <td class="text-end">@payment.BalanceAfter.ToString("N2")</td>
                            <td>
                                <span class="badge @(payment.PaymentType == "Full" ? "bg-success" : "bg-warning")">
                                    @payment.PaymentType
                                </span>
                            </td>
                            <td>@payment.PaymentMethod</td>
                            <td>
                                <span class="badge @(payment.Status == "Paid" ? "bg-success" : "bg-danger")">
                                    @payment.Status
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("SupplierPaymentDetails", new { id = Utility.EncryptURL(payment.SupplierPaymentID.ToString2()) })"
                                    class="btn btn-sm btn-info" title="View Details">
                                    <i class="bx bx-show"></i>
                                </a>
                               @*  @if (payment.Status == "Paid")
                                {
                                    <form asp-action="CancelSupplierPayment" asp-route-id="@payment.SupplierPaymentID" method="post"
                                        style="display:inline;"
                                        onsubmit="return confirm('Are you sure you want to cancel this payment?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Cancel Payment">
                                            <i class="bx bx-x-circle"></i>
                                        </button>
                                    </form>
                                } *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#paymentsTable').DataTable({
                order: [[1, 'desc']],
                pageLength: 25
            });
        });
    </script>
}
