@model IEnumerable<PharmaCare.Domain.Models.AccountManagement.AccountMapping>
@{
    ViewData["Title"] = "Account Mappings";
}

<div class="row">
    <div class="col-12">
        <div class="card card-outline rounded-0 card-navy">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Account Mappings</h5>
                <a asp-action="AddMapping" class="btn btn-success btn-sm">
                    <i class="bx bx-plus"></i> Add Mapping
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped table-bordered dataTable" id="mappingTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Party Type</th>
                                <th>Head</th>
                                <th>Subhead</th>
                                <th>Account</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span
                                            class="badge @(item.PartyType == "Customer" ? "bg-info" : item.PartyType == "Supplier" ? "bg-warning" : "bg-success")">
                                            @item.PartyType
                                        </span>
                                    </td>
                                    <td>@item.Head?.HeadName</td>
                                    <td>@item.Subhead?.SubheadName</td>
                                    <td>@item.Account?.AccountName</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-action="EditMapping" asp-route-id="@item.AccountMappingID.EncryptId()"
                                               class="btn btn-sm btn-info text-white" title="Edit">
                                                <i class="bx bx-edit"></i>
                                            </a>
                                            <form asp-action="DeleteMapping"
                                                asp-route-id="@item.AccountMappingID.EncryptId()" method="post"
                                                style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="button" class="btn btn-danger btn-sm" title="Delete"
                                                    onclick="confirmDelete(this)">
                                                    <i class="bx bx-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#mappingTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
        });

        function confirmDelete(btn) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This will remove the account mapping!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $(btn).closest('form').submit();
                }
            });
        }
    </script>
}
