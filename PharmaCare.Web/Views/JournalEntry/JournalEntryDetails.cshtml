@model PharmaCare.Application.DTOs.Accounting.JournalEntryDto
@{
    ViewData["Title"] = $"Journal Entry {Model.EntryNumber}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row page-titles mb-2 mt-2">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary fw-bold text-uppercase mb-0">Journal Entry Details</h3>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <a asp-action="JournalEntryIndex" class="btn btn-secondary">
            <i class="bx bx-arrow-left me-1"></i> Back to List
        </a>
        @if (Model.Status == "Draft")
        {
            <button onclick="postEntry(@Model.JournalEntryID)" class="btn btn-success ">
                <i class="bx bx-check-circle me-1"></i> Post Entry
            </button>
        }
        @if (Model.Status == "Posted")
        {
            <button onclick="voidEntry(@Model.JournalEntryID)" class="btn btn-danger ">
                <i class="bx bx-ban me-1"></i> Void Entry
            </button>
        }
    </div>
</div>

<div class="container-fluid p-0">
    <div class="row">
        <!-- Entry Header Information -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-3 mb-4 sticky-top" style="top: 20px; z-index: 100;">
                <div class="card-header bg-primary text-white p-3 rounded-top-3">
                    <h5 class="card-title mb-0 fw-bold">Summary</h5>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <div class="text-secondary small fw-bold text-uppercase mb-1">Entry Number</div>
                        <div class="h4 mb-0 fw-bold text-primary">@Model.EntryNumber</div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="text-secondary small fw-bold text-uppercase mb-1">Entry Date</div>
                            <div class="fw-medium">@Model.EntryDate.ToString("dd-MMM-yyyy")</div>
                        </div>
                        <div class="col-6">
                            <div class="text-secondary small fw-bold text-uppercase mb-1">Posting Date</div>
                            <div class="fw-medium">@Model.PostingDate.ToString("dd-MMM-yyyy")</div>
                        </div>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <div class="text-secondary small fw-bold text-uppercase mb-1">Status</div>
                            <div>
                                @if (Model.Status == "Posted")
                                {
                                    <span class="badge bg-success rounded-pill px-3 py-2">Posted</span>
                                }
                                else if (Model.Status == "Draft")
                                {
                                    <span class="badge bg-warning text-dark rounded-pill px-3 py-2">Draft</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-pill px-3 py-2">Void</span>
                                }
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-secondary small fw-bold text-uppercase mb-1">Type</div>
                            <div class="fw-medium">@Model.EntryType</div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="text-secondary small fw-bold text-uppercase mb-1">Reference</div>
                        <div class="fw-medium text-muted">@(string.IsNullOrEmpty(Model.Reference) ? "None" :
                            Model.Reference)</div>
                    </div>

                    <div class="mb-0">
                        <div class="text-secondary small fw-bold text-uppercase mb-1">Source Information</div>
                        <div class="fw-medium text-muted small">
                            Table: @(string.IsNullOrEmpty(Model.Source_Table) ? "N/A" : Model.Source_Table) 
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Entry Lines -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-white p-3 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fw-bold">General Ledger Lines</h5>
                    <div class="text-muted small">@Model.Lines.Count lines in this entry</div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light-soft text-secondary border-bottom">
                                <tr>
                                    <th class="ps-4">Account</th>
                                    <th>Description</th>
                                    <th class="text-end">Debit</th>
                                    <th class="text-end pe-4">Credit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.Lines)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-bold">@line.AccountName</div>
                                            <div class="small text-muted">Code: @line.AccountCode</div>
                                        </td>
                                        <td>@line.Description</td>
                                        <td class="text-end fw-bold text-primary">
                                            @(line.DebitAmount > 0 ? line.DebitAmount.ToString("N2") : "-")
                                        </td>
                                        <td class="text-end pe-4 fw-bold text-success">
                                            @(line.CreditAmount > 0 ? line.CreditAmount.ToString("N2") : "-")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light border-top border-2">
                                <tr class="fw-bold h5">
                                    <td colspan="2" class="text-end ps-4 py-3">Totals</td>
                                    <td class="text-end text-primary py-3">@Model.TotalDebit.ToString("N2")</td>
                                    <td class="text-end pe-4 text-success py-3">@Model.TotalCredit.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white p-3">
                    <h5 class="card-title mb-0 fw-bold">Transaction Narrative</h5>
                </div>
                <div class="card-body p-4">
                    <p class="lead text-muted mb-0">
                        @(string.IsNullOrEmpty(Model.Description) ? "No narrative provided for this transaction." :
                            Model.Description)
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function postEntry(id) {
            Swal.fire({
                title: 'Post Journal Entry?',
                text: "Confirming this entry will update the account ledger.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, post it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Post")',
                        type: 'POST',
                        data: { id: id },
                        success: function (data) {
                            if (data.success) {
                                Swal.fire('Success!', data.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Error!', data.message, 'error');
                            }
                        }
                    });
                }
            });
        }

        function voidEntry(id) {
            Swal.fire({
                title: 'Void Entry?',
                text: "This action will reverse the transaction impacts.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, void it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Void")',
                        type: 'POST',
                        data: { id: id },
                        success: function (data) {
                            if (data.success) {
                                Swal.fire('Success!', data.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Error!', data.message, 'error');
                            }
                        }
                    });
                }
            });
        }
    </script>
}
