@model List<PharmaCare.Application.DTOs.Accounting.JournalEntryDto>
@{
    ViewData["Title"] = "Journal Entries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-outline rounded-0 card-navy">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title">Journal Entries</h3>
        <a asp-action="AddJournalEntry" class="btn btn-flat btn-primary">
            <span class="bx bx-plus me-1"></span> New Journal Entry
        </a>
    </div>
    <div class="card-body p-0">
        <!-- Filters -->
        <form id="filterForm" class="mb-4">
            <div class="row m-2 g-2 align-items-end">

                <div class="col-md-3">
                    <label class="form-label small fw-bold text-secondary">Status</label>
                    <select name="status" class="form-select form-select rounded-3">
                        <option value="">All Statuses</option>
                        <option value="Draft">Draft</option>
                        <option value="Posted">Posted</option>
                        <option value="Void">Void</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-secondary">From Date</label>
                    <input type="date" name="from" class="form-control form-control rounded-3" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-secondary">To Date</label>
                    <input type="date" name="to" class="form-control form-control rounded-3" />
                </div>

                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-info text-white">
                        <i class="bx bx-filter me-1"></i> Filter
                    </button>

                    <a asp-action="JournalEntryIndex" class="btn btn-light border">
                        <i class="bx bx-undo me-1"></i> Reset
                    </a>
                </div>
            </div>
        </form>
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-secondary border-bottom">
                <tr>
                    <th class="ps-4">Entry #</th>
                    <th>Date</th>
                    <th>Reference</th>
                    <th>Description</th>
                    <th class="text-end">Total Debit</th>
                    <th class="text-end">Total Credit</th>
                    <th class="text-center">Status</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var entry in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">@entry.EntryNumber</td>
                            <td>@entry.EntryDate.ToString("dd-MMM-yyyy")</td>
                            <td><span class="badge bg-light text-dark border">@entry.Reference</span></td>
                            <td>
                                <div class="text-truncate" style="max-width: 200px;" title="@entry.Description">
                                    @entry.Description
                                </div>
                            </td>
                            <td class="text-end fw-medium">@entry.TotalDebit.ToString("N2")</td>
                            <td class="text-end fw-medium">@entry.TotalCredit.ToString("N2")</td>
                            <td class="text-center">
                                @if (entry.Status == "Posted")
                                {
                                    <span class="badge rounded-pill bg-success px-2 py-1 small">Posted</span>
                                }
                                else if (entry.Status == "Draft")
                                {
                                    <span class="badge rounded-pill bg-warning text-dark px-2 py-1 small">Draft</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-danger px-2 py-1 small">Void</span>
                                }

                                @* Show reversal relationship links *@
                                @if (entry.ReversesEntry_ID.HasValue && !string.IsNullOrEmpty(entry.ReversesEntryNumber))
                                {
                                    <br />

                                    <small class="text-info">
                                        <i class="bx bx-undo"></i> Reverses
                                        <a asp-action="JournalEntryDetails"
                                            asp-route-id="@Utility.EncryptURL(entry.ReversesEntry_ID.ToString())">@entry.ReversesEntryNumber</a>
                                    </small>
                                }
                                @if (entry.ReversedByEntry_ID.HasValue && !string.IsNullOrEmpty(entry.ReversedByEntryNumber))
                                {
                                    <br />

                                    <small class="text-danger">
                                        <i class="bx bx-x-circle"></i> Reversed by
                                        <a asp-action="JournalEntryDetails"
                                            asp-route-id="@Utility.EncryptURL(entry.ReversedByEntry_ID.ToString())">@entry.ReversedByEntryNumber</a>
                                    </small>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-1">
                                    <a asp-action="JournalEntryDetails"
                                        asp-route-id="@Utility.EncryptURL(entry.JournalEntryID.ToString())"
                                        class="btn btn-sm btn-outline-info" title="View">
                                        <i class="bx bx-show-alt"></i>
                                    </a>

                                    @if (entry.Status == "Draft")
                                    {
                                        <button type="button" onclick="postEntry(@entry.JournalEntryID)"
                                            class="btn btn-sm btn-outline-success" title="Post">
                                            <i class="bx bx-check"></i>
                                        </button>
                                    }

                                    @if (entry.Status == "Posted" && !entry.ReversesEntry_ID.HasValue)
                                    {
                                        <button type="button" onclick="voidEntry(@entry.JournalEntryID)"
                                            class="btn btn-sm btn-outline-danger" title="Void">
                                            <i class="bx bx-block"></i>
                                        </button>
                                    }
                                </div>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-5 text-muted">
                            <i class="fas fa-book mb-3 d-block opacity-25" style="font-size: 3rem;"></i>
                            No journal entries found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function postEntry(id) {
            Swal.fire({
                title: 'Post Journal Entry?',
                text: "Post this entry to affect account balances. This cannot be edited after posting.",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, post it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Post")',
                        type: 'POST',
                        data: { id: id },
                        success: function (data) {
                            if (data.success) {
                                Swal.fire('Posted!', data.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Error!', data.message, 'error');
                            }
                        }
                    });
                }
            });
        }

        function voidEntry(id) {
            Swal.fire({
                title: 'Void Journal Entry?',
                text: "This will create a reversing entry or mark the entry as void. Proceed?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, void it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Void")',
                        type: 'POST',
                        data: { id: id },
                        success: function (data) {
                            if (data.success) {
                                Swal.fire('Voided!', data.message, 'success').then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Error!', data.message, 'error');
                            }
                        }
                    });
                }
            });
        }
    </script>
}
