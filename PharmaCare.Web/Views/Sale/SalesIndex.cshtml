@using PharmaCare.Web.Utilities
@model IEnumerable<PharmaCare.Domain.Entities.Transactions.StockMain>
@{
    ViewData["Title"] = "Sales";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-shopping-cart"></i>
        Sales
    </h4>
    <a asp-action="AddSale" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>New Sale
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="salesTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Transaction No</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Total Amount</th>
                        <th>Paid</th>
                        <th>Balance</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int serialNo = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(serialNo++)</td>
                            <td>@item.TransactionNo</td>
                            <td>@item.TransactionDate.ToString("dd/MM/yyyy")</td>
                            <td>@(item.Party?.Name ?? "Walk-in Customer")</td>
                            <td class="text-end">@item.TotalAmount.ToString("N2")</td>
                            <td class="text-end">@item.PaidAmount.ToString("N2")</td>
                            <td class="text-end">@item.BalanceAmount.ToString("N2")</td>
                            <td>
                                @if (item.Status == "Void")
                                {
                                    <span class="badge bg-danger">Void</span>
                                }
                                else if (item.Status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ViewSale" asp-route-id="@item.StockMainID.EncryptId()" 
                                   class="btn btn-sm btn-outline-primary" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Receipt" asp-route-id="@item.StockMainID.EncryptId()" 
                                   class="btn btn-sm btn-outline-success" title="Print Receipt" target="_blank">
                                    <i class="fas fa-print"></i>
                                </a>
                                @if (item.Status != "Void")
                                {
                                    <button type="button" class="btn btn-sm btn-outline-danger void-btn"
                                            data-id="@item.StockMainID.EncryptId()" 
                                            data-transaction="@item.TransactionNo"
                                            title="Void">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Void Modal -->
<div class="modal fade" id="voidModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Void" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Void Sale</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="voidId" />
                    <p>Are you sure you want to void sale <strong id="voidTransactionNo"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Reason for voiding <span class="text-danger">*</span></label>
                        <textarea name="voidReason" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Void Sale</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize DataTable
            new DataTable('#salesTable', {
                order: [[0, 'asc']],
                pageLength: 25
            });

            // Void button click
            document.querySelectorAll('.void-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('voidId').value = this.dataset.id;
                    document.getElementById('voidTransactionNo').textContent = this.dataset.transaction;
                    new bootstrap.Modal(document.getElementById('voidModal')).show();
                });
            });
        });
    </script>
}
