@model PharmaCare.Domain.Entities.Transactions.StockMain
@{
    ViewData["Title"] = "View Sale";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-eye"></i>
        View Sale
    </h4>
    <a asp-action="SalesIndex" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <!-- Header Information -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <label class="form-label text-muted">Transaction No</label>
                <div class="fw-bold">@Model.TransactionNo</div>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted">Date</label>
                <div class="fw-bold">@Model.TransactionDate.ToString("dd/MM/yyyy")</div>
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted">Customer</label>
                <div class="fw-bold">@(Model.Party?.Name ?? "Walk-in Customer")</div>
            </div>
            <div class="col-md-2">
                <label class="form-label text-muted">Status</label>
                <div>
                    @if (Model.Status == "Void")
                    {
                        <span class="badge bg-danger fs-6">Void</span>
                    }
                    else if (Model.Status == "Approved")
                    {
                        <span class="badge bg-success fs-6">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">@Model.Status</span>
                    }
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label text-muted">Payment</label>
                <div>
                    @if (Model.PaymentStatus == "Paid")
                    {
                        <span class="badge bg-success fs-6">Paid</span>
                    }
                    else if (Model.PaymentStatus == "Partial")
                    {
                        <span class="badge bg-warning text-dark fs-6">Partial</span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">Unpaid</span>
                    }
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Remarks))
        {
            <div class="row mb-4">
                <div class="col-12">
                    <label class="form-label text-muted">Remarks</label>
                    <div>@Model.Remarks</div>
                </div>
            </div>
        }

        @if (Model.Status == "Void" && !string.IsNullOrEmpty(Model.VoidReason))
        {
            <div class="alert alert-danger">
                <strong>Void Reason:</strong> @Model.VoidReason
                <br />
                <small>Voided on @Model.VoidedAt?.ToString("dd/MM/yyyy HH:mm")</small>
            </div>
        }

        <!-- Line Items -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list me-2"></i>Line Items</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Product</th>
                                <th class="text-end" style="width: 120px;">Quantity</th>
                                <th class="text-end" style="width: 140px;">Unit Price</th>
                                <th class="text-end" style="width: 140px;">Line Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int lineNo = 1;
                            }
                            @foreach (var detail in Model.StockDetails)
                            {
                                <tr>
                                    <td>@(lineNo++)</td>
                                    <td>@(detail.Product?.Name ?? "N/A")</td>
                                    <td class="text-end">@detail.Quantity.ToString("N4")</td>
                                    <td class="text-end">@detail.UnitPrice.ToString("N2")</td>
                                    <td class="text-end">@detail.LineTotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="4" class="text-end"><strong>Sub Total:</strong></td>
                                <td class="text-end"><strong>@Model.SubTotal.ToString("N2")</strong></td>
                            </tr>
                            @if (Model.DiscountAmount > 0)
                            {
                                <tr>
                                    <td colspan="4" class="text-end">Discount (@Model.DiscountPercent.ToString("N2")%):</td>
                                    <td class="text-end text-danger">-@Model.DiscountAmount.ToString("N2")</td>
                                </tr>
                            }
                            <tr class="table-primary">
                                <td colspan="4" class="text-end"><strong>Total Amount:</strong></td>
                                <td class="text-end"><strong>@Model.TotalAmount.ToString("N2")</strong></td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-end">Paid Amount:</td>
                                <td class="text-end text-success">@Model.PaidAmount.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td colspan="4" class="text-end"><strong>Balance:</strong></td>
                                <td class="text-end"><strong class="@(Model.BalanceAmount > 0 ? "text-danger" : "text-success")">@Model.BalanceAmount.ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Audit Information -->
        <div class="row">
            <div class="col-md-6">
                <small class="text-muted">
                    Created on @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                </small>
            </div>
        </div>
    </div>
</div>
