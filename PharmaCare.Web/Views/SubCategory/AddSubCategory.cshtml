@model PharmaCare.Domain.Entities.Configuration.SubCategory
@{
    ViewData["Title"] = "Add New SubCategory";
}

<!-- Page Header -->
<div class="page-header">
    <h4 class="page-title">
        <i class="fas fa-plus-circle"></i>
        Add New SubCategory
    </h4>
    <a asp-action="SubCategoriesIndex" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="AddSubCategory" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">SubCategory Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter subcategory name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Category <span class="text-danger">*</span></label>
                    <select asp-for="Category_ID" asp-items="ViewBag.Categories" class="form-select" required>
                        <option value="">-- Select Category --</option>
                    </select>
                </div>
            </div>
            
            <div class="text-end mt-4">
                <a asp-action="SubCategoriesIndex" class="btn btn-outline-secondary me-2">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save SubCategory
                </button>
            </div>
        </form>
    </div>
</div>
