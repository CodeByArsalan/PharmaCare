@model PharmaCare.Domain.Models.SaleManagement.HeldSale
@{
    ViewData["Title"] = "Held Sale Details";
}

<div class="container-fluid p-0">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4><i class="fas fa-pause-circle me-2"></i>Held Sale: @Model.HoldNumber</h4>
        <a href="@Url.Action("HeldSaleIndex")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Hold Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless mb-0">
                        <tr>
                            <td class="fw-bold">Hold Number:</td>
                            <td>@Model.HoldNumber</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Hold Date:</td>
                            <td>@Model.HoldDate.ToString("dd-MMM-yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Expires:</td>
                            <td class="@(Model.ExpiryDate < DateTime.Now ? "text-danger fw-bold" : "")">
                                @Model.ExpiryDate?.ToString("dd-MMM-yyyy")
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Customer:</td>
                            <td>@(Model.CustomerName ?? "Walk-in")</td>
                        </tr>
                        <tr>
                            <td class="fw-bold">Phone:</td>
                            <td>@(Model.CustomerPhone ?? "N/A")</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <tr>
                                <td class="fw-bold">Notes:</td>
                                <td>@Model.Notes</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <a href="@Url.Action("ResumeSale", new { id = Model.HeldSaleID })"
                        class="btn btn-success btn-lg w-100 mb-2">
                        <i class="fas fa-play me-1"></i> Resume Sale
                    </a>
                    <form asp-action="DeleteHeldSale" asp-route-id="@Model.HeldSaleID" method="post"
                        onsubmit="return confirm('Delete this held sale?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Held Items (@Model.HeldLines.Count)</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th>Batch</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Discount</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                decimal grandTotal = 0;
                            }
                            @foreach (var line in Model.HeldLines)
                            {
                                var lineTotal = (line.Quantity * line.UnitPrice) - line.DiscountAmount;
                                grandTotal += lineTotal;
                                <tr>
                                    <td>@line.Product?.ProductName</td>
                                    <td>@line.ProductBatch?.BatchNumber</td>
                                    <td class="text-center">@line.Quantity</td>
                                    <td class="text-end">@line.UnitPrice.ToString("N2")</td>
                                    <td class="text-end text-danger">@line.DiscountAmount.ToString("N2")</td>
                                    <td class="text-end fw-bold">@lineTotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-secondary">
                            <tr>
                                <td colspan="5" class="text-end fw-bold">Grand Total:</td>
                                <td class="text-end fw-bold text-primary fs-5">@grandTotal.ToString("N2")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
