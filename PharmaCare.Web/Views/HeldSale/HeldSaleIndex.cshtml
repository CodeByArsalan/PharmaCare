@model List<PharmaCare.Domain.Models.SaleManagement.HeldSale>
@{
    ViewData["Title"] = "Held/Parked Sales";
}

<div class="container-fluid p-0">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4><i class="fas fa-pause-circle me-2"></i>Held/Parked Sales</h4>
        <a href="@Url.Action("Index", "Pos")" class="btn btn-primary">
            <i class="fas fa-cash-register me-1"></i> Go to POS
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> No held sales found. Sales can be parked from the POS screen.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var held in Model)
            {
                <div class="col-md-12 mb-3">
                    <div class="card h-100 @(held.ExpiryDate < DateTime.Now ? "border-danger" : "")">
                        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                            <h6 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>@held.HoldNumber</h6>
                            <span class="badge bg-dark">@held.HeldLines.Count items</span>
                        </div>
                        <div class="card-body mt-2">
                            <p class="mb-1"><strong>Customer:</strong> @(held.CustomerName ?? "Walk-in")</p>
                            <p class="mb-1"><strong>Phone:</strong> @(held.CustomerPhone ?? "N/A")</p>
                            <p class="mb-1"><strong>Held On:</strong> @held.HoldDate.ToString("dd-MMM-yyyy HH:mm")</p>
                            @if (held.ExpiryDate.HasValue)
                            {
                                <p class="mb-1">
                                    <strong>Expires:</strong>
                                    <span class="@(held.ExpiryDate < DateTime.Now ? "text-danger" : "")">
                                        @held.ExpiryDate.Value.ToString("dd-MMM-yyyy")
                                    </span>
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(held.Notes))
                            {
                                <p class="mb-1 text-muted"><small><strong>Notes:</strong> @held.Notes</small></p>
                            }

                            <hr />

                            <!-- Items Preview -->
                            <div style="max-height: 120px; overflow-y: auto;">
                                <small>
                                    @foreach (var line in held.HeldLines.Take(5))
                                    {
                                        <div class="d-flex justify-content-between">
                                            <span>@line.Product?.ProductName</span>
                                            <span class="text-muted">x@line.Quantity</span>
                                        </div>
                                    }
                                    @if (held.HeldLines.Count > 5)
                                    {
                                        <div class="text-muted">...and @(held.HeldLines.Count - 5) more</div>
                                    }
                                </small>
                            </div>
                        </div>
                        <div class="m-4 d-flex justify-content-end gap-2">
                            <a href="@Url.Action("ResumeSale", new { id = Utility.EncryptURL(held.HeldSaleID.ToString()) })"
                                class="btn btn-success btn-sm">
                                <i class="fas fa-play me-1"></i> Resume
                            </a>
                            <a href="@Url.Action("HeldSaleDetails", new { id = Utility.EncryptURL(held.HeldSaleID.ToString()) })"
                                class="btn btn-info btn-sm">
                                <i class="fas fa-eye me-1"></i> View
                            </a>
                            <form asp-action="DeleteHeldSale" asp-route-id="@Utility.EncryptURL(held.HeldSaleID.ToString())"
                                method="post" style="display:inline;" onsubmit="return confirm('Delete this held sale?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bx bx-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
