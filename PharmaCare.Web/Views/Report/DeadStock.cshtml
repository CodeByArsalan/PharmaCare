@model PharmaCare.Application.ViewModels.Report.DeadStockReportVM
@{
    ViewData["Title"] = "Dead / Slow-Moving Stock";
}

<div class="page-header">
    <h4 class="page-title"><i class="fas fa-archive"></i> Dead / Slow-Moving Stock</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Reports</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label">Threshold (Days)</label>
                <input type="number" name="filter.ThresholdDays" class="form-control" value="@(Model.Filter.ThresholdDays ?? 30)" min="1" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="filter.CategoryId" class="form-select">
                    <option value="">-- All Categories --</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (SelectListItem item in ViewBag.Categories)
                        {
                            <option value="@item.Value" selected="@(item.Value == Model.Filter.CategoryId?.ToString())">@item.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6"><div class="card text-center"><div class="card-body"><small class="text-muted">Dead Stock Items</small><h5 class="text-warning mb-0">@Model.TotalItems</h5></div></div></div>
    <div class="col-md-6"><div class="card text-center"><div class="card-body"><small class="text-muted">Dead Stock Value</small><h5 class="text-danger mb-0">@Model.TotalDeadStockValue.ToString("N2")</h5></div></div></div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="reportTable" class="table table-striped table-hover">
                <thead>
                    <tr><th>S.No</th><th>Product</th><th>Category</th><th>Stock</th><th>Stock Value</th><th>Last Sale</th><th>Days Idle</th></tr>
                </thead>
                <tbody>
                    @{ int sno = 1; }
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@(sno++)</td>
                            <td>@row.ProductName</td>
                            <td>@row.CategoryName</td>
                            <td class="text-end">@row.CurrentStock.ToString("N0")</td>
                            <td class="text-end">@row.StockValue.ToString("N2")</td>
                            <td>@(row.LastSaleDate?.ToString("dd/MM/yyyy") ?? "Never")</td>
                            <td class="text-end">
                                <span class="badge @(row.DaysSinceLastSale > 90 ? "bg-danger" : row.DaysSinceLastSale > 60 ? "bg-warning" : "bg-info")">
                                    @(row.DaysSinceLastSale >= 9999 ? "Never sold" : row.DaysSinceLastSale + " days")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>document.addEventListener('DOMContentLoaded', function() { new DataTable('#reportTable', { order: [[6, 'desc']], pageLength: 25 }); });</script>
}
