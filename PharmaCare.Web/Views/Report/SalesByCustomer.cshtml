@model PharmaCare.Application.ViewModels.Report.SalesByCustomerVM
@{
    ViewData["Title"] = "Sales by Customer";
}

<div class="page-header">
    <h4 class="page-title"><i class="fas fa-users"></i> Sales by Customer</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Reports</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" name="filter.FromDate" class="form-control" value="@Model.Filter.FromDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" name="filter.ToDate" class="form-control" value="@Model.Filter.ToDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Sales</small><h5 class="text-success mb-0">@Model.TotalSales.ToString("N2")</h5></div></div></div>
    <div class="col-md-4"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Paid</small><h5 class="text-primary mb-0">@Model.TotalPaid.ToString("N2")</h5></div></div></div>
    <div class="col-md-4"><div class="card text-center"><div class="card-body"><small class="text-muted">Balance Due</small><h5 class="text-warning mb-0">@Model.TotalBalance.ToString("N2")</h5></div></div></div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="reportTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>S.No</th><th>Customer</th><th># Purchases</th>
                        <th>Total Purchases</th><th>Total Paid</th><th>Balance Due</th><th>Last Purchase</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int sno = 1; }
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@(sno++)</td>
                            <td>@row.CustomerName</td>
                            <td class="text-center">@row.PurchaseCount</td>
                            <td class="text-end">@row.TotalPurchases.ToString("N2")</td>
                            <td class="text-end">@row.TotalPaid.ToString("N2")</td>
                            <td class="text-end @(row.BalanceDue > 0 ? "text-danger fw-bold" : "")">@row.BalanceDue.ToString("N2")</td>
                            <td>@(row.LastPurchaseDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            new DataTable('#reportTable', { order: [[3, 'desc']], pageLength: 25 });
        });
    </script>
}
