@model PharmaCare.Application.ViewModels.Report.ReceivablesAgingVM
@{
    ViewData["Title"] = "Receivables Aging";
}

<div class="page-header">
    <h4 class="page-title"><i class="fas fa-hand-holding-usd"></i> Receivables Aging</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Reports</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-auto">
                <label class="form-label">As of Date</label>
                <input type="date" name="asOfDate" class="form-control" value="@Model.AsOfDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>View</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col"><div class="card text-center"><div class="card-body"><small class="text-muted">Current</small><h5 class="text-success mb-0">@Model.TotalCurrent.ToString("N2")</h5></div></div></div>
    <div class="col"><div class="card text-center"><div class="card-body"><small class="text-muted">31-60 Days</small><h5 class="text-warning mb-0">@Model.Total31_60.ToString("N2")</h5></div></div></div>
    <div class="col"><div class="card text-center"><div class="card-body"><small class="text-muted">61-90 Days</small><h5 class="text-orange mb-0">@Model.Total61_90.ToString("N2")</h5></div></div></div>
    <div class="col"><div class="card text-center"><div class="card-body"><small class="text-muted">90+ Days</small><h5 class="text-danger mb-0">@Model.Total90Plus.ToString("N2")</h5></div></div></div>
    <div class="col"><div class="card text-center"><div class="card-body"><small class="text-muted">Grand Total</small><h5 class="text-primary mb-0 fw-bold">@Model.GrandTotal.ToString("N2")</h5></div></div></div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="reportTable" class="table table-striped table-hover">
                <thead>
                    <tr><th>S.No</th><th>Customer</th><th>Current</th><th>31-60</th><th>61-90</th><th>90+</th><th>Total</th></tr>
                </thead>
                <tbody>
                    @{ int sno = 1; }
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@(sno++)</td>
                            <td>@row.PartyName</td>
                            <td class="text-end">@row.Current.ToString("N2")</td>
                            <td class="text-end">@row.Days31_60.ToString("N2")</td>
                            <td class="text-end">@row.Days61_90.ToString("N2")</td>
                            <td class="text-end @(row.Days90Plus > 0 ? "text-danger fw-bold" : "")">@row.Days90Plus.ToString("N2")</td>
                            <td class="text-end fw-bold">@row.Total.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>document.addEventListener('DOMContentLoaded', function() { new DataTable('#reportTable', { order: [[6, 'desc']], pageLength: 25 }); });</script>
}
