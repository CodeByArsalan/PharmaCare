@model PharmaCare.Application.ViewModels.Report.CustomerBalanceSummaryVM
@{
    ViewData["Title"] = "Customer Balance Summary";
}

<div class="page-header">
    <h4 class="page-title"><i class="fas fa-list-ol"></i> Customer Balance Summary</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Reports</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-auto">
                <label class="form-label">As of Date</label>
                <input type="date" name="asOfDate" class="form-control" value="@Model.AsOfDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>View</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Sales</small><h5 class="text-success mb-0">@Model.TotalSales.ToString("N2")</h5></div></div></div>
    <div class="col-md-4"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Receipts</small><h5 class="text-primary mb-0">@Model.TotalReceipts.ToString("N2")</h5></div></div></div>
    <div class="col-md-4"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Balance Due</small><h5 class="text-danger mb-0">@Model.TotalBalance.ToString("N2")</h5></div></div></div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="reportTable" class="table table-striped table-hover">
                <thead>
                    <tr><th>S.No</th><th>Customer</th><th>Total Sales</th><th>Total Receipts</th><th>Balance Due</th><th>Credit Limit</th><th>Status</th></tr>
                </thead>
                <tbody>
                    @{ int sno = 1; }
                    @foreach (var row in Model.Rows)
                    {
                        <tr class="@(row.IsOverLimit ? "table-danger" : "")">
                            <td>@(sno++)</td>
                            <td>@row.CustomerName</td>
                            <td class="text-end">@row.TotalSales.ToString("N2")</td>
                            <td class="text-end">@row.TotalReceipts.ToString("N2")</td>
                            <td class="text-end fw-bold @(row.BalanceDue > 0 ? "text-danger" : "text-success")">@row.BalanceDue.ToString("N2")</td>
                            <td class="text-end">@(row.CreditLimit > 0 ? row.CreditLimit.ToString("N2") : "-")</td>
                            <td>
                                @if (row.IsOverLimit) { <span class="badge bg-danger">Over Limit</span> }
                                else if (row.BalanceDue > 0) { <span class="badge bg-warning">Outstanding</span> }
                                else { <span class="badge bg-success">Clear</span> }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>document.addEventListener('DOMContentLoaded', function() { new DataTable('#reportTable', { order: [[4, 'desc']], pageLength: 25 }); });</script>
}
