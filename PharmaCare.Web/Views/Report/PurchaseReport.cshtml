@model PharmaCare.Application.ViewModels.Report.PurchaseReportVM
@{
    ViewData["Title"] = "Purchase Report";
}

<div class="page-header">
    <h4 class="page-title"><i class="fas fa-file-invoice"></i> Purchase Report</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Reports</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" name="filter.FromDate" class="form-control" value="@Model.Filter.FromDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" name="filter.ToDate" class="form-control" value="@Model.Filter.ToDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Supplier</label>
                <select name="filter.PartyId" class="form-select">
                    <option value="">-- All Suppliers --</option>
                    @if (ViewBag.Suppliers != null)
                    {
                        @foreach (SelectListItem item in ViewBag.Suppliers)
                        {
                            <option value="@item.Value" selected="@(item.Value == Model.Filter.PartyId?.ToString())">@item.Text</option>
                        }
                    }
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-3"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Purchases</small><h5 class="text-primary mb-0">@Model.GrandTotal.ToString("N2")</h5></div></div></div>
    <div class="col-md-3"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Discount</small><h5 class="mb-0">@Model.GrandDiscount.ToString("N2")</h5></div></div></div>
    <div class="col-md-3"><div class="card text-center"><div class="card-body"><small class="text-muted">Total Paid</small><h5 class="text-success mb-0">@Model.GrandPaid.ToString("N2")</h5></div></div></div>
    <div class="col-md-3"><div class="card text-center"><div class="card-body"><small class="text-muted">Balance</small><h5 class="text-warning mb-0">@Model.GrandBalance.ToString("N2")</h5></div></div></div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="reportTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>S.No</th><th>Transaction No</th><th>Date</th><th>Supplier</th>
                        <th>Sub Total</th><th>Discount</th><th>Total</th><th>Paid</th><th>Balance</th><th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int sno = 1; }
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@(sno++)</td>
                            <td>@row.TransactionNo</td>
                            <td>@row.TransactionDate.ToString("dd/MM/yyyy")</td>
                            <td>@row.SupplierName</td>
                            <td class="text-end">@row.SubTotal.ToString("N2")</td>
                            <td class="text-end">@row.Discount.ToString("N2")</td>
                            <td class="text-end">@row.TotalAmount.ToString("N2")</td>
                            <td class="text-end">@row.PaidAmount.ToString("N2")</td>
                            <td class="text-end">@row.BalanceAmount.ToString("N2")</td>
                            <td><span class="badge @(row.Status == "Approved" ? "bg-success" : "bg-secondary")">@row.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>document.addEventListener('DOMContentLoaded', function() { new DataTable('#reportTable', { order: [[0, 'asc']], pageLength: 25 }); });</script>
}
