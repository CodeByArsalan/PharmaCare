@model PharmaCare.Application.ViewModels.Report.ExpenseReportVM
@{
    ViewData["Title"] = "Expense Report";
}

<div class="page-header">
    <h4 class="page-title"><i class="fas fa-receipt"></i> Expense Report</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Reports</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" name="filter.FromDate" class="form-control" value="@Model.Filter.FromDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" name="filter.ToDate" class="form-control" value="@Model.Filter.ToDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header"><h5 class="mb-0">Expense Details</h5></div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="reportTable" class="table table-striped table-hover">
                        <thead>
                            <tr><th>S.No</th><th>Date</th><th>Category</th><th>Description</th><th>Amount</th><th>Source Account</th><th>Reference</th></tr>
                        </thead>
                        <tbody>
                            @{ int sno = 1; }
                            @foreach (var row in Model.Rows)
                            {
                                <tr>
                                    <td>@(sno++)</td>
                                    <td>@row.ExpenseDate.ToString("dd/MM/yyyy")</td>
                                    <td>@row.CategoryName</td>
                                    <td>@row.Description</td>
                                    <td class="text-end">@row.Amount.ToString("N2")</td>
                                    <td>@row.SourceAccountName</td>
                                    <td>@row.Reference</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="fw-bold"><td colspan="4" class="text-end">Grand Total:</td><td class="text-end">@Model.GrandTotal.ToString("N2")</td><td colspan="2"></td></tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header"><h5 class="mb-0">By Category</h5></div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    @foreach (var cat in Model.CategoryTotals)
                    {
                        <tr><td>@cat.CategoryName</td><td class="text-end">@cat.Amount.ToString("N2")</td></tr>
                    }
                    <tr class="fw-bold"><td>Total</td><td class="text-end">@Model.GrandTotal.ToString("N2")</td></tr>
                </table>
            </div>
        </div>
        <div class="card">
            <div class="card-header"><h5 class="mb-0">Distribution</h5></div>
            <div class="card-body"><canvas id="expenseChart"></canvas></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            new DataTable('#reportTable', { order: [[0, 'asc']], pageLength: 25 });
            const catData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CategoryTotals));
            new Chart(document.getElementById('expenseChart'), {
                type: 'pie',
                data: {
                    labels: catData.map(c => c.categoryName),
                    datasets: [{ data: catData.map(c => c.amount), backgroundColor: ['#0d6efd','#198754','#ffc107','#dc3545','#0dcaf0','#6610f2','#fd7e14','#6c757d'] }]
                },
                options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
            });
        });
    </script>
}
