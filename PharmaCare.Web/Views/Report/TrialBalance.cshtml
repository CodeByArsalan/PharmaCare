@model PharmaCare.Application.ViewModels.Report.TrialBalanceVM
@{
    ViewData["Title"] = "Trial Balance";
}

<div class="page-header">
    <h4 class="page-title"><i class="fas fa-balance-scale"></i> Trial Balance</h4>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Back to Reports</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-auto">
                <label class="form-label">As of Date</label>
                <input type="date" name="asOfDate" class="form-control" value="@Model.AsOfDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i>Generate</button>
            </div>
        </form>
    </div>
</div>

@if (Model.IsBalanced)
{
    <div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>Trial Balance is balanced. Total Debit = Total Credit = @Model.TotalDebit.ToString("N2")</div>
}
else
{
    <div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>Trial Balance is NOT balanced. Difference: @((Model.TotalDebit - Model.TotalCredit).ToString("N2"))</div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="reportTable" class="table table-striped table-hover">
                <thead>
                    <tr><th>S.No</th><th>Account Head</th><th>Account Type</th><th>Account</th><th>Debit</th><th>Credit</th><th>Balance</th></tr>
                </thead>
                <tbody>
                    @{ int sno = 1; }
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@(sno++)</td>
                            <td>@row.AccountHeadName</td>
                            <td>@row.AccountTypeName</td>
                            <td>@row.AccountName</td>
                            <td class="text-end">@row.DebitTotal.ToString("N2")</td>
                            <td class="text-end">@row.CreditTotal.ToString("N2")</td>
                            <td class="text-end fw-bold">@row.Balance.ToString("N2") @row.BalanceType</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="fw-bold table-dark">
                        <td colspan="4" class="text-end">Totals:</td>
                        <td class="text-end">@Model.TotalDebit.ToString("N2")</td>
                        <td class="text-end">@Model.TotalCredit.ToString("N2")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>document.addEventListener('DOMContentLoaded', function() { new DataTable('#reportTable', { order: [[1, 'asc']], pageLength: 50 }); });</script>
}
