@{
    ViewData["Title"] = "Reports Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <div class="row mb-4">
        <div class="col-12">
            <h4>Reports Dashboard</h4>
            <p class="text-muted">Select a report to view detailed analytics</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Sales Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("SalesReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-line-chart" style="font-size: 48px; color: #0EA5E9;"></i>
                        </div>
                        <h5 class="card-title">Sales Report</h5>
                        <p class="card-text">View sales analytics, trends, and top products</p>
                        <a asp-action="SalesReport" class="btn btn-primary">View Report</a>
                    </div>
                </div>
            </div>
        }

        <!-- Inventory Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("InventoryReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-package" style="font-size: 48px; color: #71dd37;"></i>
                        </div>
                        <h5 class="card-title">Inventory Report</h5>
                        <p class="card-text">Stock levels, low stock alerts, and expiring items</p>
                        <a asp-action="InventoryReport" class="btn btn-success">View Report</a>
                    </div>
                </div>
            </div>
        }

        <!-- Sales Detail Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("SalesDetailReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-detail" style="font-size: 48px; color: #ffab00;"></i>
                        </div>
                        <h5 class="card-title">Sales Detail</h5>
                        <p class="card-text">Product-wise sales breakdown and analysis</p>
                        <a asp-action="SalesDetailReport" class="btn btn-warning">View Report</a>
                    </div>
                </div>
            </div>
        }

        <!-- Stock Movement Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("StockMovementReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-transfer" style="font-size: 48px; color: #03c3ec;"></i>
                        </div>
                        <h5 class="card-title">Stock Movement</h5>
                        <p class="card-text">Track stock in/out movements and history</p>
                        <a asp-action="StockMovementReport" class="btn btn-info text-white">View Report</a>
                    </div>
                </div>
            </div>
        }
        <!-- Slow Moving Items Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("SlowMovingReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-time" style="font-size: 48px; color: #ff3e1d;"></i>
                        </div>
                        <h5 class="card-title">Slow Moving Items</h5>
                        <p class="card-text">Identify low turnover stock and stuck capital</p>
                        <a asp-action="SlowMovingReport" class="btn btn-danger">View Report</a>
                    </div>
                </div>
            </div>
        }

        <!-- Purchase Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("PurchaseReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-purchase-tag" style="font-size: 48px; color: #71dd37;"></i>
                        </div>
                        <h5 class="card-title">Purchase Report</h5>
                        <p class="card-text">Procurement summary by supplier and date</p>
                        <a asp-action="PurchaseReport" class="btn btn-success">View Report</a>
                    </div>
                </div>
            </div>
        }

        <!-- Profit & Loss Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("ProfitLossReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-line-chart-down" style="font-size: 48px; color: #8592a3;"></i>
                        </div>
                        <h5 class="card-title">Profit & Loss</h5>
                        <p class="card-text">Revenue, COGS, and margin analysis</p>
                        <a asp-action="ProfitLossReport" class="btn btn-secondary">View Report</a>
                    </div>
                </div>
            </div>
        }

        <!-- Customer Analytics Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("CustomerAnalyticsReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-user-voice" style="font-size: 48px; color: #0EA5E9;"></i>
                        </div>
                        <h5 class="card-title">Customer Analytics</h5>
                        <p class="card-text">Customer segmentation and top spenders</p>
                        <a asp-action="CustomerAnalyticsReport" class="btn btn-primary">View Report</a>
                    </div>
                </div>
            </div>
        }

        <!-- Expiry & Wastage Report Card -->
        @if (ViewBag.AllowedReports != null && ((List<string>)ViewBag.AllowedReports).Contains("ExpiryWastageReport"))
        {
            <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <i class="bx bx-trash" style="font-size: 48px; color: #ff3e1d;"></i>
                        </div>
                        <h5 class="card-title">Expiry & Wastage</h5>
                        <p class="card-text">Expired inventory and near-expiry risk</p>
                        <a asp-action="ExpiryWastageReport" class="btn btn-danger">View Report</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
