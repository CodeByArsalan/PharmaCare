@using PharmaCare.Domain.Models.Configuration
@model List<PharmaCare.Application.DTOs.Reports.SalesDetailDto>

@{
    ViewData["Title"] = "Sales Detail Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sales Detail Report</h3>
    </div>
    <div class="card-body">
        <!-- Date Filter -->
        <form method="get" asp-action="SalesDetailReport" class="mb-4">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">Store</label>
                    <select name="storeId" class="form-select">
                        @if (ViewBag.IsAdmin == true)
                        {
                            <option value="">All Stores</option>
                        }
                        @if (ViewBag.Stores != null)
                        {
                            foreach (var store in (IEnumerable<Store>)ViewBag.Stores)
                            {
                                if (ViewBag.SelectedStoreId == store.StoreID)
                                {
                                    <option value="@Utility.EncryptURL(store.StoreID.ToString2())" selected>@store.Name
                                        (@store.Code)</option>
                                }
                                else
                                {
                                    <option value="@Utility.EncryptURL(store.StoreID.ToString2())">@store.Name (@store.Code)
                                    </option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block w-100">Generate Report</button>
                </div>
            </div>
        </form>

        <!-- Summary -->
        @if (Model.Any())
        {
            <div class="alert alert-info mb-4">
                <strong>Summary:</strong> Total Products: @Model.Count |
                Total Quantity Sold: @Model.Sum(s => s.QuantitySold) |
                Total Revenue: @Model.Sum(s => s.TotalRevenue).ToString("C")
            </div>
        }

        <!-- Sales Detail Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Quantity Sold</th>
                        <th>Average Price</th>
                        <th>Total Revenue</th>
                        <th>Transactions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        int i = 0;
                        @foreach (var detail in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td>@detail.ProductName</td>
                                <td>@detail.Category</td>
                                <td>@detail.QuantitySold</td>
                                <td>@detail.AveragePrice.ToString("C")</td>
                                <td><strong>@detail.TotalRevenue.ToString("C")</strong></td>
                                <td>@detail.TransactionCount</td>
                            </tr>
                        }
                        <tr class="table-info">
                            <td colspan="3"><strong>TOTAL</strong></td>
                            <td><strong>@Model.Sum(s => s.QuantitySold)</strong></td>
                            <td>-</td>
                            <td><strong>@Model.Sum(s => s.TotalRevenue).ToString("C")</strong></td>
                            <td><strong>@Model.Sum(s => s.TransactionCount)</strong></td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No sales data available for the selected period</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Top Products Chart -->
        @if (Model.Any())
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h5>Top Products by Revenue</h5>
                </div>
                <div class="card-body">
                    <canvas id="topProductsChart" height="80"></canvas>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @if (Model.Any())
    {
        <script src="~/assets/vendor/libs/chartjs/chart.min.js"></script>
        <script>
            const topProducts = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Take(10).Select(p => new { p.ProductName, p.TotalRevenue })));

            const ctx = document.getElementById('topProductsChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: topProducts.map(p => p.productName),
                    datasets: [{
                        label: 'Revenue',
                        data: topProducts.map(p => p.totalRevenue),
                        backgroundColor: 'rgba(14, 165, 233, 0.8)',
                        borderColor: 'rgb(14, 165, 233)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function (value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
        </script>
    }
}
