@using PharmaCare.Domain.Models.Configuration
@model PharmaCare.Application.DTOs.Reports.PurchaseReportDto
@{
    ViewData["Title"] = "Purchase Report";
}

<div class="container-fluid flex-grow-1 p-0">
    <div class="row align-items-center mb-4">
        <div class="col-md-3">
            <h4 class="fw-bold mb-1"><i class='bx bx-purchase-tag text-success'></i> Purchase Report</h4>
            <p class="text-muted mb-0">@Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</p>
        </div>
        <div class="col-md-9">
            <div class="d-flex flex-wrap gap-3 align-items-center justify-content-end">
                <form class="d-flex gap-2 align-items-center" method="get">
                    <label class="form-label mb-0">Store:</label>
                    <div style="min-width: 300px;">
                        <select name="storeId" class="form-select form-select-lg">
                            @if (ViewBag.IsAdmin == true)
                            {
                                <option value="">All Stores</option>
                            }
                            @if (ViewBag.Stores != null)
                            {
                                foreach (var store in (IEnumerable<Store>)ViewBag.Stores)
                                {
                                    if (ViewBag.SelectedStoreId == store.StoreID)
                                    {
                                        <option value="@Utility.EncryptURL(store.StoreID.ToString2())" selected>@store.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@Utility.EncryptURL(store.StoreID.ToString2())">@store.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control form-control-lg" />
                    <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control form-control-lg" />
                    <button type="submit" class="btn btn-primary btn-sm" style="min-width: 100px;"><i class='bx bx-filter'></i> Filter</button>
                </form>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">Rs. @Model.TotalPurchases.ToString("N0")</h3>
                    <small class="text-muted">Total Purchases</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">@Model.TotalOrders</h3>
                    <small class="text-muted">Purchase Orders</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">@Model.TotalItemsReceived</h3>
                    <small class="text-muted">Items Received</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">@Model.BySupplier.Count</h3>
                    <small class="text-muted">Suppliers</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0"><i class='bx bx-store'></i> Purchases by Supplier</h5></div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead class="table-dark"><tr><th>Supplier</th><th>Orders</th><th class="text-end">Amount</th></tr></thead>
                        <tbody>
                            @foreach (var supplier in Model.BySupplier.Take(10))
                            {
                                <tr>
                                    <td>@supplier.SupplierName</td>
                                    <td>@supplier.OrderCount</td>
                                    <td class="text-end fw-bold">Rs. @supplier.TotalAmount.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0"><i class='bx bx-calendar'></i> Daily Purchases</h5></div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead class="table-dark"><tr><th>Date</th><th>Orders</th><th class="text-end">Amount</th></tr></thead>
                        <tbody>
                            @foreach (var day in Model.DailyPurchases.TakeLast(10))
                            {
                                <tr>
                                    <td>@day.Date.ToString("MMM dd")</td>
                                    <td>@day.OrderCount</td>
                                    <td class="text-end fw-bold">Rs. @day.TotalAmount.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
