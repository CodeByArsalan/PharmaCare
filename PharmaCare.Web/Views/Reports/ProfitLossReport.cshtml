@using PharmaCare.Domain.Models.Configuration
@model PharmaCare.Application.DTOs.Reports.ProfitLossDto
@{
    ViewData["Title"] = "Profit & Loss Report";
}

<div class="container-fluid flex-grow-1 p-0">
    <div class="row align-items-center mb-4">
        <div class="col-md-3">
            <h4 class="fw-bold mb-1"><i class='bx bx-line-chart text-success'></i> Profit & Loss Report</h4>
            <p class="text-muted mb-0">@Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</p>
        </div>
        <div class="col-md-9">
            <div class="d-flex flex-wrap gap-3 align-items-center justify-content-end">
                <form class="d-flex gap-2 align-items-center" method="get">
                    <label class="form-label mb-0">Store:</label>
                    <div style="min-width: 300px;">
                        <select name="storeId" class="form-select form-select-lg">
                            @if (ViewBag.IsAdmin == true)
                            {
                                <option value="">All Stores</option>
                            }
                            @if (ViewBag.Stores != null)
                            {
                                foreach (var store in (IEnumerable<Store>)ViewBag.Stores)
                                {
                                    if (ViewBag.SelectedStoreId == store.StoreID)
                                    {
                                        <option value="@Utility.EncryptURL(store.StoreID.ToString2())" selected>@store.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@Utility.EncryptURL(store.StoreID.ToString2())">@store.Name</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control form-control-lg" />
                    <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control form-control-lg" />
                    <button type="submit" class="btn btn-primary btn-lg" style="min-width: 100px;"><i class='bx bx-filter'></i> Filter</button>
                </form>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">Rs. @Model.TotalRevenue.ToString("N0")</h3>
                    <small class="text-muted">Total Revenue</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">Rs. @Model.CostOfGoodsSold.ToString("N0")</h3>
                    <small class="text-muted">Cost of Goods Sold</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">Rs. @Model.GrossProfit.ToString("N0")</h3>
                    <small class="text-muted">Gross Profit</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info bg-opacity-10 border-0">
                <div class="card-body text-center">
                    <h3 class="text-white fw-bold">@Model.GrossProfitMargin.ToString("N1")%</h3>
                    <small class="text-muted">Profit Margin</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0"><i class='bx bx-category'></i> Profit by Category</h5></div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead class="table-dark"><tr><th>Category</th><th>Revenue</th><th>Cost</th><th>Profit</th><th>Margin</th></tr></thead>
                        <tbody>
                            @foreach (var cat in Model.ByCategory)
                            {
                                <tr>
                                    <td><strong>@cat.Category</strong></td>
                                    <td>Rs. @cat.Revenue.ToString("N0")</td>
                                    <td>Rs. @cat.Cost.ToString("N0")</td>
                                    <td class="text-success fw-bold">Rs. @cat.Profit.ToString("N0")</td>
                                    <td><span class="badge bg-@(cat.Margin > 30 ? "success" : cat.Margin > 15 ? "warning" : "danger")">@cat.Margin.ToString("N1")%</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header"><h5 class="mb-0"><i class='bx bx-calendar'></i> Daily Profit Trend</h5></div>
                <div class="card-body">
                    <table class="table table-sm">
                        <thead class="table-dark"><tr><th>Date</th><th>Revenue</th><th>Cost</th><th>Profit</th></tr></thead>
                        <tbody>
                            @foreach (var day in Model.DailyProfit.TakeLast(14))
                            {
                                <tr>
                                    <td>@day.Date.ToString("MMM dd")</td>
                                    <td>Rs. @day.Revenue.ToString("N0")</td>
                                    <td>Rs. @day.Cost.ToString("N0")</td>
                                    <td class="@(day.Profit >= 0 ? "text-success" : "text-danger") fw-bold">Rs. @day.Profit.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
