@using PharmaCare.Domain.Models.Configuration
@model PharmaCare.Application.DTOs.Reports.InventoryReportDto

@{
    ViewData["Title"] = "Inventory Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Inventory Report</h3>
    </div>
    <div class="card-body">
        <!-- Filter Row -->
        <form method="get" asp-action="InventoryReport" class="mb-4">
            <div class="row mt-2 align-items-end">
                <div class="col-md-9">
                    <label class="form-label">Select Store</label>
                    <select name="storeId" class="form-select" onchange="this.form.submit()">
                        @if (ViewBag.IsAdmin == true)
                        {
                            <option value="">All Stores</option>
                        }
                        @if (ViewBag.Stores != null)
                        {
                            foreach (var store in (IEnumerable<Store>)ViewBag.Stores)
                            {
                                if (ViewBag.SelectedStoreId == store.StoreID)
                                {
                                    <option value="@Utility.EncryptURL(store.StoreID.ToString2())" selected>@store.Name
                                        (@store.Code)</option>
                                }
                                else
                                {
                                    <option value="@Utility.EncryptURL(store.StoreID.ToString2())">@store.Name (@store.Code)
                                    </option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Filter</button>
                </div>
            </div>
        </form>

        <!-- Summary Cards -->
        <div class="row mt-2 mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6>Total Products</h6>
                        <h3>@Model.TotalProducts</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h6>Low Stock Items</h6>
                        <h3>@Model.LowStockCount</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h6>Out of Stock</h6>
                        <h3>@Model.OutOfStockCount</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6>Total Stock Value</h6>
                        <h3>@Model.TotalStockValue.ToString("C")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Stock Alerts -->
        @if (Model.LowStockItems.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-warning">
                    <h5 class="text-white mb-0">‚ö†Ô∏è Low Stock Alerts</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Product Name</th>
                                <th>Current Stock</th>
                                <th>Reorder Level</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LowStockItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.CurrentStock</td>
                                    <td>@item.ReorderLevel</td>
                                    <td><span class="badge bg-warning">Low Stock</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        <!-- Expiring Items -->
        @if (Model.ExpiringItems.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-danger">
                    <h5 class="text-white mb-0">üìÖ Expiring Items (Next 90 Days)</h5>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Product Name</th>
                                <th>Batch Number</th>
                                <th>Expiry Date</th>
                                <th>Days Until Expiry</th>
                                <th>Quantity</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ExpiringItems)
                            {
                                var statusClass = item.DaysUntilExpiry <= 30 ? "bg-danger" : item.DaysUntilExpiry <= 60 ?
                                "bg-warning" : "bg-info";
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.BatchNumber</td>
                                    <td>@item.ExpiryDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.DaysUntilExpiry days</td>
                                    <td>@item.QuantityOnHand</td>
                                    <td><span class="badge @statusClass">
                                            @(item.DaysUntilExpiry <= 30 ? "Urgent" : item.DaysUntilExpiry <= 60 ? "Soon" :
                                                "Upcoming")
                                        </span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        <!-- Current Stock Levels -->
        <div class="card">
            <div class="card-header">
                <h5>Current Stock Levels</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Product Name</th>
                            <th>Store</th>
                            <th>Batch Number</th>
                            <th>Quantity</th>
                            <th>Expiry Date</th>
                            <th>Unit Price</th>
                            <th>Total Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.StockLevels.Any())
                        {
                            int i = 0;
                            @foreach (var stock in Model.StockLevels)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>@stock.ProductName</td>
                                    <td><span class="badge bg-label-info">@stock.StoreName</span></td>
                                    <td>@stock.BatchNumber</td>
                                    <td>@stock.QuantityOnHand</td>
                                    <td>@stock.ExpiryDate.ToString("dd MMM yyyy")</td>
                                    <td>@stock.UnitPrice.ToString("C")</td>
                                    <td>@stock.TotalValue.ToString("C")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">No stock data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
